{% extends 'base.html.twig' %}

{% block title %}Asignar Planificación{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Asignar Planificación: {{ planificacion.nombre }}</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label class="form-label"><strong>Selecciona los usuarios:</strong></label>
                {% for usuario in usuarios %}
                    <div class="form-check">
                        <input type="checkbox" name="usuarios[]" value="{{ usuario.id }}" id="usuario_{{ usuario.id }}" class="form-check-input">
                        <label for="usuario_{{ usuario.id }}" class="form-check-label">{{ usuario.username }}</label>
                    </div>
                {% endfor %}
            </div>
            
            <div class="alert alert-info mt-3">
                <strong>Nota:</strong> Si un usuario ya tiene una planificación, se reemplazará por esta.
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Asignar Planificación</button>
                <a href="{{ path('app_planificacion_semanal_show', {'id': planificacion.id}) }}" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

