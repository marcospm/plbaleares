{% extends 'base.html.twig' %}

{% block title %}Planificaciones Semanales{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4">
    <h1>Planificaciones Semanales</h1>
    <a href="{{ path('app_planificacion_semanal_new') }}" class="btn btn-primary">Nueva Planificación</a>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Filtros de Búsqueda</h5>
    </div>
    <div class="card-body">
        <form method="get" action="{{ path('app_planificacion_semanal_index') }}" class="row g-3">
            <div class="col-md-4">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" 
                       class="form-control" 
                       id="nombre" 
                       name="nombre" 
                       value="{{ filtroNombre }}" 
                       placeholder="Buscar por nombre...">
            </div>
            <div class="col-md-3">
                <label for="estado" class="form-label">Estado</label>
                <select class="form-control" id="estado" name="estado">
                    <option value="">Todos</option>
                    <option value="activa" {% if filtroEstado == 'activa' %}selected{% endif %}>Activa</option>
                    <option value="inactiva" {% if filtroEstado == 'inactiva' %}selected{% endif %}>Inactiva</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="usuario" class="form-label">Alumno Asignado</label>
                <select class="form-control" id="usuario" name="usuario">
                    <option value="">Todos</option>
                    {% for usuario in usuarios %}
                        <option value="{{ usuario.id }}" {% if filtroUsuario == usuario.id %}selected{% endif %}>
                            {{ usuario.username }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filtrar</button>
            </div>
            {% if filtroNombre or filtroEstado or filtroUsuario %}
                <div class="col-12">
                    <a href="{{ path('app_planificacion_semanal_index') }}" class="btn btn-sm btn-secondary">Limpiar Filtros</a>
                </div>
            {% endif %}
        </form>
    </div>
</div>

{% if planificaciones|length > 0 %}
    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Franjas</th>
                    <th>Usuarios</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for planificacion in planificaciones %}
                    <tr>
                        <td>{{ planificacion.id }}</td>
                        <td><strong>{{ planificacion.nombre }}</strong></td>
                        <td>{{ planificacion.descripcion|default('Sin descripción')|slice(0, 50) }}{% if planificacion.descripcion|length > 50 %}...{% endif %}</td>
                        <td>
                            <span class="badge badge-info">{{ planificacion.franjasHorarias|length }} franjas</span>
                        </td>
                        <td>
                            <span class="badge badge-secondary">N/A</span>
                        </td>
                        <td>
                            {% if planificacion.activa %}
                                <span class="badge badge-success">Activa</span>
                            {% else %}
                                <span class="badge badge-danger">Inactiva</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_planificacion_semanal_show', {'id': planificacion.id}) }}" class="btn btn-sm btn-info">Ver</a>
                            <a href="{{ path('app_planificacion_semanal_edit', {'id': planificacion.id}) }}" class="btn btn-sm btn-secondary">Editar</a>
                            <a href="{{ path('app_planificacion_semanal_asignar', {'id': planificacion.id}) }}" class="btn btn-sm btn-primary">Asignar</a>
                            <form method="post" action="{{ path('app_planificacion_semanal_delete', {'id': planificacion.id}) }}" style="display: inline-block;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta planificación?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planificacion.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay planificaciones registradas.</p>
        </div>
    </div>
{% endif %}

{% endblock %}

