{% extends 'base.html.twig' %}

{% block title %}Nuevo Examen PDF{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        select[multiple] {
            min-height: 150px;
        }
        select[multiple] option {
            padding: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Nuevo Examen PDF</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            {{ form_row(form.archivoPDF) }}
            {{ form_row(form.archivoRespuestas) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Crear Examen PDF</button>
                <a href="{{ path('app_examen_pdf_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}













