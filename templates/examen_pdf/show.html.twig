{% extends 'base.html.twig' %}

{% block title %}Ver Examen PDF{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1>{{ examenPDF.nombre }}</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_examen_pdf_edit', {'id': examenPDF.id}) }}" class="btn btn-warning">Editar</a>
            <a href="{{ path('app_examen_pdf_index') }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <strong>Temas:</strong>
            {% if examenPDF.temas|length > 0 %}
                {% for tema in examenPDF.temas %}
                    <span class="badge bg-info">{{ tema.nombre }}</span>
                {% endfor %}
            {% else %}
                <span class="text-muted">Sin temas asignados</span>
            {% endif %}
        </div>
        
        {% if examenPDF.descripcion %}
            <div class="mb-3">
                <strong>Descripción:</strong>
                <p>{{ examenPDF.descripcion|nl2br }}</p>
            </div>
        {% endif %}
        
        <div class="mb-3">
            <strong>Fecha de Subida:</strong> {{ examenPDF.fechaSubida|date('d/m/Y H:i') }}
        </div>
        
        <div class="mb-3">
            <strong>Archivo del Examen:</strong>
            <br>
            <a href="{{ examenPDF.rutaArchivo }}" target="_blank" class="btn btn-primary mt-2" rel="noopener noreferrer">
                Ver/Descargar PDF
            </a>
        </div>
        
        {% if examenPDF.rutaArchivoRespuestas %}
            <div class="mb-3">
                <strong>Plantilla de Respuestas:</strong>
                <br>
                <a href="{{ examenPDF.rutaArchivoRespuestas }}" target="_blank" class="btn btn-success mt-2" rel="noopener noreferrer" download>
                    Descargar Plantilla de Respuestas
                </a>
            </div>
        {% endif %}
        
        <div class="mt-4">
            <form method="post" action="{{ path('app_examen_pdf_delete', {'id': examenPDF.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este examen?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ examenPDF.id) }}">
                <button type="submit" class="btn btn-danger">Eliminar Examen PDF</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}













