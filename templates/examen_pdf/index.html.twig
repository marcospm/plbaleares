{% extends 'base.html.twig' %}

{% block title %}Exámenes PDF{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1>Exámenes PDF</h1>
        <a href="{{ path('app_examen_pdf_new') }}" class="btn btn-primary">Nuevo Examen PDF</a>
    </div>
    <div class="card-body">
        {% if temas|length > 0 %}
            <div class="mb-3">
                <label for="filtroTema" class="form-label">Filtrar por Tema:</label>
                <select id="filtroTema" class="form-control" onchange="filtrarPorTema(this.value)" style="max-width: 300px;">
                    <option value="0" {% if temaSeleccionado == 0 %}selected{% endif %}>Todos los temas</option>
                    {% for tema in temas %}
                        <option value="{{ tema.id }}" {% if temaSeleccionado == tema.id %}selected{% endif %}>{{ tema.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}

        {% if examenes|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Tema</th>
                            <th>Fecha de Subida</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for examen in examenes %}
                            <tr>
                                <td>
                                    <strong>{{ examen.nombre }}</strong>
                                    {% if examen.descripcion %}
                                        <br><small class="text-muted">{{ examen.descripcion|slice(0, 100) }}{% if examen.descripcion|length > 100 %}...{% endif %}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if examen.tema %}
                                        <span class="badge bg-info">{{ examen.tema.nombre }}</span>
                                    {% else %}
                                        <span class="text-muted">Sin tema</span>
                                    {% endif %}
                                </td>
                                <td>{{ examen.fechaSubida|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_examen_pdf_show', {'id': examen.id}) }}" class="btn btn-sm btn-info">Ver</a>
                                        <a href="{{ path('app_examen_pdf_edit', {'id': examen.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                                        <form method="post" action="{{ path('app_examen_pdf_delete', {'id': examen.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este examen?');" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ examen.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                No hay exámenes PDF disponibles. <a href="{{ path('app_examen_pdf_new') }}">Crear uno nuevo</a>
            </div>
        {% endif %}
    </div>
</div>

<script>
function filtrarPorTema(temaId) {
    const url = new URL(window.location.href);
    if (temaId == 0) {
        url.searchParams.delete('tema');
    } else {
        url.searchParams.set('tema', temaId);
    }
    window.location.href = url.toString();
}
</script>
{% endblock %}
