{% extends 'base.html.twig' %}

{% block title %}Convocatorias{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                margin: 0 -15px;
                padding: 0 15px;
            }
            
            .table {
                font-size: 0.8rem;
                min-width: 800px;
            }
            
            /* Ocultar columnas menos importantes en móvil */
            .table th:nth-child(1),
            .table td:nth-child(1),
            .table th:nth-child(4),
            .table td:nth-child(4) {
                display: none !important;
            }
            
            /* Columna de fechas - hacer más compacta */
            .table td:nth-child(5) {
                font-size: 0.8rem !important;
                padding: 0.5rem !important;
            }
            
            .table td:nth-child(5) > div {
                font-size: 0.8rem !important;
            }
            
            .table td:nth-child(5) div > div {
                margin-bottom: 0.25rem;
                word-wrap: break-word;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table .d-flex.gap-2 {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table .d-flex.gap-2 .btn,
            .table .d-flex.gap-2 form {
                width: 100%;
            }
            
            .table .d-flex.gap-2 form button {
                width: 100%;
            }
            
            /* Badges responsive */
            .table .badge {
                font-size: 0.75rem;
                padding: 0.4rem 0.6rem;
                word-wrap: break-word;
                display: inline-block;
                margin: 0.25rem 0;
            }
            
            /* Mensaje sin recursos */
            .card-body.text-center .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
                margin-top: 0.75rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Convocatorias</h1>
    <a href="{{ path('app_convocatoria_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nueva Convocatoria</a>
</div>

{% if convocatorias|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Municipio</th>
                    <th>Alumnos Asignados</th>
                    <th>Fechas</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for convocatoria in convocatorias %}
                    <tr>
                        <td>{{ convocatoria.id }}</td>
                        <td><strong>{{ convocatoria.nombre }}</strong></td>
                        <td>
                            {% for municipio in convocatoria.municipios %}
                                <span class="badge" style="background-color: #2196F3; margin-right: 0.25rem;">{{ municipio.nombre }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <span class="badge badge-moderada">{{ convocatoria.usuarios|length }} alumno(s)</span>
                        </td>
                        <td>
                            <div style="font-size: 0.85rem;">
                                <div>
                                    <strong>Teórico:</strong> 
                                    {% if convocatoria.fechaTeorico %}
                                        {{ convocatoria.fechaTeorico|date('d/m/Y') }}
                                    {% else %}
                                        <span style="color: #999; font-style: italic;">Pendiente</span>
                                    {% endif %}
                                </div>
                                <div>
                                    <strong>Físicas:</strong> 
                                    {% if convocatoria.fechaFisicas %}
                                        {{ convocatoria.fechaFisicas|date('d/m/Y') }}
                                    {% else %}
                                        <span style="color: #999; font-style: italic;">Pendiente</span>
                                    {% endif %}
                                </div>
                                <div>
                                    <strong>Psicotécnico:</strong> 
                                    {% if convocatoria.fechaPsicotecnico %}
                                        {{ convocatoria.fechaPsicotecnico|date('d/m/Y') }}
                                    {% else %}
                                        <span style="color: #999; font-style: italic;">Pendiente</span>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if convocatoria.isActivo %}
                                <span class="badge badge-success" style="background-color: var(--color-success);">Activa</span>
                            {% else %}
                                <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactiva</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_convocatoria_show', {'id': convocatoria.id}) }}" class="btn btn-secondary btn-sm">Ver</a>
                                <a href="{{ path('app_convocatoria_edit', {'id': convocatoria.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                                <a href="{{ path('app_convocatoria_asignar_alumnos', {'id': convocatoria.id}) }}" class="btn btn-info btn-sm">Asignar Alumnos</a>
                                <form method="post" action="{{ path('app_convocatoria_toggle_activo', {'id': convocatoria.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ convocatoria.id) }}">
                                    <button type="submit" class="btn btn-sm {% if convocatoria.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                        {% if convocatoria.isActivo %}Desactivar{% else %}Activar{% endif %}
                                    </button>
                                </form>
                                <form method="post" action="{{ path('app_convocatoria_delete', {'id': convocatoria.id}) }}" style="display: inline;" onsubmit="return confirm('¿Estás seguro de eliminar esta convocatoria?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ convocatoria.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay convocatorias registradas aún.</p>
            <a href="{{ path('app_convocatoria_new') }}" class="btn btn-primary">Crear Primera Convocatoria</a>
        </div>
    </div>
{% endif %}
{% endblock %}

