{% extends 'base.html.twig' %}

{% block title %}Convocatoria: {{ convocatoria.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>{{ convocatoria.nombre }}</h1>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="form-label"><strong>Municipios:</strong></label>
            <p>
                {% for municipio in convocatoria.municipios %}
                    <span class="badge" style="background-color: #2196F3; margin-right: 0.5rem;">{{ municipio.nombre }}</span>
                {% endfor %}
            </p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Estado:</strong></label>
            <p>
                {% if convocatoria.isActivo %}
                    <span class="badge badge-success" style="background-color: var(--color-success);">Activa</span>
                {% else %}
                    <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactiva</span>
                {% endif %}
            </p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Fechas:</strong></label>
            <div>
                <p>
                    <strong>Examen Teórico:</strong> 
                    {% if convocatoria.fechaTeorico %}
                        {{ convocatoria.fechaTeorico|date('d/m/Y') }}
                    {% else %}
                        <span style="color: #999; font-style: italic;">Pendiente</span>
                    {% endif %}
                </p>
                <p>
                    <strong>Pruebas Físicas:</strong> 
                    {% if convocatoria.fechaFisicas %}
                        {{ convocatoria.fechaFisicas|date('d/m/Y') }}
                    {% else %}
                        <span style="color: #999; font-style: italic;">Pendiente</span>
                    {% endif %}
                </p>
                <p>
                    <strong>Psicotécnico:</strong> 
                    {% if convocatoria.fechaPsicotecnico %}
                        {{ convocatoria.fechaPsicotecnico|date('d/m/Y') }}
                    {% else %}
                        <span style="color: #999; font-style: italic;">Pendiente</span>
                    {% endif %}
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Alumnos Asignados:</strong></label>
            <p>
                <span class="badge badge-moderada">{{ convocatoria.usuarios|length }} alumno(s)</span>
            </p>
            {% if convocatoria.usuarios|length > 0 %}
                <ul>
                    {% for usuario in convocatoria.usuarios %}
                        <li>{{ usuario.nombreDisplay }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Fecha de Creación:</strong></label>
            <p>{{ convocatoria.fechaCreacion|date('d/m/Y H:i') }}</p>
        </div>

        <div class="d-flex gap-2 mt-4">
            <a href="{{ path('app_convocatoria_edit', {'id': convocatoria.id}) }}" class="btn btn-primary">Editar</a>
            <a href="{{ path('app_convocatoria_asignar_alumnos', {'id': convocatoria.id}) }}" class="btn btn-info">Asignar Alumnos</a>
            <a href="{{ path('app_convocatoria_index') }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
{% endblock %}

