                                        </li>
                                        {% if startPageMunicipal > 2 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                    {% endif %}
                                    
                                    {% for p in startPageMunicipal..endPageMunicipal %}
                                        <li class="page-item {% if p == currentPageMunicipal %}active{% endif %}">
                                            {% if p > 1 %}
                                                {% set paramsPage = paramsBaseMunicipal|merge({'page_municipal': p})|filter(v => v != '') %}
                                                <a class="page-link" href="{{ path('app_examen_profesor', paramsPage) }}">{{ p }}</a>
                                            {% else %}
                                                {% set paramsPage = paramsBaseMunicipal|filter(v => v != '' and v != 'page_municipal') %}
                                                <a class="page-link" href="{{ path('app_examen_profesor', paramsPage) }}">{{ p }}</a>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                    
                                    {% if endPageMunicipal < totalPagesMunicipal %}
                                        {% if endPageMunicipal < totalPagesMunicipal - 1 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                        <li class="page-item">
                                            {% set paramsLast = paramsBaseMunicipal|merge({'page_municipal': totalPagesMunicipal})|filter(v => v != '') %}
