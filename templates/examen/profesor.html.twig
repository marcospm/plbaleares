                                        'usuario': usuarioSeleccionado ? usuarioSeleccionado : '',
                                        'dificultad': dificultadSeleccionada ? dificultadSeleccionada : '',
                                        'tema': temaSeleccionado ? temaSeleccionado.id : '',
                                        'page_general': currentPageGeneral > 1 ? currentPageGeneral : ''
                                    } %}
                                    {% set paramsBaseMunicipal = paramsBaseMunicipal|filter(v => v != '' and v != 0) %}
                                    
                                    {# Bot√≥n Anterior #}
