                                            {% set paramsNext = paramsBaseMunicipal|merge({'page_municipal': currentPageMunicipal + 1})|filter(v => v != '') %}
                                            <a class="page-link" href="{{ path('app_examen_profesor', paramsNext) }}">
                                        {% else %}
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        {% endif %}
                                            Siguiente ‚Üí
                                        </a>
