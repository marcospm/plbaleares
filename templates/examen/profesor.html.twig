{% extends 'base.html.twig' %}

{% block title %}Ex√°menes de Alumnos{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Ex√°menes de Alumnos</h1>
    </div>
    <div class="card-body">
        <p style="margin-bottom: 2rem; color: var(--color-text-light);">
            Visualiza y gestiona todos los ex√°menes realizados por los alumnos. Puedes filtrar por alumno y dificultad.
        </p>

        {# Filtros #}
        <div class="card" style="margin-bottom: 2rem; background-color: #f8f9fa;">
            <div class="card-body">
                <form method="GET" action="{{ path('app_examen_profesor') }}" style="display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 1rem; align-items: end;">
                    <div>
                        <label for="usuario" class="form-label">Filtrar por Alumno:</label>
                        <select name="usuario" id="usuario" class="form-control">
                            <option value="">Todos los alumnos</option>
                            {% for usuario in usuarios %}
                                <option value="{{ usuario.id }}" {% if usuarioSeleccionado == usuario.id %}selected{% endif %}>
                                    {{ usuario.username }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label for="dificultad" class="form-label">Filtrar por Dificultad:</label>
                        <select name="dificultad" id="dificultad" class="form-control">
                            <option value="">Todas las dificultades</option>
                            <option value="facil" {% if dificultadSeleccionada == 'facil' %}selected{% endif %}>F√°cil</option>
                            <option value="moderada" {% if dificultadSeleccionada == 'moderada' %}selected{% endif %}>Moderada</option>
                            <option value="dificil" {% if dificultadSeleccionada == 'dificil' %}selected{% endif %}>Dif√≠cil</option>
                        </select>
                    </div>
                    <div>
                        <label for="tema" class="form-label">Filtrar por Tema (Temario General):</label>
                        <select name="tema" id="tema" class="form-control">
                            <option value="">Todos los temas</option>
                            {% for tema in temas %}
                                <option value="{{ tema.id }}" {% if temaSeleccionado and temaSeleccionado.id == tema.id %}selected{% endif %}>
                                    {{ tema.nombre }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if temaSeleccionado %}
                            <small class="form-text text-muted">Solo ex√°menes √≠ntegros de este tema</small>
                        {% endif %}
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                        <a href="{{ path('app_examen_profesor') }}" class="btn btn-secondary">Limpiar</a>
                    </div>
                </form>
            </div>
        </div>

        {# Tabla de Ex√°menes - Temario General #}
        <div class="card" style="margin-bottom: 2rem;">
            <div class="card-header" style="background-color: var(--color-primary); color: white;">
                <h2 style="margin: 0; color: white;">üìö Ex√°menes - Temario General{% if temaSeleccionado %} - {{ temaSeleccionado.nombre }}{% endif %}</h2>
            </div>
            <div class="card-body">
                {% if temaSeleccionado %}
                    <div style="margin-bottom: 1rem; padding: 0.75rem; background-color: #e3f2fd; border-radius: 4px; border-left: 4px solid var(--color-primary);">
                        <strong>‚ÑπÔ∏è Nota:</strong> Solo se muestran ex√°menes √≠ntegramente del tema <strong>{{ temaSeleccionado.nombre }}</strong> (ex√°menes que contienen √∫nicamente este tema).
                    </div>
                {% endif %}
                
                {% if examenesGeneral|length > 0 %}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Alumno</th>
                                <th>Temas</th>
                                <th>Dificultad</th>
                                <th>Preguntas</th>
                                <th>Nota</th>
                                <th>Aciertos</th>
                                <th>Errores</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for examen in examenesGeneral %}
                                <tr>
                                    <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <strong>{{ examen.usuario.username }}</strong>
                                    </td>
                                    <td>
                                        {% for tema in examen.temas %}
                                            <span class="badge badge-facil">{{ tema.nombre }}</span>
                                        {% endfor %}
                                    </td>
                                    <td><span class="badge badge-{{ examen.dificultad }}">{{ examen.getDificultadLabel() }}</span></td>
                                    <td>{{ examen.numeroPreguntas }}</td>
                                    <td>
                                        <strong style="font-size: 1.2rem; color: {% if examen.nota >= 10 %}var(--color-success){% else %}var(--color-danger){% endif %};">
                                            {{ examen.nota|number_format(2, ',', '.') }}
                                        </strong>
                                    </td>
                                    <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                                    <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                    <td>
                                        <a href="{{ path('app_examen_detalle', {'id': examen.id}) }}" class="btn btn-sm btn-primary">Ver Detalle</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="text-center" style="padding: 2rem;">
                        <p style="font-size: 1.1rem; color: #666;">No se encontraron ex√°menes del temario general con los filtros seleccionados.</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Tabla de Ex√°menes - Municipios #}
        <div class="card">
            <div class="card-header" style="background-color: #2196F3; color: white;">
                <h2 style="margin: 0; color: white;">üèõÔ∏è Ex√°menes - Municipios</h2>
            </div>
            <div class="card-body">
                {% if examenesMunicipal|length > 0 %}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Alumno</th>
                                <th>Municipio</th>
                                <th>Temas Municipales</th>
                                <th>Dificultad</th>
                                <th>Preguntas</th>
                                <th>Nota</th>
                                <th>Aciertos</th>
                                <th>Errores</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for examen in examenesMunicipal %}
                                <tr>
                                    <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <strong>{{ examen.usuario.username }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: #2196F3;">{{ examen.municipio.nombre }}</span>
                                    </td>
                                    <td>
                                        {% for temaMunicipal in examen.temasMunicipales %}
                                            <span class="badge badge-facil">{{ temaMunicipal.nombre }}</span>
                                        {% endfor %}
                                    </td>
                                    <td><span class="badge badge-{{ examen.dificultad }}">{{ examen.getDificultadLabel() }}</span></td>
                                    <td>{{ examen.numeroPreguntas }}</td>
                                    <td>
                                        <strong style="font-size: 1.2rem; color: {% if examen.nota >= 10 %}var(--color-success){% else %}var(--color-danger){% endif %};">
                                            {{ examen.nota|number_format(2, ',', '.') }}
                                        </strong>
                                    </td>
                                    <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                                    <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                    <td>
                                        <a href="{{ path('app_examen_detalle', {'id': examen.id}) }}" class="btn btn-sm btn-primary">Ver Detalle</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="text-center" style="padding: 2rem;">
                        <p style="font-size: 1.1rem; color: #666;">No se encontraron ex√°menes municipales con los filtros seleccionados.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

