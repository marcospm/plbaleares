                                        {% endif %}
                                            ‚Üê Anterior
                                        </a>
                                    </li>
                                    
                                    {# N√∫meros de p√°gina #}
                                    {% set startPageMunicipal = max(1, currentPageMunicipal - 2) %}
                                    {% set endPageMunicipal = min(totalPagesMunicipal, currentPageMunicipal + 2) %}
                                    
                                    {% if startPageMunicipal > 1 %}
                                        <li class="page-item">
                                            {% set paramsFirst = paramsBaseMunicipal|filter(v => v != '') %}
