{% extends 'base.html.twig' %}

{% block title %}Historial de Ex√°menes{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4">
    <h1>Historial de Ex√°menes</h1>
    <a href="{{ path('app_examen_iniciar') }}" class="btn btn-primary">Nuevo Examen</a>
</div>

{# Secci√≥n de Ranking General #}
{% if rankings %}
    <div class="card" style="margin-bottom: 2rem;">
        <div class="card-header">
            <h2>üèÜ Ranking por Dificultad{% if temaSeleccionado %} - {{ temaSeleccionado.nombre }}{% else %} (Todos los Temas){% endif %}</h2>
        </div>
        <div class="card-body">
            <div style="margin-bottom: 1rem; display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                <div>
                    <label for="cantidad-select" style="margin-right: 0.5rem;">Calcular ranking con los √∫ltimos:</label>
                    <select id="cantidad-select" class="form-control" style="display: inline-block; width: auto;" onchange="actualizarRanking()">
                        <option value="2" {% if cantidad == 2 %}selected{% endif %}>2 ex√°menes</option>
                        <option value="3" {% if cantidad == 3 %}selected{% endif %}>3 ex√°menes</option>
                        <option value="4" {% if cantidad == 4 %}selected{% endif %}>4 ex√°menes</option>
                        <option value="5" {% if cantidad == 5 %}selected{% endif %}>5 ex√°menes</option>
                        <option value="10" {% if cantidad == 10 %}selected{% endif %}>10 ex√°menes</option>
                    </select>
                </div>
                <div>
                    <label for="tema-select" style="margin-right: 0.5rem;">Filtrar por tema:</label>
                    <select id="tema-select" class="form-control" style="display: inline-block; width: auto; min-width: 200px;" onchange="actualizarRanking()">
                        <option value="">Todos los temas</option>
                        {% for tema in temas %}
                            <option value="{{ tema.id }}" {% if temaSeleccionado and temaSeleccionado.id == tema.id %}selected{% endif %}>{{ tema.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            {% if temaSeleccionado %}
                <div style="margin-bottom: 1rem; padding: 0.75rem; background-color: #e3f2fd; border-radius: 4px; border-left: 4px solid var(--color-primary);">
                    <strong>‚ÑπÔ∏è Nota:</strong> Solo se muestran rankings de ex√°menes √≠ntegramente del tema <strong>{{ temaSeleccionado.nombre }}</strong> (ex√°menes que contienen √∫nicamente este tema).
                </div>
            {% endif %}

            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
                {% for dificultad, ranking in rankings %}
                    <div class="card">
                        <div class="card-header">
                            <h3 style="margin: 0;">
                                {% if dificultad == 'facil' %}F√°cil
                                {% elseif dificultad == 'moderada' %}Moderada
                                {% else %}Dif√≠cil
                                {% endif %}
                            </h3>
                        </div>
                        <div class="card-body">
                            {% if ranking|length > 0 %}
                                <div style="max-height: 400px; overflow-y: auto;">
                                    {% for index, entry in ranking %}
                                        {% set esUsuarioActual = entry.usuario.id == usuarioActual.id %}
                                        <div style="padding: 0.75rem; margin-bottom: 0.5rem; border-radius: 4px; {% if esUsuarioActual %}background-color: #e3f2fd; border: 2px solid var(--color-primary); font-weight: bold;{% else %}background-color: #f8f9fa; border: 1px solid #ddd;{% endif %}">
                                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                                <div>
                                                    <span style="font-size: 1.2rem; color: {% if index == 0 %}#ffd700{% elseif index == 1 %}#c0c0c0{% elseif index == 2 %}#cd7f32{% else %}#666{% endif %};">
                                                        {% if index == 0 %}ü•á
                                                        {% elseif index == 1 %}ü•à
                                                        {% elseif index == 2 %}ü•â
                                                        {% else %}#{{ index + 1 }}
                                                        {% endif %}
                                                    </span>
                                                    <span style="margin-left: 0.5rem;">
                                                        {% if esUsuarioActual %}
                                                            {{ entry.usuario.username }}
                                                        {% else %}
                                                            {{ ofuscar_nombre(entry.usuario.id) }}
                                                        {% endif %}
                                                    </span>
                                                    {% if esUsuarioActual %}
                                                        <span class="badge bg-primary" style="margin-left: 0.5rem;">T√∫</span>
                                                    {% endif %}
                                                </div>
                                                <div style="text-align: right;">
                                                    <div style="font-size: 1.1rem; font-weight: bold; color: var(--color-primary);">
                                                        {{ entry.notaMedia|number_format(2, ',', '.') }}
                                                    </div>
                                                    <div style="font-size: 0.75rem; color: #666;">
                                                        ({{ entry.cantidadExamenes }} exam.)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                
                                {% if posicionesUsuario[dificultad].posicion %}
                                    <div style="margin-top: 1rem; padding: 1rem; background-color: #f0f7ff; border-radius: 4px; text-align: center;">
                                        <div style="font-size: 0.9rem; color: #666; margin-bottom: 0.25rem;">Tu posici√≥n:</div>
                                        <div style="font-size: 1.5rem; font-weight: bold; color: var(--color-primary);">
                                            {{ posicionesUsuario[dificultad].posicion }}/{{ posicionesUsuario[dificultad].totalUsuarios }}
                                        </div>
                                        {% if posicionesUsuario[dificultad].notaMedia %}
                                            <div style="font-size: 0.85rem; color: #666; margin-top: 0.25rem;">
                                                Nota media: {{ posicionesUsuario[dificultad].notaMedia|number_format(2, ',', '.') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% else %}
                                <p style="text-align: center; color: #999;">No hay ex√°menes de esta dificultad</p>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}

{# Secci√≥n de Rankings por Municipio #}
{% if rankingsPorMunicipio|length > 0 %}
    {% for municipioId, datosMunicipio in rankingsPorMunicipio %}
        <div class="card" style="margin-bottom: 2rem;">
            <div class="card-header" style="background-color: #2196F3; color: white;">
                <h2>üèÜ Ranking por Dificultad - {{ datosMunicipio.municipio.nombre }}{% if temaMunicipalSeleccionado and temaMunicipalSeleccionado in datosMunicipio.temasMunicipales %} - {{ temaMunicipalSeleccionado.nombre }}{% else %} (Todos los Temas){% endif %}</h2>
            </div>
            <div class="card-body">
                <div style="margin-bottom: 1rem; display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                    <div>
                        <label for="cantidad-select-municipio-{{ municipioId }}" style="margin-right: 0.5rem;">Calcular ranking con los √∫ltimos:</label>
                        <select id="cantidad-select-municipio-{{ municipioId }}" class="form-control" style="display: inline-block; width: auto;" onchange="actualizarRankingMunicipio({{ municipioId }})">
                            <option value="2" {% if cantidad == 2 %}selected{% endif %}>2 ex√°menes</option>
                            <option value="3" {% if cantidad == 3 %}selected{% endif %}>3 ex√°menes</option>
                            <option value="4" {% if cantidad == 4 %}selected{% endif %}>4 ex√°menes</option>
                            <option value="5" {% if cantidad == 5 %}selected{% endif %}>5 ex√°menes</option>
                            <option value="10" {% if cantidad == 10 %}selected{% endif %}>10 ex√°menes</option>
                        </select>
                    </div>
                    <div>
                        <label for="tema-municipal-select-{{ municipioId }}" style="margin-right: 0.5rem;">Filtrar por tema municipal:</label>
                        <select id="tema-municipal-select-{{ municipioId }}" class="form-control" style="display: inline-block; width: auto; min-width: 200px;" onchange="actualizarRankingMunicipio({{ municipioId }})">
                            <option value="">Todos los temas</option>
                            {% for temaMunicipal in datosMunicipio.temasMunicipales %}
                                <option value="{{ temaMunicipal.id }}" {% if temaMunicipalSeleccionado and temaMunicipalSeleccionado.id == temaMunicipal.id %}selected{% endif %}>{{ temaMunicipal.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                {% if temaMunicipalSeleccionado and temaMunicipalSeleccionado in datosMunicipio.temasMunicipales %}
                    <div style="margin-bottom: 1rem; padding: 0.75rem; background-color: #e3f2fd; border-radius: 4px; border-left: 4px solid #2196F3;">
                        <strong>‚ÑπÔ∏è Nota:</strong> Solo se muestran rankings de ex√°menes √≠ntegramente del tema <strong>{{ temaMunicipalSeleccionado.nombre }}</strong> (ex√°menes que contienen √∫nicamente este tema).
                    </div>
                {% endif %}

                <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
                    {% for dificultad, ranking in datosMunicipio.rankings %}
                        <div class="card">
                            <div class="card-header">
                                <h3 style="margin: 0;">
                                    {% if dificultad == 'facil' %}F√°cil
                                    {% elseif dificultad == 'moderada' %}Moderada
                                    {% else %}Dif√≠cil
                                    {% endif %}
                                </h3>
                            </div>
                            <div class="card-body">
                                {% if ranking|length > 0 %}
                                    <div style="max-height: 400px; overflow-y: auto;">
                                        {% for index, entry in ranking %}
                                            {% set esUsuarioActual = entry.usuario.id == usuarioActual.id %}
                                            <div style="padding: 0.75rem; margin-bottom: 0.5rem; border-radius: 4px; {% if esUsuarioActual %}background-color: #e3f2fd; border: 2px solid #2196F3; font-weight: bold;{% else %}background-color: #f8f9fa; border: 1px solid #ddd;{% endif %}">
                                                <div style="display: flex; justify-content: space-between; align-items: center;">
                                                    <div>
                                                        <span style="font-size: 1.2rem; color: {% if index == 0 %}#ffd700{% elseif index == 1 %}#c0c0c0{% elseif index == 2 %}#cd7f32{% else %}#666{% endif %};">
                                                            {% if index == 0 %}ü•á
                                                            {% elseif index == 1 %}ü•à
                                                            {% elseif index == 2 %}ü•â
                                                            {% else %}#{{ index + 1 }}
                                                            {% endif %}
                                                        </span>
                                                        <span style="margin-left: 0.5rem;">
                                                            {% if esUsuarioActual %}
                                                                {{ entry.usuario.username }}
                                                            {% else %}
                                                                {{ ofuscar_nombre(entry.usuario.id) }}
                                                            {% endif %}
                                                        </span>
                                                        {% if esUsuarioActual %}
                                                            <span class="badge" style="background-color: #2196F3; margin-left: 0.5rem;">T√∫</span>
                                                        {% endif %}
                                                    </div>
                                                    <div style="text-align: right;">
                                                        <div style="font-size: 1.1rem; font-weight: bold; color: #2196F3;">
                                                            {{ entry.notaMedia|number_format(2, ',', '.') }}
                                                        </div>
                                                        <div style="font-size: 0.75rem; color: #666;">
                                                            ({{ entry.cantidadExamenes }} exam.)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    {% if datosMunicipio.posiciones[dificultad].posicion %}
                                        <div style="margin-top: 1rem; padding: 1rem; background-color: #e3f2fd; border-radius: 4px; text-align: center;">
                                            <div style="font-size: 0.9rem; color: #666; margin-bottom: 0.25rem;">Tu posici√≥n:</div>
                                            <div style="font-size: 1.5rem; font-weight: bold; color: #2196F3;">
                                                {{ datosMunicipio.posiciones[dificultad].posicion }}/{{ datosMunicipio.posiciones[dificultad].totalUsuarios }}
                                            </div>
                                            {% if datosMunicipio.posiciones[dificultad].notaMedia %}
                                                <div style="font-size: 0.85rem; color: #666; margin-top: 0.25rem;">
                                                    Nota media: {{ datosMunicipio.posiciones[dificultad].notaMedia|number_format(2, ',', '.') }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <p style="text-align: center; color: #999;">No hay ex√°menes de esta dificultad</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}

{% if examenes|length > 0 %}
    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Temas</th>
                    <th>Dificultad</th>
                    <th>Preguntas</th>
                    <th>Nota</th>
                    <th>Aciertos</th>
                    <th>Errores</th>
                    <th>En blanco</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for examen in examenes %}
                    <tr>
                        <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if examen.municipio %}
                                <span class="badge" style="background-color: #2196F3; margin-bottom: 0.25rem; display: block;">{{ examen.municipio.nombre }}</span>
                                {% for temaMunicipal in examen.temasMunicipales %}
                                    {% set nombreTema = temaMunicipal.nombre|trim %}
                                    {% set nombreTruncado = nombreTema|length > 20 ? nombreTema|slice(0, 20) ~ '...' : nombreTema %}
                                    <span class="badge badge-facil tema-tooltip" style="cursor: pointer;" data-tema-nombre="{{ nombreTema }}" onclick="mostrarTemaCompleto('{{ nombreTema|e('js') }}')">{{ nombreTruncado }}</span>
                                {% endfor %}
                            {% else %}
                                {% for tema in examen.temas %}
                                    {% set nombreTema = tema.nombre|trim %}
                                    {% set nombreTruncado = nombreTema|length > 20 ? nombreTema|slice(0, 20) ~ '...' : nombreTema %}
                                    <span class="badge badge-facil tema-tooltip" style="cursor: pointer;" data-tema-nombre="{{ nombreTema }}" onclick="mostrarTemaCompleto('{{ nombreTema|e('js') }}')">{{ nombreTruncado }}</span>
                                {% endfor %}
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-{{ examen.dificultad }}">{{ examen.getDificultadLabel() }}</span>
                            {% if examen.municipio %}
                                <br><small style="color: #2196F3; font-size: 0.75rem;">Municipal</small>
                            {% endif %}
                        </td>
                        <td>{{ examen.numeroPreguntas }}</td>
                        <td><strong style="font-size: 1.2rem; color: var(--color-primary);">{{ examen.nota|number_format(2, ',', '.') }}</strong></td>
                        <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                        <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                        <td style="color: #999;"><strong>{{ examen.enBlanco }}</strong></td>
                        <td>
                            <a href="{{ path('app_examen_detalle', {'id': examen.id}) }}" class="btn btn-secondary btn-sm">Ver Detalle</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No has realizado ning√∫n examen a√∫n.</p>
            <a href="{{ path('app_examen_iniciar') }}" class="btn btn-primary">Realizar Primer Examen</a>
        </div>
    </div>
{% endif %}

<script>
function actualizarRanking() {
    const cantidad = document.getElementById('cantidad-select').value;
    const tema = document.getElementById('tema-select').value;
    let url = '{{ path('app_examen_historial') }}?cantidad=' + cantidad;
    if (tema) {
        url += '&tema=' + tema;
    }
    window.location.href = url;
}

function actualizarRankingMunicipio(municipioId) {
    const cantidad = document.getElementById('cantidad-select-municipio-' + municipioId).value;
    const temaMunicipal = document.getElementById('tema-municipal-select-' + municipioId).value;
    let url = '{{ path('app_examen_historial') }}?cantidad=' + cantidad + '&municipio=' + municipioId;
    if (temaMunicipal) {
        url += '&tema_municipal=' + temaMunicipal;
    }
    // Mantener filtro de tema general si existe
    const temaGeneral = document.getElementById('tema-select');
    if (temaGeneral && temaGeneral.value) {
        url += '&tema=' + temaGeneral.value;
    }
    window.location.href = url;
}
</script>
{% endblock %}

