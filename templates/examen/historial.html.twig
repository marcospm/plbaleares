                                        <th>Aciertos</th>
                                        <th>Errores</th>
                                        <th>En blanco</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for examen in examenesConvocatoria %}
                                        <tr>
                                            <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                                            <td>
                                                <span class="badge badge-{{ examen.dificultad }}">{{ examen.getDificultadLabel() }}</span>
                                            </td>
                                            <td>
                                                {% if examen.municipio %}
                                                    <span style="color: #9C27B0; font-weight: bold;">{{ examen.municipio.nombre }}</span>
                                                {% else %}
                                                    <span style="color: #999;">-</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ examen.numeroPreguntas }}</td>
                                            <td><strong style="font-size: 1.2rem; color: #9C27B0;">{{ examen.nota|number_format(2, ',', '.') }}</strong></td>
                                            <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
