<script>
function actualizarRankingGeneral() {
    const cantidad = document.getElementById('cantidad-select-general').value;
    const tema = document.getElementById('tema-select-general').value;
    let url = '{{ path('app_examen_historial') }}?cantidad=' + cantidad;
    if (tema) {
        url += '&tema=' + tema;
    }
    // Preservar p√°gina actual si existe
    const urlParams = new URLSearchParams(window.location.search);
    const pageGeneral = urlParams.get('page_general');
    if (pageGeneral && pageGeneral > 1) {
        url += '&page_general=' + pageGeneral;
    }
    window.location.href = url;
}

function actualizarRankingConvocatoria(convocatoriaId) {
    const cantidad = document.getElementById('cantidad-select-convocatoria-' + convocatoriaId).value;
    const municipio = document.getElementById('municipio-select-convocatoria-' + convocatoriaId).value;
    let url = '{{ path('app_examen_historial') }}?cantidad=' + cantidad + '&convocatoria=' + convocatoriaId;
    if (municipio) {
        url += '&municipio=' + municipio;
    }
    // Mantener filtro de tema general si existe
    const temaGeneral = document.getElementById('tema-select-general');
    if (temaGeneral && temaGeneral.value) {
        url += '&tema=' + temaGeneral.value;
    }
    window.location.href = url;
}
</script>
