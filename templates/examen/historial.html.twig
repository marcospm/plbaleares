                                    <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                    <td style="color: #999;"><strong>{{ examen.enBlanco }}</strong></td>
                                    <td>
                                        <a href="{{ path('app_examen_detalle', {'id': examen.id}) }}" class="btn btn-secondary btn-sm">Ver Detalle</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Paginaci√≥n #}
                {% if totalPagesGeneral > 1 %}
                    <div style="margin-top: 1.5rem; padding: 1rem; background-color: #f8f9fa; border-radius: 4px;">
                        <nav aria-label="Paginaci√≥n de ex√°menes del temario general">
                            <ul class="pagination justify-content-center mb-0" style="flex-wrap: wrap;">
                                {% set paramsBaseGeneral = {
                                    'cantidad': cantidad > 3 ? cantidad : '',
                                    'tema': temaSeleccionado ? temaSeleccionado.id : '',
                                    'convocatoria': convocatoriaSeleccionada ? convocatoriaSeleccionada.id : '',
                                    'municipio': municipioSeleccionado ? municipioSeleccionado.id : ''
                                } %}
                                {% set paramsBaseGeneral = paramsBaseGeneral|filter(v => v != '' and v != 0) %}
                                
                                {# Bot√≥n Anterior #}
                                <li class="page-item {% if currentPageGeneral == 1 %}disabled{% endif %}">
                                    {% if currentPageGeneral > 1 %}
                                        {% set pageAnteriorGeneral = currentPageGeneral - 1 %}
                                        {% if pageAnteriorGeneral > 1 %}
                                            {% set paramsAnteriorGeneral = paramsBaseGeneral|merge({'page_general': pageAnteriorGeneral}) %}
                                        {% else %}
                                            {% set paramsAnteriorGeneral = paramsBaseGeneral %}
                                        {% endif %}
                                        <a class="page-link" href="{{ path('app_examen_historial', paramsAnteriorGeneral) }}">
                                    {% else %}
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    {% endif %}
                                        ‚Üê Anterior
                                    </a>
                                </li>
                                
                                {# N√∫meros de p√°gina #}
                                {% set startPageGeneral = max(1, currentPageGeneral - 2) %}
                                {% set endPageGeneral = min(totalPagesGeneral, currentPageGeneral + 2) %}
                                
                                {% if startPageGeneral > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_examen_historial', paramsBaseGeneral) }}">1</a>
                                    </li>
                                    {% if startPageGeneral > 2 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}
                                
                                {% for p in startPageGeneral..endPageGeneral %}
                                    <li class="page-item {% if p == currentPageGeneral %}active{% endif %}">
                                        {% if p > 1 %}
                                            <a class="page-link" href="{{ path('app_examen_historial', paramsBaseGeneral|merge({'page_general': p})) }}">{{ p }}</a>
                                        {% else %}
                                            <a class="page-link" href="{{ path('app_examen_historial', paramsBaseGeneral) }}">{{ p }}</a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                                
                                {% if endPageGeneral < totalPagesGeneral %}
                                    {% if endPageGeneral < totalPagesGeneral - 1 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_examen_historial', paramsBaseGeneral|merge({'page_general': totalPagesGeneral})) }}">{{ totalPagesGeneral }}</a>
                                    </li>
                                {% endif %}
                                
                                {# Bot√≥n Siguiente #}
                                <li class="page-item {% if currentPageGeneral == totalPagesGeneral %}disabled{% endif %}">
                                    {% if currentPageGeneral < totalPagesGeneral %}
                                        <a class="page-link" href="{{ path('app_examen_historial', paramsBaseGeneral|merge({'page_general': currentPageGeneral + 1})) }}">
                                    {% else %}
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    {% endif %}
                                        Siguiente ‚Üí
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div style="text-align: center; margin-top: 0.5rem; color: #666; font-size: 0.9rem;">
                            Mostrando {{ ((currentPageGeneral - 1) * itemsPerPageGeneral) + 1 }} - {{ min(currentPageGeneral * itemsPerPageGeneral, totalItemsGeneral) }} de {{ totalItemsGeneral }} ex√°menes
                        </div>
                    </div>
                {% endif %}
            </div>
        {% else %}
            <div style="padding: 2rem; text-align: center; color: #999;">
                <p>No has realizado ning√∫n examen del temario general a√∫n.</p>
            </div>
        {% endif %}
    </div>
</div>

