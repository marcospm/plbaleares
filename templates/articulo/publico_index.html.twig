{% extends 'base.html.twig' %}

{% block title %}Art√≠culos - Sistema de Oposiciones{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Art√≠culos y Explicaciones</h1>
    </div>
    <div class="card-body">
        <p style="margin-bottom: 2rem; color: var(--color-text-light);">
            Consulta las explicaciones de los art√≠culos de las leyes y accede a videos explicativos.
        </p>

        <form method="get" action="{{ path('app_articulo_publico_index') }}" style="margin-bottom: 2rem;">
            <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar por n√∫mero, explicaci√≥n o ley...">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Filtrar por Ley:</label>
                    <select name="ley" class="form-control">
                        <option value="0">Todas las leyes</option>
                        {% for ley in leyes %}
                            <option value="{{ ley.id }}" {% if leySeleccionada == ley.id %}selected{% endif %}>
                                {{ ley.nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_articulo_publico_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
        </form>

        {% if articulos|length > 0 %}
            <div style="display: grid; gap: 1rem;">
                {% for articulo in articulos %}
                    <div class="card" style="margin-bottom: 0;">
                        <div class="card-body">
                            <h3 style="color: var(--color-primary); margin-bottom: 0.5rem;">
                                <a href="{{ path('app_articulo_publico_show', {'id': articulo.id, 'ley': leySeleccionada ?? 0, 'search': search ?? ''}) }}" style="text-decoration: none; color: inherit;">
                                    Art√≠culo {{ articulo.numero }}{% if articulo.nombre %} - {{ articulo.nombre }}{% endif %}
                                </a>
                            </h3>
                            <p style="margin-bottom: 0.5rem; color: var(--color-text-light);">
                                <strong>Ley:</strong> {{ articulo.ley.nombre }}
                            </p>
                            {% if articulo.explicacion %}
                                <div style="margin-bottom: 0.5rem; line-height: 1.5;">
                                    {{ articulo.explicacion|slice(0, 150)|markdown|raw }}{% if articulo.explicacion|length > 150 %}...{% endif %}
                                </div>
                            {% endif %}
                            {% if articulo.video %}
                                <p style="margin-bottom: 0.5rem; color: var(--color-secondary);">
                                    üé• Video explicativo disponible
                                </p>
                            {% endif %}
                            <div style="margin-top: 1rem;">
                                <a href="{{ path('app_articulo_publico_show', {'id': articulo.id, 'ley': leySeleccionada ?? 0, 'search': search ?? ''}) }}" class="btn btn-primary btn-sm">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                No se encontraron art√≠culos con los filtros seleccionados.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

