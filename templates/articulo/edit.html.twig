{% extends 'base.html.twig' %}

{% block title %}Editar Art칤culo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
    <style>
        .section-divider {
            border-top: 2px solid #e0e0e0;
            margin: 2rem 0;
            padding-top: 1.5rem;
        }
        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--color-primary);
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--color-primary);
        }
        .form-section {
            background-color: #f9f9f9;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Art칤culo: Art. {{ articulo.getNumeroCompleto() }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        
        <!-- Secci칩n 1: Informaci칩n B치sica -->
        <div class="form-section">
            <h3 class="section-title">游늶 Informaci칩n B치sica</h3>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.ley) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.numero) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.sufijo) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.nombre) }}
                </div>
            </div>
        </div>

        <!-- Secci칩n 2: Texto Legal -->
        <div class="form-section">
            <h3 class="section-title">丘뒲잺 Texto Legal</h3>
            {{ form_row(form.textoLegal) }}
        </div>

        <!-- Secci칩n 3: Explicaci칩n para el Opositor -->
        <div class="form-section">
            <h3 class="section-title">游닄 Explicaci칩n para el Opositor</h3>
            {{ form_row(form.explicacion) }}
        </div>

        <!-- Secci칩n 4: Video Explicativo -->
        <div class="form-section">
            <h3 class="section-title">游꿘 Video Explicativo</h3>
            {{ form_row(form.videoFile) }}
            {% if articulo.video %}
                <div class="form-group">
                    <label class="form-label">Video Actual:</label>
                    <div style="max-width: 500px; margin-top: 0.5rem;">
                        <video controls style="width: 100%; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                            <source src="{{ articulo.video }}" type="video/mp4">
                            <source src="{{ articulo.video }}" type="video/webm">
                            <source src="{{ articulo.video }}" type="video/ogg">
                            Tu navegador no soporta el elemento de video.
                        </video>
                    </div>
                    <p style="font-size: 0.85rem; color: var(--color-text-light); margin-top: 0.5rem;">
                        Sube un nuevo video para reemplazar el actual.
                    </p>
                </div>
            {% endif %}
        </div>
        
        <!-- Campos ocultos para filtros -->
        {% if filtros is defined %}
            {% for key, value in filtros %}
                <input type="hidden" name="filtro_{{ key }}" value="{{ value }}">
            {% endfor %}
        {% endif %}

        <!-- Botones de acci칩n -->
        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Actualizar
            </button>
            {% set paramsFiltros = filtros|default({}) %}
            <a href="{{ path('app_articulo_index', paramsFiltros) }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Funci칩n para convertir markdown a HTML antes de cargar en el editor
    function convertMarkdownToHtml(text) {
        if (!text) return '';
        
        // Convertir saltos de l칤nea dobles a p치rrafos
        const paragraphs = text.split(/\n\n+/);
        const convertedParagraphs = [];
        
        for (let para of paragraphs) {
            para = para.trim();
            if (para) {
                // Convertir **texto** a <strong>texto</strong> (negritas)
                para = para.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
                // Convertir *texto* a <em>texto</em> (cursiva, solo si no est치 entre **)
                para = para.replace(/(?<!\*)\*([^*\n]+?)\*(?!\*)/g, '<em>$1</em>');
                // Convertir saltos de l칤nea simples dentro del p치rrafo a <br>
                para = para.replace(/\n/g, '<br>');
                convertedParagraphs.push('<p>' + para + '</p>');
            }
        }
        
        // Si no hay p치rrafos (texto sin dobles saltos de l칤nea), convertir directamente
        if (convertedParagraphs.length === 0) {
            text = text.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
            text = text.replace(/(?<!\*)\*([^*\n]+?)\*(?!\*)/g, '<em>$1</em>');
            text = text.replace(/\n/g, '<br>');
            return text;
        }
        
        return convertedParagraphs.join('');
    }

    // Inicializar editor para explicaci칩n (CKEditor)
    const editorElement = document.querySelector('.tinymce-editor');
    if (editorElement && typeof ClassicEditor !== 'undefined') {
        // Si el contenido tiene markdown, convertirlo primero
        let originalValue = editorElement.value || '';
        const textarea = editorElement;
        
        // Verificar si el contenido es Markdown y no HTML
        if (originalValue && (originalValue.includes('**') || originalValue.includes('*'))) {
            // Verificar si no es HTML ya (si tiene tags HTML, asumimos que ya est치 en HTML)
            if (!originalValue.includes('<strong>') && !originalValue.includes('<em>') && 
                !originalValue.includes('<p>') && !originalValue.includes('<div>')) {
                // Es Markdown, convertir a HTML
                originalValue = convertMarkdownToHtml(originalValue);
                textarea.value = originalValue;
            }
        }

        ClassicEditor
            .create(textarea, {
                toolbar: {
                    items: [
                        'heading', '|',
                        'bold', 'italic', 'underline', '|',
                        'bulletedList', 'numberedList', '|',
                        'alignment', '|',
                        'link', '|',
                        'undo', 'redo'
                    ]
                },
                language: 'es',
                heading: {
                    options: [
                        { model: 'paragraph', title: 'P치rrafo', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h1', title: 'T칤tulo 1', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h2', title: 'T칤tulo 2', class: 'ck-heading_heading2' },
                        { model: 'heading3', view: 'h3', title: 'T칤tulo 3', class: 'ck-heading_heading3' }
                    ]
                }
            })
            .then(editor => {
                // El editor mantiene HTML autom치ticamente
                console.log('CKEditor inicializado correctamente');
            })
            .catch(error => {
                console.error('Error al inicializar CKEditor:', error);
            });
    }

    // Inicializar editor para texto legal (CKEditor simple, sin formato complejo)
    const textoLegalElement = document.querySelector('.texto-legal-editor');
    if (textoLegalElement && typeof ClassicEditor !== 'undefined') {
        ClassicEditor
            .create(textoLegalElement, {
                toolbar: {
                    items: [
                        'bold', 'italic', 'underline', '|',
                        'bulletedList', 'numberedList', '|',
                        'alignment', '|',
                        'undo', 'redo'
                    ]
                },
                language: 'es',
                placeholder: 'Ingresa el texto completo del art칤culo seg칰n la ley...'
            })
            .catch(error => {
                console.error('Error al inicializar editor de texto legal:', error);
            });
    }
});
</script>
{% endblock %}
