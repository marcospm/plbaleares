{% extends 'base.html.twig' %}

{% block title %}Editar Pregunta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Pregunta #{{ pregunta.id }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {# Campos ocultos para mantener los filtros #}
            {% if filtros.search is defined %}
                <input type="hidden" name="filtro_search" value="{{ filtros.search }}">
            {% endif %}
            {% if filtros.tema is defined %}
                <input type="hidden" name="filtro_tema" value="{{ filtros.tema }}">
            {% endif %}
            {% if filtros.ley is defined %}
                <input type="hidden" name="filtro_ley" value="{{ filtros.ley }}">
            {% endif %}
            {% if filtros.dificultad is defined %}
                <input type="hidden" name="filtro_dificultad" value="{{ filtros.dificultad }}">
            {% endif %}
            {% if filtros.articulo is defined %}
                <input type="hidden" name="filtro_articulo" value="{{ filtros.articulo }}">
            {% endif %}
            {% if filtros.page is defined %}
                <input type="hidden" name="filtro_page" value="{{ filtros.page }}">
            {% endif %}
            
            {{ form_row(form.texto) }}
            {{ form_row(form.dificultad) }}
            {{ form_row(form.tema) }}
            {{ form_row(form.ley) }}
            {{ form_row(form.articulo) }}
            {{ form_row(form.opcionA) }}
            {{ form_row(form.opcionB) }}
            {{ form_row(form.opcionC) }}
            {{ form_row(form.opcionD) }}
            {{ form_row(form.respuestaCorrecta) }}
            {{ form_row(form.retroalimentacion) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a href="{{ path('app_pregunta_index', filtros|default({})) }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const temaSelect = document.querySelector('select[name="pregunta[tema]"]');
    const leySelect = document.querySelector('select[name="pregunta[ley]"]');
    const articuloSelect = document.querySelector('select[name="pregunta[articulo]"]');
    
    // Función para cargar leyes por tema
    function cargarLeyesPorTema(temaId, leyIdSeleccionada = null, articuloIdSeleccionado = null) {
        if (!temaId || temaId === '') {
            leySelect.innerHTML = '<option value="">Selecciona una ley</option>';
            articuloSelect.innerHTML = '<option value="">Selecciona un artículo</option>';
            leySelect.disabled = true;
            articuloSelect.disabled = true;
            return;
        }
        
        fetch(`/pregunta/api/leyes-por-tema/${temaId}`)
            .then(response => response.json())
            .then(data => {
                leySelect.innerHTML = '<option value="">Selecciona una ley</option>';
                data.forEach(ley => {
                    const option = document.createElement('option');
                    option.value = ley.id;
                    option.textContent = ley.nombre;
                    if (leyIdSeleccionada && ley.id == leyIdSeleccionada) {
                        option.selected = true;
                    }
                    leySelect.appendChild(option);
                });
                leySelect.disabled = false;
                
                // Si hay una ley seleccionada, cargar sus artículos
                if (leyIdSeleccionada) {
                    cargarArticulosPorLey(leyIdSeleccionada, articuloIdSeleccionado);
                } else if (leySelect.value) {
                    cargarArticulosPorLey(leySelect.value);
                } else {
                    articuloSelect.innerHTML = '<option value="">Selecciona un artículo</option>';
                    articuloSelect.disabled = true;
                }
            })
            .catch(error => {
                console.error('Error al cargar leyes:', error);
            });
    }
    
    // Función para cargar artículos por ley
    function cargarArticulosPorLey(leyId, articuloIdSeleccionado = null) {
        if (!leyId || leyId === '') {
            articuloSelect.innerHTML = '<option value="">Selecciona un artículo</option>';
            articuloSelect.disabled = true;
            return;
        }
        
        fetch(`/pregunta/api/articulos-por-ley/${leyId}`)
            .then(response => response.json())
            .then(data => {
                articuloSelect.innerHTML = '<option value="">Selecciona un artículo</option>';
                data.forEach(articulo => {
                    const option = document.createElement('option');
                    option.value = articulo.id;
                    option.textContent = articulo.label;
                    if (articuloIdSeleccionado && articulo.id == articuloIdSeleccionado) {
                        option.selected = true;
                    }
                    articuloSelect.appendChild(option);
                });
                articuloSelect.disabled = false;
            })
            .catch(error => {
                console.error('Error al cargar artículos:', error);
            });
    }
    
    // Cargar valores iniciales desde la pregunta editada
    const temaIdInicial = temaSelect ? temaSelect.value : null;
    const leyIdInicial = leySelect ? leySelect.value : null;
    const articuloIdInicial = articuloSelect ? articuloSelect.value : null;
    
    // Event listeners
    if (temaSelect) {
        temaSelect.addEventListener('change', function() {
            cargarLeyesPorTema(this.value);
        });
        
        // Cargar leyes si ya hay un tema seleccionado
        if (temaIdInicial) {
            cargarLeyesPorTema(temaIdInicial, leyIdInicial, articuloIdInicial);
        } else {
            // Si no hay tema, deshabilitar ley y artículo
            if (leySelect) leySelect.disabled = true;
            if (articuloSelect) articuloSelect.disabled = true;
        }
    }
    
    if (leySelect) {
        leySelect.addEventListener('change', function() {
            cargarArticulosPorLey(this.value);
        });
        
        // Cargar artículos si ya hay una ley seleccionada
        // Esperar un poco para que las leyes se hayan cargado primero
        if (temaIdInicial && leyIdInicial) {
            setTimeout(() => {
                if (leySelect.value == leyIdInicial) {
                    cargarArticulosPorLey(leyIdInicial, articuloIdInicial);
                }
            }, 500);
        } else if (leyIdInicial && !leySelect.disabled) {
            cargarArticulosPorLey(leyIdInicial, articuloIdInicial);
        } else if (!leySelect.disabled && leySelect.value) {
            cargarArticulosPorLey(leySelect.value);
        } else {
            if (articuloSelect) articuloSelect.disabled = true;
        }
    }
    
    // Función para convertir markdown a HTML antes de cargar en el editor
    function convertMarkdownToHtml(text) {
        if (!text) return '';
        
        // Convertir saltos de línea dobles a párrafos
        const paragraphs = text.split(/\n\n+/);
        const convertedParagraphs = [];
        
        for (let para of paragraphs) {
            para = para.trim();
            if (para) {
                // Convertir **texto** a <strong>texto</strong> (negritas)
                para = para.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
                // Convertir *texto* a <em>texto</em> (cursiva, solo si no está entre **)
                para = para.replace(/(?<!\*)\*([^*\n]+?)\*(?!\*)/g, '<em>$1</em>');
                // Convertir saltos de línea simples dentro del párrafo a <br>
                para = para.replace(/\n/g, '<br>');
                convertedParagraphs.push('<p>' + para + '</p>');
            }
        }
        
        // Si no hay párrafos (texto sin dobles saltos de línea), convertir directamente
        if (convertedParagraphs.length === 0) {
            text = text.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
            text = text.replace(/(?<!\*)\*([^*\n]+?)\*(?!\*)/g, '<em>$1</em>');
            text = text.replace(/\n/g, '<br>');
            return text;
        }
        
        return convertedParagraphs.join('');
    }

    // Inicializar editor para retroalimentación (CKEditor)
    const editorElement = document.querySelector('.tinymce-editor');
    if (editorElement && typeof ClassicEditor !== 'undefined') {
        // Si el contenido tiene markdown, convertirlo primero
        let originalValue = editorElement.value || '';
        const textarea = editorElement;
        
        // Verificar si el contenido es Markdown y no HTML
        if (originalValue && (originalValue.includes('**') || originalValue.includes('*'))) {
            // Verificar si no es HTML ya (si tiene tags HTML, asumimos que ya está en HTML)
            if (!originalValue.includes('<strong>') && !originalValue.includes('<em>') && 
                !originalValue.includes('<p>') && !originalValue.includes('<div>')) {
                // Es Markdown, convertir a HTML
                originalValue = convertMarkdownToHtml(originalValue);
                textarea.value = originalValue;
            }
        }

        ClassicEditor
            .create(textarea, {
                toolbar: {
                    items: [
                        'heading', '|',
                        'bold', 'italic', 'underline', '|',
                        'bulletedList', 'numberedList', '|',
                        'alignment', '|',
                        'link', '|',
                        'undo', 'redo'
                    ]
                },
                language: 'es',
                heading: {
                    options: [
                        { model: 'paragraph', title: 'Párrafo', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h1', title: 'Título 1', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h2', title: 'Título 2', class: 'ck-heading_heading2' },
                        { model: 'heading3', view: 'h3', title: 'Título 3', class: 'ck-heading_heading3' }
                    ]
                }
            })
            .then(editor => {
                console.log('CKEditor inicializado correctamente para retroalimentación');
            })
            .catch(error => {
                console.error('Error al inicializar CKEditor:', error);
            });
    }
});
</script>
{% endblock %}

