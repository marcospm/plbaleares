                                                <li><a href="{{ path('app_ley_index') }}" class="dropdown-item">Leyes</a></li>
                                                <li><a href="{{ path('app_articulo_index') }}" class="dropdown-item">Artículos</a></li>
                                                <li><a href="{{ path('app_pregunta_index') }}" class="dropdown-item">Preguntas</a></li>
                                                <li><a href="{{ path('app_recurso_index') }}" class="dropdown-item">Recursos</a></li>
                                                <li><a href="{{ path('app_examen_pdf_index') }}" class="dropdown-item">Exámenes PDF</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-item-with-submenu">
                                            <a href="#" class="dropdown-item" onclick="toggleSubmenu(this); return false;">
                                                <span>Municipios</span>
                                                <span style="margin-left: 1rem;">▶</span>
                                            </a>
                                            <ul class="submenu">
                                                <li><a href="{{ path('app_municipio_index') }}" class="dropdown-item">Municipios</a></li>
                                                <li><a href="{{ path('app_tema_municipal_index') }}" class="dropdown-item">Temas Municipales</a></li>
                                                <li><a href="{{ path('app_pregunta_municipal_index') }}" class="dropdown-item">Preguntas Municipales</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-item-with-submenu">
                                            <a href="#" class="dropdown-item" onclick="toggleSubmenu(this); return false;">
                                                <span>Planificación</span>
                                                <span style="margin-left: 1rem;">▶</span>
                                            </a>
                                            <ul class="submenu">
                                                <li><a href="{{ path('app_planificacion_semanal_index') }}" class="dropdown-item">Planificaciones Semanales</a></li>
                                                <li><a href="{{ path('app_tarea_index') }}" class="dropdown-item">Tareas</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-item-with-submenu">
                                            <a href="#" class="dropdown-item" onclick="toggleSubmenu(this); return false;">
                                                <span>Gestión</span>
                                                <span style="margin-left: 1rem;">▶</span>
                                            </a>
                                            <ul class="submenu">
                                                <li><a href="{{ path('app_user_index') }}" class="dropdown-item">Usuarios</a></li>
                                                <li><a href="{{ path('app_convocatoria_index') }}" class="dropdown-item">Convocatorias</a></li>
                                                <li><a href="{{ path('app_examen_profesor') }}" class="dropdown-item">Exámenes de Alumnos</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            {% endif %}
                            
                            {# Menú para administradores #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" onclick="event.preventDefault(); toggleDropdown(this);" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">
