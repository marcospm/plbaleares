            function cerrarModalTema() {
                const modal = document.getElementById('modalTema');
                modal.style.display = 'none';
            }

            // Cerrar modal al hacer clic fuera de √©l
            window.onclick = function(event) {
                const modal = document.getElementById('modalTema');
                if (event.target == modal) {
                    cerrarModalTema();
                }
            };

            // Modal de aviso para dispositivos m√≥viles
            {% if app.user %}
            function mostrarModalMovil() {
                // Verificar si viene de un login exitoso
                const urlParams = new URLSearchParams(window.location.search);
                const vieneDeLogin = urlParams.get('login') === 'success';
                
                // Detectar si es un dispositivo m√≥vil (tel√©fono, no tablet)
                const userAgent = navigator.userAgent || navigator.vendor || window.opera;
                const width = window.innerWidth || document.documentElement.clientWidth;
                const height = window.innerHeight || document.documentElement.clientHeight;
                
                // Detectar iPhone/iPod (pero no iPad)
                const isIPhone = /iPhone/i.test(userAgent);
                const isIPod = /iPod/i.test(userAgent);
                const isIPad = /iPad/i.test(userAgent) || (navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1);
                
                // Detectar Android m√≥vil (pero no tablet)
                const isAndroidMobile = /Android.*Mobile/i.test(userAgent);
                const isAndroidTablet = /Android/i.test(userAgent) && !/Mobile/i.test(userAgent);
                
                // Otros m√≥viles
                const isOtherMobile = /BlackBerry|IEMobile|Opera Mini|webOS/i.test(userAgent);
                
                // Verificar por tama√±o de pantalla (tel√©fonos tienen pantallas m√°s peque√±as)
                const isSmallScreen = width <= 480 || (width <= 768 && height <= 900);
                
                // Es un tel√©fono m√≥vil si cumple alguna de estas condiciones:
                const esTelefonoMovil = (isIPhone && !isIPad) || 
                                      isIPod || 
                                      (isAndroidMobile && !isAndroidTablet) || 
                                      isOtherMobile ||
                                      (isSmallScreen && width < 600 && !isIPad && !isAndroidTablet);
                
                // Verificar si ya se mostr√≥ el modal en esta sesi√≥n
                const modalShown = sessionStorage.getItem('mobileWarningShown');
                
                // Mostrar modal si es m√≥vil y (viene de login O no se ha mostrado antes)
                if (esTelefonoMovil && (vieneDeLogin || !modalShown)) {
                    const modal = document.getElementById('mobileWarningModal');
                    if (modal) {
                        modal.style.display = 'flex';
                        sessionStorage.setItem('mobileWarningShown', 'true');
                        
                        // Limpiar el par√°metro de la URL sin recargar la p√°gina
                        if (vieneDeLogin) {
                            const url = new URL(window.location);
                            url.searchParams.delete('login');
                            window.history.replaceState({}, '', url);
                        }
                    }
                }
            }
            
            // Ejecutar cuando la p√°gina est√© completamente cargada
            if (document.readyState === 'loading') {
                window.addEventListener('load', function() {
                    setTimeout(mostrarModalMovil, 800);
