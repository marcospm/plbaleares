            <script>
                function toggleDropdown(element) {
                    const dropdown = element.nextElementSibling;
                    const isOpen = dropdown.classList.contains('show');
                    
                    // Cerrar todos los dropdowns del mismo nivel
                    const parent = element.closest('.nav-dropdown');
                    if (parent) {
                        parent.querySelectorAll('.dropdown-menu').forEach(menu => {
                            if (menu !== dropdown) {
                                menu.classList.remove('show');
                            }
                        });
                    } else {
                        // Cerrar todos los dropdowns principales
                        document.querySelectorAll('.dropdown-menu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                    }
                    
                    // Abrir/cerrar el dropdown actual
                    if (!isOpen) {
                        dropdown.classList.add('show');
                    } else {
                        dropdown.classList.remove('show');
                    }
                }
                
                function toggleSubmenu(element) {
                    event.preventDefault();
                    event.stopPropagation();
                    const submenu = element.nextElementSibling;
                    const isOpen = submenu && submenu.classList.contains('show');
                    
                    // Cerrar otros submen√∫s del mismo nivel
                    const parent = element.closest('.dropdown-menu');
                    if (parent) {
                        parent.querySelectorAll('.submenu').forEach(menu => {
                            if (menu !== submenu) {
                                menu.classList.remove('show');
                            }
                        });
                    }
                    
                    // Abrir/cerrar el submenu actual
                    if (submenu) {
                        if (!isOpen) {
                            submenu.classList.add('show');
                        } else {
                            submenu.classList.remove('show');
                        }
                    }
                }
                
                // Cerrar dropdown al hacer click fuera
                document.addEventListener('click', function(event) {
                    if (!event.target.closest('.nav-dropdown')) {
                        document.querySelectorAll('.dropdown-menu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                        document.querySelectorAll('.submenu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                    }
                });

                // Sistema de notificaciones
                function toggleNotificacionesDropdown(tipo) {
                    const suffix = tipo === 'alumno' ? '-alumno' : '-profesor';
                    const dropdown = document.getElementById('notificaciones-dropdown' + suffix);
                    const isOpen = dropdown.classList.contains('show');
                    
                    // Cerrar otros dropdowns
                    document.querySelectorAll('.dropdown-menu').forEach(menu => {
                        if (menu !== dropdown) {
                            menu.classList.remove('show');
                        }
                    });
                    
                    if (!isOpen) {
                        dropdown.classList.add('show');
                        cargarNotificacionesDropdown(tipo);
                    } else {
                        dropdown.classList.remove('show');
                    }
                }

                function cargarNotificacionesDropdown(tipo) {
                    const suffix = tipo === 'alumno' ? '-alumno' : '-profesor';
                    const url = tipo === 'alumno' ? '{{ path('app_notificacion_alumno_no_leidas') }}' : '{{ path('app_notificacion_no_leidas') }}';
                    const lista = document.getElementById('notificaciones-lista' + suffix);
                    const contador = document.getElementById('notificaciones-contador' + suffix);
                    
                    fetch(url)
                        .then(response => response.json())
                        .then(data => {
                            if (data.total === 0) {
                                lista.innerHTML = '<div style="text-align: center; padding: 1rem; color: #666;">No tienes notificaciones nuevas.</div>';
                                if (contador) {
                                    contador.style.display = 'none';
                                }
                                return;
                            }
                            
                            if (contador) {
                                contador.textContent = data.total;
                                contador.style.display = 'inline-block';
                            }
                            
                            let html = '<div style="display: grid; gap: 0.5rem;">';
                            data.notificaciones.slice(0, 5).forEach(notif => {
                                let icono = 'üìã';
                                let color = '#2196F3';
                                
                                if (tipo === 'profesor') {
                                    icono = notif.tipo === 'examen' ? 'üìù' : (notif.tipo === 'tarea' ? '‚úÖ' : (notif.tipo === 'mensaje_alumno' ? 'üí¨' : '‚ö†Ô∏è'));
                                    color = notif.tipo === 'examen' ? '#2196F3' : (notif.tipo === 'tarea' ? '#4CAF50' : (notif.tipo === 'mensaje_alumno' ? '#9C27B0' : '#FF9800'));
                                } else {
                                    // Para alumnos
                                    icono = notif.tipo === 'planificacion_creada' ? 'üìÖ' : 
                                            (notif.tipo === 'planificacion_editada' ? '‚úèÔ∏è' : 
                                            (notif.tipo === 'planificacion_eliminada' ? 'üóëÔ∏è' : 
                                            (notif.tipo === 'tarea_creada' ? 'üìù' : 
                                            (notif.tipo === 'tarea_editada' ? '‚úèÔ∏è' : 'üóëÔ∏è'))));
                                    color = notif.tipo.indexOf('planificacion') !== -1 ? '#2196F3' : '#4CAF50';
                                }
                                
                                html += `
                                    <div style="padding: 0.75rem; border: 1px solid #ddd; border-left: 3px solid ${color}; border-radius: 4px; background-color: #fff;">
                                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.25rem;">
                                            <span style="font-size: 1rem;">${icono}</span>
                                            <strong style="color: ${color}; font-size: 0.9rem;">${notif.titulo}</strong>
                                        </div>
                                        <p style="margin: 0.25rem 0; color: #666; font-size: 0.85rem; line-height: 1.3;">${notif.mensaje}</p>
                                        <small style="color: #999; font-size: 0.75rem;">${notif.fechaCreacion}</small>
                                    </div>
                                `;
                            });
                            if (data.total > 5) {
                                html += `<div style="text-align: center; padding: 0.5rem; color: var(--color-primary); font-size: 0.85rem;">Y ${data.total - 5} m√°s...</div>`;
                            }
                            html += '</div>';
                            lista.innerHTML = html;
                        })
                        .catch(error => {
                            console.error('Error al cargar notificaciones:', error);
                            lista.innerHTML = '<div style="text-align: center; padding: 1rem; color: #dc3545;">Error al cargar las notificaciones.</div>';
                        });
                }

