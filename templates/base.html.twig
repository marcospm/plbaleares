                                        icono = 'üìÖ';
                                        color = '#2196F3';
                                    } else if (notif.tipo === 'planificacion_editada') {
                                        icono = '‚úèÔ∏è';
                                        color = '#2196F3';
                                    } else if (notif.tipo === 'planificacion_eliminada') {
                                        icono = 'üóëÔ∏è';
                                        color = '#2196F3';
                                    } else if (notif.tipo === 'tarea_creada') {
                                        icono = 'üìù';
                                        color = '#4CAF50';
                                    } else if (notif.tipo === 'tarea_editada') {
                                        icono = '‚úèÔ∏è';
                                        color = '#4CAF50';
                                    } else if (notif.tipo === 'tarea_eliminada') {
                                        icono = 'üóëÔ∏è';
                                        color = '#4CAF50';
                                    } else if (notif.tipo === 'examen_semanal') {
                                        icono = 'üìã';
                                        color = '#9C27B0';
                                    } else {
                                        icono = 'üìã';
                                        color = '#4CAF50';
                                    }
                                }
                                
                                html += `
                                    <div style="padding: 0.75rem; border: 1px solid #ddd; border-left: 3px solid ${color}; border-radius: 4px; background-color: #fff;">
                                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.25rem;">
                                            <span style="font-size: 1rem;">${icono}</span>
                                            <strong style="color: ${color}; font-size: 0.9rem;">${notif.titulo}</strong>
                                        </div>
                                        <p style="margin: 0.25rem 0; color: #666; font-size: 0.85rem; line-height: 1.3;">${notif.mensaje}</p>
                                        <small style="color: #999; font-size: 0.75rem;">${notif.fechaCreacion}</small>
                                    </div>
                                `;
                            });
                            if (data.total > 5) {
                                html += `<div style="text-align: center; padding: 0.5rem; color: var(--color-primary); font-size: 0.85rem;">Y ${data.total - 5} m√°s...</div>`;
                            }
                            html += '</div>';
                            lista.innerHTML = html;
                        })
                        .catch(error => {
                            console.error('Error al cargar notificaciones:', error);
                            lista.innerHTML = '<div style="text-align: center; padding: 1rem; color: #dc3545;">Error al cargar las notificaciones.</div>';
                        });
                }

                // Cargar contador al iniciar
                document.addEventListener('DOMContentLoaded', function() {
                    {% if is_granted('ROLE_PROFESOR') or is_granted('ROLE_ADMIN') %}
                    fetch('{{ path('app_notificacion_contador') }}')
                        .then(response => response.json())
