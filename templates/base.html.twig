                                    contador.style.display = 'inline-block';
                                } else {
                                    contador.style.display = 'none';
                                }
                            }
                        })
                        .catch(error => {
                            console.error('Error al cargar contador:', error);
                        });
                    {% elseif not is_granted('ROLE_PROFESOR') and not is_granted('ROLE_ADMIN') %}
