                        .catch(error => {
                            // Solo mostrar error en consola si es un error real, no silenciarlo completamente
                            // pero no mostrar errores de red o de autenticaci√≥n como errores cr√≠ticos
                            if (error.message && !error.message.includes('HTTP error! status: 401') && !error.message.includes('HTTP error! status: 403')) {
                                console.error('Error al cargar contador:', error);
                            }
                            // Ocultar el contador si hay error
                            const contador = document.getElementById('notificaciones-contador-alumno');
                            if (contador) {
                                contador.style.display = 'none';
                            }
                        });
                    {% endif %}
                });
            </script>
