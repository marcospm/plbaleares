                            <li><a href="{{ path('app_examen_iniciar') }}" class="nav-link" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">Nuevo Examen</a></li>
                            <li><a href="{{ path('app_examen_historial') }}" class="nav-link" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">Historial</a></li>
                            <li><a href="{{ path('app_articulo_publico_index') }}" class="nav-link" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">Artículos</a></li>
                            <li><a href="{{ path('app_recurso_publico_index') }}" class="nav-link" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">Recursos</a></li>
                            <li><a href="{{ path('app_contacto') }}" class="nav-link" style="border: 1px solid #ddd; padding: 0.5rem 1rem; border-radius: 4px; margin: 0 0.25rem;">Contacto</a></li>
                            
                            {# Menú para profesores y administradores #}
                            {% if is_granted('ROLE_PROFESOR') or is_granted('ROLE_ADMIN') %}
