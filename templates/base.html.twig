<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Sistema de Oposiciones - Policía Local Illes Balears{% endblock %}</title>
        <link rel="icon" href="https://usuaris.tinet.cat/polis/images/3245.gif">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script>
                function toggleDropdown(element) {
                    const dropdown = element.nextElementSibling;
                    const isOpen = dropdown.classList.contains('show');
                    
                    // Cerrar todos los dropdowns del mismo nivel
                    const parent = element.closest('.nav-dropdown');
                    if (parent) {
                        parent.querySelectorAll('.dropdown-menu').forEach(menu => {
                            if (menu !== dropdown) {
                                menu.classList.remove('show');
                            }
                        });
                    } else {
                        // Cerrar todos los dropdowns principales
                        document.querySelectorAll('.dropdown-menu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                    }
                    
                    // Abrir/cerrar el dropdown actual
                    if (!isOpen) {
                        dropdown.classList.add('show');
                    } else {
                        dropdown.classList.remove('show');
                    }
                }
                
                function toggleSubmenu(element) {
                    event.preventDefault();
                    event.stopPropagation();
                    const submenu = element.nextElementSibling;
                    const isOpen = submenu && submenu.classList.contains('show');
                    
                    // Cerrar otros submenús del mismo nivel
                    const parent = element.closest('.dropdown-menu');
                    if (parent) {
                        parent.querySelectorAll('.submenu').forEach(menu => {
                            if (menu !== submenu) {
                                menu.classList.remove('show');
                            }
                        });
                    }
                    
                    // Abrir/cerrar el submenu actual
                    if (submenu) {
                        if (!isOpen) {
                            submenu.classList.add('show');
                        } else {
                            submenu.classList.remove('show');
                        }
                    }
                }
                
                // Cerrar dropdown al hacer click fuera
                document.addEventListener('click', function(event) {
                    if (!event.target.closest('.nav-dropdown')) {
                        document.querySelectorAll('.dropdown-menu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                        document.querySelectorAll('.submenu').forEach(menu => {
                            menu.classList.remove('show');
                        });
                    }
                });
            </script>
        {% endblock %}
    </head>
    <body>
        {# Barra de información del usuario #}
        {% if app.user %}
            <div style="background-color: #f8f9fa; border-bottom: 1px solid #dee2e6; padding: 0.5rem 0;">
                <div class="container" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 0.5rem;">
                    <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
                        <span style="font-size: 0.9rem; color: #495057;">
                            <strong>Usuario:</strong> {{ app.user.userIdentifier }}
                        </span>
                        <span style="font-size: 0.9rem; color: #495057;">
                            <strong>Rol:</strong> 
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="badge" style="background-color: #dc3545; color: white; padding: 0.25rem 0.5rem; border-radius: 3px;">Administrador</span>
                            {% elseif is_granted('ROLE_PROFESOR') %}
