{% extends 'base.html.twig' %}

{% block title %}Gestionar Alumnos - {{ grupo.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Gestionar Alumnos: {{ grupo.nombre }}</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label class="form-label"><strong>Selecciona los alumnos que pertenecer√°n a este grupo:</strong></label>
                <div style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 1rem; border-radius: 4px; margin-top: 0.5rem;">
                    {% for alumno in todosAlumnos %}
                        <div class="form-check" style="padding: 0.5rem;">
                            <input class="form-check-input" type="checkbox" name="alumnos[]" value="{{ alumno.id }}" id="alumno_{{ alumno.id }}"
                                   {% if grupo.alumnos.contains(alumno) %}checked{% endif %}>
                            <label class="form-check-label" for="alumno_{{ alumno.id }}">
                                {{ alumno.nombreDisplay }} ({{ alumno.username }})
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar Asignaciones</button>
                <a href="{{ path('app_grupo_show', {'id': grupo.id}) }}" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

