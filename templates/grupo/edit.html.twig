{% extends 'base.html.twig' %}

{% block title %}Editar Grupo{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Grupo: {{ grupo.nombre }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            <div class="form-group">
                {{ form_label(form.alumnos) }}
                {{ form_widget(form.alumnos) }}
                {{ form_help(form.alumnos) }}
                {{ form_errors(form.alumnos) }}
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('app_grupo_show', {'id': grupo.id}) }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

