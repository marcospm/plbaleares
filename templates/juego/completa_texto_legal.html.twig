{% block body %}
<div style="max-width: 1000px; margin: 2rem auto; padding: 0 1rem;">
    <div style="text-align: center; margin-bottom: 2rem;">
        <h1 style="color: var(--color-primary); margin-bottom: 0.5rem;">Completa el Art√≠culo</h1>
        <p style="color: #666;">Lee la ley, el art√≠culo y completa las palabras faltantes en el texto legal.</p>
    </div>

    <div id="juego-container" class="juego-container">
        <div class="card" style="margin-bottom: 1.5rem;">
            <div class="card-body" style="padding: 2rem;">
                <div id="info-articulo" style="margin-bottom: 2rem;">
                    <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1rem;">
                        <h3 style="margin: 0 0 0.5rem 0; color: var(--color-primary);">Ley:</h3>
                        <p id="ley-nombre" style="margin: 0; font-size: 1.1rem; font-weight: 600; color: #333;"></p>
                    </div>
                    <div style="background: #e3f2fd; padding: 1.5rem; border-radius: 8px; margin-bottom: 1rem;">
                        <h3 style="margin: 0 0 0.5rem 0; color: var(--color-primary);">Art√≠culo:</h3>
                        <p id="articulo-numero" style="margin: 0; font-size: 1.1rem; font-weight: 600; color: #333;"></p>
                        <p id="articulo-nombre" style="margin: 0.5rem 0 0 0; font-size: 1rem; color: #666;"></p>
                    </div>
                    <div class="texto-legal-container" id="texto-legal-container">
                        <h3 style="margin: 0 0 1rem 0; color: var(--color-primary);">Texto Legal:</h3>
                        <div id="texto-legal" style="margin: 0;"></div>
                    </div>
                </div>

                <div id="campos-palabras" style="margin-bottom: 1.5rem;"></div>

                <div style="display: flex; gap: 1rem; margin-bottom: 1rem;">
                    <button id="btn-verificar" class="btn btn-primary" style="flex: 1; padding: 0.75rem;">Verificar</button>
                    <button id="btn-siguiente" class="btn btn-secondary" style="flex: 1; padding: 0.75rem; display: none;">Siguiente</button>
                </div>

                <div id="feedback" style="display: none; padding: 1rem; border-radius: 8px; margin-top: 1rem;"></div>
            </div>
        </div>
    </div>
</div>

<script>
    /**
     * Funci√≥n para normalizar texto (eliminar acentos, convertir a min√∫sculas, etc.)
     */
    function normalizarTexto(texto) {
        if (!texto) return '';
        return texto.toLowerCase()
            .normalize('NFD')
            .replace(/[\u0300-\u036f]/g, '') // Eliminar acentos
            .trim();
    }

    /**
     * Compara dos textos de forma flexible
     */
    function compararTextoFlexible(texto1, texto2) {
        const t1 = normalizarTexto(texto1);
        const t2 = normalizarTexto(texto2);
        
        // Coincidencia exacta
        if (t1 === t2) return true;
        
        // Si uno contiene al otro (con al menos 3 caracteres)
        if (t1.length >= 3 && t2.length >= 3) {
            if (t1.includes(t2) || t2.includes(t1)) return true;
        }
        
        return false;
    }

    /**
     * Extrae palabras del HTML, respetando los tags
     */
    function extraerPalabrasDelHTML(html) {
        // Crear un elemento temporal para parsear el HTML
        const temp = document.createElement('div');
        temp.innerHTML = html;
        
        // Obtener el texto completo sin tags
        const textoCompleto = temp.textContent || temp.innerText || '';
        
        // Dividir en palabras (eliminar espacios m√∫ltiples y caracteres especiales al inicio/final)
        const palabras = textoCompleto.split(/\s+/).filter(p => p.length > 0 && /[a-zA-Z√Å√â√ç√ì√ö√°√©√≠√≥√∫√ë√±]/.test(p));
        
        // Filtrar palabras muy cortas (menos de 3 caracteres) y muy comunes
        const palabrasComunes = ['el', 'la', 'los', 'las', 'de', 'del', 'en', 'y', 'a', 'un', 'una', 'unos', 'unas', 'que', 'por', 'para', 'con', 'sin', 'sobre', 'entre'];
        const palabrasFiltradas = palabras.filter(p => p.length >= 3 && !palabrasComunes.includes(p.toLowerCase()));
        
        return palabrasFiltradas;
    }

    /**
     * Reemplaza palabras en el HTML manteniendo la estructura
     * Solo reemplaza la primera ocurrencia de cada palabra para que coincida con los campos de entrada
     */
    function ocultarPalabrasEnHTML(html, palabrasAOcultar) {
        let htmlResultado = html;
        
        // Ordenar palabras por longitud (m√°s largas primero) para evitar reemplazos parciales
        palabrasAOcultar.sort((a, b) => b.length - a.length);
        
        palabrasAOcultar.forEach((palabra, index) => {
            // Crear regex que busca la palabra como palabra completa (respetando may√∫sculas/min√∫sculas)
            // Usar replace con funci√≥n para reemplazar solo la primera ocurrencia
            const regex = new RegExp(`\\b${palabra.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')}\\b`, 'gi');
            const reemplazo = `<span class="palabra-oculta" data-palabra-index="${index}" data-palabra-original="${palabra.replace(/"/g, '&quot;')}">___</span>`;
            
            // Reemplazar solo la primera ocurrencia
            let primeraOcurrencia = true;
            htmlResultado = htmlResultado.replace(regex, (match) => {
                if (primeraOcurrencia) {
                    primeraOcurrencia = false;
                    return reemplazo;
                }
                return match; // Mantener las dem√°s ocurrencias sin cambiar
            });
        });
        
        return htmlResultado;
    }

    let articulos = [];
    let indiceActual = 0;
    let articuloActual = null;
    let palabrasOcultas = [];
    let palabrasOriginales = [];

    function cargarArticulos() {
        fetch('{{ path('app_juego_api_articulos_texto_legal_lote') }}')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error HTTP: ' + response.status);
                }
                return response.json();
            })
            .then(data => {
                if (data.error) {
                    alert('Error: ' + data.error);
                    return;
                }
                
                if (!data || data.length === 0) {
                    alert('No hay art√≠culos disponibles');
                    return;
                }
                
                articulos = data;
                indiceActual = 0;
                mostrarSiguienteArticulo();
            })
            .catch(error => {
                console.error('Error al cargar art√≠culos:', error);
                alert('Error al cargar los art√≠culos. Por favor, recarga la p√°gina e intenta de nuevo.');
            });
    }

    function mostrarSiguienteArticulo() {
        if (indiceActual >= articulos.length || articulos.length === 0) {
            // Si se acabaron, volver al inicio
            indiceActual = 0;
        }
        
        if (articulos.length === 0) {
            alert('No hay art√≠culos disponibles');
            return;
        }
        
        articuloActual = articulos[indiceActual];
        indiceActual++;
        
        // Mostrar la ley
        document.getElementById('ley-nombre').textContent = articuloActual.ley.nombre;
        
        // Mostrar el art√≠culo
        document.getElementById('articulo-numero').textContent = 'Art√≠culo ' + articuloActual.numeroCompleto;
        if (articuloActual.nombre) {
            document.getElementById('articulo-nombre').textContent = articuloActual.nombre;
            document.getElementById('articulo-nombre').style.display = 'block';
        } else {
            document.getElementById('articulo-nombre').style.display = 'none';
        }
        
        // Procesar el texto legal
        const textoLegalHTML = articuloActual.textoLegal || '';
        
        if (!textoLegalHTML || textoLegalHTML.trim() === '') {
            // Si no hay texto legal, pasar al siguiente
            mostrarSiguienteArticulo();
            return;
        }
        
        const palabras = extraerPalabrasDelHTML(textoLegalHTML);
        
        if (palabras.length < 1) {
            // Si no hay palabras, pasar al siguiente
            mostrarSiguienteArticulo();
            return;
        }
        
        // Seleccionar entre 1 y 5 palabras aleatoriamente (o menos si no hay suficientes)
        const numPalabrasAOcultar = Math.min(Math.max(1, Math.floor(Math.random() * 5) + 1), palabras.length);
        
        // Seleccionar palabras aleatoriamente sin repetici√≥n
        const indicesSeleccionados = [];
        const palabrasDisponibles = [...palabras.keys()]; // Crear array de √≠ndices disponibles
        
        while (indicesSeleccionados.length < numPalabrasAOcultar && palabrasDisponibles.length > 0) {
            const indiceAleatorio = Math.floor(Math.random() * palabrasDisponibles.length);
            const indiceSeleccionado = palabrasDisponibles[indiceAleatorio];
            indicesSeleccionados.push(indiceSeleccionado);
            palabrasDisponibles.splice(indiceAleatorio, 1); // Eliminar el √≠ndice seleccionado
        }
        
        palabrasOcultas = indicesSeleccionados.map(i => palabras[i]);
        palabrasOriginales = [...palabrasOcultas];
        
        // Ocultar palabras en el HTML
        const htmlConOcultas = ocultarPalabrasEnHTML(textoLegalHTML, palabrasOcultas);
        document.getElementById('texto-legal').innerHTML = htmlConOcultas;
        
        // Verificar que el n√∫mero de palabras ocultas en el HTML coincida con el n√∫mero de palabras seleccionadas
        const palabrasOcultasEnHTML = document.querySelectorAll('.palabra-oculta');
        if (palabrasOcultasEnHTML.length !== palabrasOcultas.length) {
            console.warn(`Advertencia: Se esperaban ${palabrasOcultas.length} palabras ocultas pero se encontraron ${palabrasOcultasEnHTML.length}. Ajustando...`);
            // Si hay m√°s palabras ocultas en el HTML que las seleccionadas, ajustar el array
            // Esto puede pasar si una palabra aparece m√∫ltiples veces y se reemplaz√≥ m√°s de una vez
            palabrasOcultas.length = palabrasOcultasEnHTML.length;
            palabrasOriginales.length = palabrasOcultasEnHTML.length;
            // Actualizar las palabras originales bas√°ndose en los data attributes
            palabrasOcultasEnHTML.forEach((span, index) => {
                const palabraOriginal = span.getAttribute('data-palabra-original');
                if (palabraOriginal && index < palabrasOcultas.length) {
                    palabrasOcultas[index] = palabraOriginal;
                    palabrasOriginales[index] = palabraOriginal;
                }
            });
        }
        
        // Crear campos de entrada para cada palabra oculta
        const camposContainer = document.getElementById('campos-palabras');
        camposContainer.innerHTML = '';
        
        palabrasOcultas.forEach((palabra, index) => {
            const campoDiv = document.createElement('div');
            campoDiv.className = 'campo-palabra';
            campoDiv.innerHTML = `
                <label style="display: block; margin-bottom: 0.25rem; font-weight: 600; color: #333;">
                    Palabra ${index + 1}:
                </label>
                <input type="text" 
                       class="form-control campo-palabra-input" 
                       data-palabra-index="${index}"
                       placeholder="Escribe la palabra..."
                       style="font-size: 1rem; padding: 0.75rem;">
            `;
            camposContainer.appendChild(campoDiv);
        });
        
        // Limpiar feedback
        document.getElementById('feedback').style.display = 'none';
        
        // Mostrar bot√≥n verificar y ocultar siguiente
        document.getElementById('btn-verificar').style.display = 'block';
        document.getElementById('btn-siguiente').style.display = 'none';
        
        // Habilitar campos
        document.querySelectorAll('.campo-palabra-input').forEach(input => {
            input.disabled = false;
            input.value = '';
        });
        
        // Enfocar primer campo
        const primerCampo = document.querySelector('.campo-palabra-input');
        if (primerCampo) {
            primerCampo.focus();
        }
    }

    function verificarRespuesta() {
        const campos = document.querySelectorAll('.campo-palabra-input');
        const respuestas = [];
        
        // Obtener todas las respuestas del usuario
        campos.forEach((campo, index) => {
            respuestas[index] = campo.value.trim();
        });
        
        // Contar respuestas correctas e incorrectas
        let correctas = 0;
        let incorrectas = 0;
        const resultados = [];
        
        palabrasOriginales.forEach((palabraOriginal, index) => {
            const respuestaUsuario = respuestas[index] || '';
            const esCorrecta = compararTextoFlexible(respuestaUsuario, palabraOriginal);
            
            if (esCorrecta) {
                correctas++;
            } else {
                incorrectas++;
            }
            
            resultados.push({
                palabraOriginal: palabraOriginal,
                respuestaUsuario: respuestaUsuario,
                esCorrecta: esCorrecta
            });
        });
        
        // Construir el feedback
        let feedbackHTML = '';
        if (correctas === palabrasOriginales.length) {
            feedbackHTML = '<div style="background: #d4edda; border: 2px solid #28a745; padding: 1rem; border-radius: 6px; color: #155724;">';
            feedbackHTML += '<strong style="font-size: 1.1rem;">‚úÖ ¬°Perfecto! Todas las palabras son correctas.</strong>';
        } else {
            feedbackHTML = '<div style="background: #fff3cd; border: 2px solid #ffc107; padding: 1rem; border-radius: 6px; color: #856404;">';
            feedbackHTML += `<strong style="font-size: 1.1rem;">üìä Resultados:</strong><br>`;
            feedbackHTML += `<span style="color: #28a745; font-weight: 600;">‚úì Correctas: ${correctas}</span> | `;
            feedbackHTML += `<span style="color: #dc3545; font-weight: 600;">‚úó Incorrectas: ${incorrectas}</span>`;
        }
        feedbackHTML += '</div><br>';
        
        feedbackHTML += '<strong>Respuestas:</strong><br><br>';
        resultados.forEach((resultado, index) => {
            if (resultado.esCorrecta) {
                feedbackHTML += `<div style="padding: 0.5rem; margin-bottom: 0.5rem; background: #d4edda; border-left: 4px solid #28a745; border-radius: 4px;">`;
                feedbackHTML += `<strong>Palabra ${index + 1}:</strong> <span style="color: #155724; font-weight: 600;">${resultado.palabraOriginal}</span> ‚úÖ`;
                feedbackHTML += `</div>`;
            } else {
                feedbackHTML += `<div style="padding: 0.5rem; margin-bottom: 0.5rem; background: #f8d7da; border-left: 4px solid #dc3545; border-radius: 4px;">`;
                feedbackHTML += `<strong>Palabra ${index + 1}:</strong> `;
                feedbackHTML += `<span style="color: #721c24; text-decoration: line-through;">${resultado.respuestaUsuario || '(vac√≠o)'}</span> ‚Üí `;
                feedbackHTML += `<span style="color: #155724; font-weight: 600;">${resultado.palabraOriginal}</span> ‚ùå`;
                feedbackHTML += `</div>`;
            }
        });
        
        const feedback = document.getElementById('feedback');
        feedback.style.display = 'block';
        feedback.innerHTML = feedbackHTML;

        // Deshabilitar campos
        campos.forEach(campo => {
            campo.disabled = true;
        });

        // Reemplazar TODAS las palabras ocultas en el HTML
        // Obtener todos los spans de palabras ocultas en orden de aparici√≥n
        const todasLasPalabrasOcultas = Array.from(document.querySelectorAll('.palabra-oculta'));
        
        // Crear un mapa de √≠ndices a resultados para acceso r√°pido
        const resultadosMap = {};
        resultados.forEach((resultado, index) => {
            resultadosMap[index] = resultado;
        });
        
        // Reemplazar cada span
        todasLasPalabrasOcultas.forEach((span) => {
            const palabraIndexStr = span.getAttribute('data-palabra-index');
            const palabraIndex = palabraIndexStr !== null ? parseInt(palabraIndexStr) : -1;
            const palabraOriginal = span.getAttribute('data-palabra-original') || '___';
            
            // Buscar el resultado correspondiente
            let resultado = null;
            if (palabraIndex >= 0 && palabraIndex < resultados.length) {
                resultado = resultados[palabraIndex];
            } else {
                // Si no hay √≠ndice v√°lido, intentar buscar por la palabra original
                resultado = resultados.find(r => normalizarTexto(r.palabraOriginal) === normalizarTexto(palabraOriginal));
            }
            
            // Si encontramos un resultado, usarlo; si no, usar la palabra original como correcta
            if (resultado) {
                if (resultado.esCorrecta) {
                    // Correcta: mostrar en verde
                    span.innerHTML = `<strong style="color: #155724;">${resultado.palabraOriginal}</strong>`;
                    span.style.background = '#d4edda';
                    span.style.border = '2px solid #28a745';
                    span.style.borderStyle = 'solid';
                    span.style.borderRadius = '4px';
                    span.style.padding = '0.2rem 0.5rem';
                } else {
                    // Incorrecta: mostrar en rojo
                    span.innerHTML = `<strong style="color: #721c24;">${resultado.palabraOriginal}</strong>`;
                    span.style.background = '#f8d7da';
                    span.style.border = '2px solid #dc3545';
                    span.style.borderStyle = 'solid';
                    span.style.borderRadius = '4px';
                    span.style.padding = '0.2rem 0.5rem';
                }
            } else {
                // Si no hay resultado (por seguridad), mostrar la palabra original en verde
                span.innerHTML = `<strong style="color: #155724;">${palabraOriginal}</strong>`;
                span.style.background = '#d4edda';
                span.style.border = '2px solid #28a745';
                span.style.borderStyle = 'solid';
                span.style.borderRadius = '4px';
                span.style.padding = '0.2rem 0.5rem';
            }
        });

        // Ocultar bot√≥n verificar y mostrar siguiente
        document.getElementById('btn-verificar').style.display = 'none';
        document.getElementById('btn-siguiente').style.display = 'block';
    }

    function inicializarEventListeners() {
        const btnVerificar = document.getElementById('btn-verificar');
        const btnSiguiente = document.getElementById('btn-siguiente');
        
        if (btnVerificar) {
            btnVerificar.replaceWith(btnVerificar.cloneNode(true));
            document.getElementById('btn-verificar').addEventListener('click', verificarRespuesta);
        }
        
        if (btnSiguiente) {
            btnSiguiente.replaceWith(btnSiguiente.cloneNode(true));
            document.getElementById('btn-siguiente').addEventListener('click', mostrarSiguienteArticulo);
        }
        
        // Permitir Enter para verificar
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.target.classList.contains('campo-palabra-input')) {
                const campos = document.querySelectorAll('.campo-palabra-input');
                const todosCompletos = Array.from(campos).every(c => c.value.trim() !== '');
                if (todosCompletos && !campos[0].disabled) {
                    e.preventDefault();
                    verificarRespuesta();
                }
            }
        });
    }

    // Inicializar cuando el DOM est√© listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
            inicializarEventListeners();
            cargarArticulos();
        });
    } else {
        inicializarEventListeners();
        cargarArticulos();
    }

    // Reinicializar en navegaciones de Turbo
    document.addEventListener('turbo:load', function() {
        inicializarEventListeners();
    });
</script>
{% endblock %}


