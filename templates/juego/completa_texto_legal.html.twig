<script>
    /**
     * Funci√≥n para normalizar texto (eliminar acentos, convertir a min√∫sculas, etc.)
     */
    function normalizarTexto(texto) {
        if (!texto) return '';
        return texto.toLowerCase()
            .normalize('NFD')
            .replace(/[\u0300-\u036f]/g, '') // Eliminar acentos
            .trim();
    }

    /**
     * Compara dos textos de forma flexible
     */
    function compararTextoFlexible(texto1, texto2) {
        const t1 = normalizarTexto(texto1);
        const t2 = normalizarTexto(texto2);
        
        // Coincidencia exacta
        if (t1 === t2) return true;
        
        // Si uno contiene al otro (con al menos 3 caracteres)
        if (t1.length >= 3 && t2.length >= 3) {
            if (t1.includes(t2) || t2.includes(t1)) return true;
        }
        
        return false;
    }

    /**
     * Extrae palabras del HTML, respetando los tags
     */
    function extraerPalabrasDelHTML(html) {
        // Crear un elemento temporal para parsear el HTML
        const temp = document.createElement('div');
        temp.innerHTML = html;
        
        // Obtener el texto completo sin tags
        const textoCompleto = temp.textContent || temp.innerText || '';
        
        // Dividir en palabras (eliminar espacios m√∫ltiples y caracteres especiales al inicio/final)
        const palabras = textoCompleto.split(/\s+/).filter(p => p.length > 0 && /[a-zA-Z√Å√â√ç√ì√ö√°√©√≠√≥√∫√ë√±]/.test(p));
        
        // Filtrar palabras muy cortas (menos de 3 caracteres) y muy comunes
        const palabrasComunes = ['el', 'la', 'los', 'las', 'de', 'del', 'en', 'y', 'a', 'un', 'una', 'unos', 'unas', 'que', 'por', 'para', 'con', 'sin', 'sobre', 'entre'];
        const palabrasFiltradas = palabras.filter(p => p.length >= 3 && !palabrasComunes.includes(p.toLowerCase()));
        
        return palabrasFiltradas;
    }

    /**
     * Encuentra las posiciones de todas las palabras en el HTML y las reemplaza en orden de aparici√≥n
     * Marca cada palabra con un n√∫mero (1, 2, 3...) seg√∫n su orden de aparici√≥n en el texto
     */
    function ocultarPalabrasEnHTML(html, palabrasAOcultar) {
        // Crear un contenedor temporal para parsear el HTML
        const temp = document.createElement('div');
        temp.innerHTML = html;
        const textoCompleto = temp.textContent || temp.innerText || '';
        
        // Encontrar todas las ocurrencias de cada palabra √∫nica en orden de aparici√≥n
        const ocurrencias = [];
        const palabrasYaEncontradas = new Set();
        
        // Primero, encontrar todas las ocurrencias de todas las palabras en el texto
        palabrasAOcultar.forEach((palabra) => {
            const palabraKey = palabra.toLowerCase();
            // Solo procesar cada palabra √∫nica una vez
            if (palabrasYaEncontradas.has(palabraKey)) {
                return;
            }
            palabrasYaEncontradas.add(palabraKey);
            
            const regex = new RegExp(`\\b${palabra.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')}\\b`, 'gi');
            let match;
            
            // Buscar todas las ocurrencias de esta palabra en el texto
            while ((match = regex.exec(textoCompleto)) !== null) {
                ocurrencias.push({
                    palabra: palabra,
                    posicion: match.index,
                    match: match[0],
                    palabraKey: palabraKey
                });
            }
        });
        
        // Ordenar ocurrencias por posici√≥n en el texto (orden de aparici√≥n)
        ocurrencias.sort((a, b) => a.posicion - b.posicion);
        
        // Tomar solo la primera ocurrencia de cada palabra √∫nica en orden de aparici√≥n
        const palabrasProcesadasEnOrden = new Set();
        const ocurrenciasUnicasEnOrden = [];
        ocurrencias.forEach(ocurrencia => {
            if (!palabrasProcesadasEnOrden.has(ocurrencia.palabraKey)) {
                palabrasProcesadasEnOrden.add(ocurrencia.palabraKey);
                ocurrenciasUnicasEnOrden.push(ocurrencia);
            }
        });
        
        // Ahora reemplazar en el HTML en orden de aparici√≥n, marcando con n√∫meros
        let htmlResultado = html;
        const palabrasOrdenadas = [];
        
        // Reemplazar palabra por palabra en el orden de aparici√≥n
        ocurrenciasUnicasEnOrden.forEach((ocurrencia, index) => {
            const numero = index + 1;
            const palabra = ocurrencia.palabra;
            
            // Escapar la palabra para usar en regex
            const palabraEscapada = palabra.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
            const regex = new RegExp(`\\b${palabraEscapada}\\b`, 'gi');
            
            const reemplazo = `<span class="palabra-oculta" data-palabra-index="${index}" data-palabra-original="${palabra.replace(/"/g, '&quot;')}" data-palabra-numero="${numero}"><strong>${numero}</strong></span>`;
            
            // Reemplazar solo la primera ocurrencia de esta palabra en el HTML
            let primeraOcurrencia = true;
            htmlResultado = htmlResultado.replace(regex, (match) => {
                if (primeraOcurrencia) {
                    primeraOcurrencia = false;
                    palabrasOrdenadas.push(palabra);
                    return reemplazo;
                }
                return match; // Mantener las dem√°s ocurrencias sin cambiar
            });
        });
        
        return {
            html: htmlResultado,
            palabrasOrdenadas: palabrasOrdenadas
        };
    }

    let articulos = [];
    let indiceActual = 0;
    let articuloActual = null;
    let palabrasOcultas = [];
    let palabrasOriginales = [];

    function cargarArticulos() {
        fetch('{{ path('app_juego_api_articulos_texto_legal_lote') }}')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error HTTP: ' + response.status);
                }
                return response.json();
            })
            .then(data => {
                if (data.error) {
                    alert('Error: ' + data.error);
                    return;
                }
                
                if (!data || data.length === 0) {
                    alert('No hay art√≠culos disponibles');
                    return;
                }
                
                articulos = data;
                indiceActual = 0;
                document.getElementById('total-articulos').textContent = articulos.length;
                mostrarSiguienteArticulo();
            })
            .catch(error => {
                console.error('Error al cargar art√≠culos:', error);
                alert('Error al cargar los art√≠culos. Por favor, recarga la p√°gina e intenta de nuevo.');
            });
    }

    function mostrarSiguienteArticulo() {
        if (indiceActual >= articulos.length || articulos.length === 0) {
            // Si se acabaron, volver al inicio
            indiceActual = 0;
        }
        
        if (articulos.length === 0) {
            alert('No hay art√≠culos disponibles');
            return;
        }
        
        articuloActual = articulos[indiceActual];
        
        // Actualizar contador (usar m√≥dulo para cuando vuelve al inicio)
        const numeroMostrar = (indiceActual % articulos.length) + 1;
        document.getElementById('numero-actual').textContent = numeroMostrar;
        document.getElementById('contador-progreso').style.display = 'block';
        
        indiceActual++;
        
        // Mostrar la ley
        document.getElementById('ley-nombre').textContent = articuloActual.ley.nombre;
        
        // Mostrar el art√≠culo
        document.getElementById('articulo-numero').textContent = 'Art√≠culo ' + articuloActual.numeroCompleto;
        if (articuloActual.nombre) {
            document.getElementById('articulo-nombre').textContent = articuloActual.nombre;
            document.getElementById('articulo-nombre').style.display = 'block';
        } else {
            document.getElementById('articulo-nombre').style.display = 'none';
        }
        
        // Procesar el texto legal
        const textoLegalHTML = articuloActual.textoLegal || '';
        
        if (!textoLegalHTML || textoLegalHTML.trim() === '') {
            // Si no hay texto legal, pasar al siguiente
            mostrarSiguienteArticulo();
            return;
        }
        
        const palabras = extraerPalabrasDelHTML(textoLegalHTML);
        
        if (palabras.length < 1) {
            // Si no hay palabras, pasar al siguiente
            mostrarSiguienteArticulo();
            return;
        }
        
        // Seleccionar entre 1 y 5 palabras aleatoriamente (o menos si no hay suficientes)
        const numPalabrasAOcultar = Math.min(Math.max(1, Math.floor(Math.random() * 5) + 1), palabras.length);
        
        // Seleccionar palabras aleatoriamente sin repetici√≥n
        const indicesSeleccionados = [];
        const palabrasDisponibles = [...palabras.keys()]; // Crear array de √≠ndices disponibles
        
        while (indicesSeleccionados.length < numPalabrasAOcultar && palabrasDisponibles.length > 0) {
            const indiceAleatorio = Math.floor(Math.random() * palabrasDisponibles.length);
            const indiceSeleccionado = palabrasDisponibles[indiceAleatorio];
            indicesSeleccionados.push(indiceSeleccionado);
            palabrasDisponibles.splice(indiceAleatorio, 1); // Eliminar el √≠ndice seleccionado
        }
        
        // Extraer las palabras seleccionadas
        const palabrasSeleccionadas = indicesSeleccionados.map(i => palabras[i]);
        
        // Ocultar palabras en el HTML - esto retorna el HTML y las palabras ordenadas por aparici√≥n
        const resultadoOcultacion = ocultarPalabrasEnHTML(textoLegalHTML, palabrasSeleccionadas);
        document.getElementById('texto-legal').innerHTML = resultadoOcultacion.html;
        
        // Las palabras originales deben estar en el orden de aparici√≥n en el texto
        palabrasOcultas = resultadoOcultacion.palabrasOrdenadas;
        palabrasOriginales = [...palabrasOcultas];
        
        // Verificar que el n√∫mero de palabras ocultas en el HTML coincida
        const palabrasOcultasEnHTML = document.querySelectorAll('.palabra-oculta');
        if (palabrasOcultasEnHTML.length !== palabrasOriginales.length) {
            console.warn(`Advertencia: Se esperaban ${palabrasOriginales.length} palabras ocultas pero se encontraron ${palabrasOcultasEnHTML.length}. Ajustando...`);
            // Ajustar bas√°ndose en el orden de aparici√≥n en el HTML
            const palabrasDesdeHTML = Array.from(palabrasOcultasEnHTML).map(span => {
                return span.getAttribute('data-palabra-original');
            }).filter(p => p !== null);
            
            palabrasOcultas = palabrasDesdeHTML;
            palabrasOriginales = [...palabrasOcultas];
        }
        
        // Crear campos de entrada para cada palabra oculta
        const camposContainer = document.getElementById('campos-palabras');
        camposContainer.innerHTML = '';
        
        // Crear campos en el mismo orden que aparecen las palabras en el texto
        // Las palabras ya est√°n ordenadas por aparici√≥n en el texto
        palabrasOcultas.forEach((palabra, index) => {
            const numero = index + 1;
            const campoDiv = document.createElement('div');
            campoDiv.className = 'campo-palabra';
            campoDiv.innerHTML = `
                <label style="display: block; margin-bottom: 0.25rem; font-weight: 600; color: #333;">
                    Palabra ${numero} <span style="color: #666; font-size: 0.9rem;">(aparece marcada con ${numero} en el texto):</span>
                </label>
                <input type="text" 
                       class="form-control campo-palabra-input" 
                       data-palabra-index="${index}"
                       data-palabra-numero="${numero}"
                       placeholder="Escribe la palabra ${numero}..."
                       style="font-size: 1rem; padding: 0.75rem;">
            `;
            camposContainer.appendChild(campoDiv);
        });
        
        // Limpiar feedback
        document.getElementById('feedback').style.display = 'none';
        
        // Mostrar bot√≥n verificar y ocultar siguiente
        document.getElementById('btn-verificar').style.display = 'block';
        document.getElementById('btn-siguiente').style.display = 'none';
        
        // Habilitar campos
        document.querySelectorAll('.campo-palabra-input').forEach(input => {
            input.disabled = false;
            input.value = '';
        });
        
        // Enfocar primer campo
        const primerCampo = document.querySelector('.campo-palabra-input');
        if (primerCampo) {
            primerCampo.focus();
        }
    }

    function verificarRespuesta() {
        const campos = document.querySelectorAll('.campo-palabra-input');
        const respuestas = [];
        
        // Obtener todas las respuestas del usuario ordenadas por el n√∫mero de la palabra
        const respuestasOrdenadas = [];
        campos.forEach((campo) => {
            const palabraIndex = parseInt(campo.getAttribute('data-palabra-index')) || 0;
            const palabraNumero = parseInt(campo.getAttribute('data-palabra-numero')) || (palabraIndex + 1);
            respuestasOrdenadas[palabraIndex] = {
                respuesta: campo.value.trim(),
                numero: palabraNumero
            };
        });
        
        // Guardar partida cuando se responde (solo si hay al menos una respuesta)
        if (respuestasOrdenadas.some(r => r && r.respuesta.trim() !== '')) {
            guardarPartida('completa_texto_legal');
        }
        
        // Contar respuestas correctas e incorrectas
        // Asegurarse de que comparamos en el mismo orden que aparecen en el texto
        let correctas = 0;
        let incorrectas = 0;
        const resultados = [];
        
        palabrasOriginales.forEach((palabraOriginal, index) => {
            const respuestaData = respuestasOrdenadas[index];
            const respuestaUsuario = respuestaData ? respuestaData.respuesta : '';
            const numeroPalabra = respuestaData ? respuestaData.numero : (index + 1);
            const esCorrecta = compararTextoFlexible(respuestaUsuario, palabraOriginal);
            
