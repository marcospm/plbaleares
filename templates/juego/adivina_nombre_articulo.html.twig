{% block body %}
<div style="max-width: 800px; margin: 2rem auto; padding: 0 1rem;">
    <div style="text-align: center; margin-bottom: 2rem;">
        <h1 style="color: var(--color-primary); margin-bottom: 0.5rem;">쮺칩mo se Llama el Art칤culo?</h1>
        <p style="color: #666;">Lee la ley y el n칰mero del art칤culo. 쯉abes cu치l es su nombre?</p>
        <button id="btn-salir-juego" class="btn btn-danger" style="margin-top: 1rem; min-width: 120px; padding: 0.5rem 1rem; font-size: 0.9rem;">
            游뛁 Salir del juego
        </button>
    </div>

    <div id="juego-container" class="juego-container">
        <div class="card" style="margin-bottom: 1.5rem;">
            <div class="card-body" style="padding: 2rem;">
                <div id="contador-progreso" class="contador-progreso" style="display: none;">
                    Art칤culo <span id="numero-actual">1</span> de <span id="total-articulos">20</span>
                </div>

                <div id="info-articulo" style="margin-bottom: 2rem;">
                    <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1rem;">
                        <h3 style="margin: 0 0 0.5rem 0; color: var(--color-primary);">Ley:</h3>
                        <p id="ley-nombre" style="margin: 0; font-size: 1.1rem; font-weight: 600; color: #333;"></p>
                    </div>
                    <div style="background: #fff3cd; padding: 1.5rem; border-radius: 8px;">
                        <h3 style="margin: 0 0 0.5rem 0; color: var(--color-primary);">N칰mero del art칤culo:</h3>
                        <p id="numero-articulo" style="margin: 0; font-size: 1.1rem; font-weight: 600; color: #333;"></p>
                    </div>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label for="respuesta" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #333;">Nombre del art칤culo:</label>
                    <input type="text" id="respuesta" class="form-control" placeholder="Escribe el nombre del art칤culo..." style="font-size: 1rem; padding: 0.75rem;">
                </div>

                <div style="display: flex; gap: 1rem; margin-bottom: 1rem;">
                    <button id="btn-verificar" class="btn btn-primary" style="flex: 1; padding: 0.75rem;">Verificar</button>
                    <button id="btn-siguiente" class="btn btn-secondary" style="flex: 1; padding: 0.75rem; display: none;">Siguiente</button>
                </div>

                <div id="feedback" style="display: none; padding: 1rem; border-radius: 8px; margin-top: 1rem;"></div>
            </div>
        </div>

       
    </div>
</div>

<script>
    /**
     * Funci칩n para normalizar texto (eliminar acentos, convertir a min칰sculas, etc.)
     */
    function normalizarTexto(texto) {
        if (!texto) return '';
        return texto.toLowerCase()
            .normalize('NFD')
            .replace(/[\u0300-\u036f]/g, '') // Eliminar acentos
            .trim();
    }

    let articulos = [];
    let indiceActual = 0;
    let articuloActual = null;
    let aciertos = parseInt(sessionStorage.getItem('adivinaNombreArticuloAciertos') || '0');
    let errores = parseInt(sessionStorage.getItem('adivinaNombreArticuloErrores') || '0');


    function cargarArticulos() {
        fetch('{{ path('app_juego_api_articulos_lote') }}')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error HTTP: ' + response.status);
                }
                return response.json();
            })
            .then(data => {
                if (data.error) {
                    alert('Error: ' + data.error);
                    return;
                }
                
                if (!data || data.length === 0) {
                    alert('No hay art칤culos disponibles');
                    return;
                }
                
                // Mezclar los art칤culos para asegurar variedad de leyes
                articulos = data;
                // Mezclar aleatoriamente el array
                for (let i = articulos.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [articulos[i], articulos[j]] = [articulos[j], articulos[i]];
                }
                indiceActual = 0;
                document.getElementById('total-articulos').textContent = articulos.length;
                mostrarSiguienteArticulo();
            })
            .catch(error => {
                console.error('Error al cargar art칤culos:', error);
                alert('Error al cargar los art칤culos. Por favor, recarga la p치gina e intenta de nuevo.');
            });
    }

    function mostrarSiguienteArticulo() {
        if (indiceActual >= articulos.length) {
            // Si se acabaron los art칤culos, cargar m치s
            cargarArticulos();
            return;
        }
        
        articuloActual = articulos[indiceActual];
        
        // Actualizar contador
        document.getElementById('numero-actual').textContent = indiceActual + 1;
        document.getElementById('contador-progreso').style.display = 'block';
        
        indiceActual++;
        
        // Mostrar la ley
        if (articuloActual.ley && articuloActual.ley.nombre) {
            document.getElementById('ley-nombre').textContent = articuloActual.ley.nombre;
        } else {
            document.getElementById('ley-nombre').textContent = 'Ley no especificada';
        }
        
        // Mostrar el n칰mero del art칤culo
        document.getElementById('numero-articulo').textContent = articuloActual.numeroCompleto || articuloActual.numero || 'Sin n칰mero';
        
        document.getElementById('respuesta').value = '';
        document.getElementById('respuesta').disabled = false;
        document.getElementById('btn-verificar').style.display = 'block';
        document.getElementById('btn-siguiente').style.display = 'none';
        document.getElementById('feedback').style.display = 'none';
        document.getElementById('respuesta').focus();
    }

    function verificarRespuesta() {
        const respuesta = document.getElementById('respuesta').value.trim();
        if (!respuesta) {
            alert('Por favor, escribe una respuesta');
            return;
        }

        // Guardar partida cuando se responde
        guardarPartida('adivina_nombre_articulo');

        // Comparar de forma flexible (sin acentos, min칰sculas)
        const respuestaNormalizada = normalizarTexto(respuesta);
        const nombreNormalizado = normalizarTexto(articuloActual.nombre);
        
        const esCorrecta = respuestaNormalizada === nombreNormalizado;
        
        const feedback = document.getElementById('feedback');
        feedback.style.display = 'block';
        
        // Mostrar siempre el mismo estilo, sin indicar si es correcto o incorrecto
        feedback.style.backgroundColor = '#e9ecef';
        feedback.style.borderLeft = '4px solid #6c757d';
        feedback.style.color = '#212529';
        feedback.innerHTML = '<strong>Nombre correcto:</strong> <strong>' + (articuloActual.nombre || 'Sin nombre') + '</strong>';


        document.getElementById('respuesta').disabled = true;
        document.getElementById('btn-verificar').style.display = 'none';
        document.getElementById('btn-siguiente').style.display = 'block';
    }

    function guardarPartida(tipoJuego) {
        fetch('{{ path('app_juego_api_guardar_partida') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ tipoJuego: tipoJuego })
        }).catch(error => {
            console.error('Error al guardar partida:', error);
            // No mostrar error al usuario para no interrumpir el juego
        });
    }

    document.getElementById('btn-verificar').addEventListener('click', verificarRespuesta);
    document.getElementById('btn-siguiente').addEventListener('click', mostrarSiguienteArticulo);
    document.getElementById('respuesta').addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && !document.getElementById('respuesta').disabled) {
            verificarRespuesta();
        }
    });

    // Cargar art칤culos al iniciar
    cargarArticulos();

    // Bot칩n de salir del juego
    document.getElementById('btn-salir-juego').addEventListener('click', function() {
        if (confirm('丘멆잺 쮼st치s seguro de que quieres salir del juego?\n\nEl progreso del juego NO se guarda y deber치s empezar de nuevo.')) {
            window.location.href = '{{ path('app_dashboard') }}';
        }
    });
</script>

<style>
    /* Estilos responsivos para el bot칩n de salir */
    @media (max-width: 768px) {
        #btn-salir-juego {
            width: 100% !important;
        }
    }
</style>
{% endblock %}

