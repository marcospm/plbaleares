{% extends 'base.html.twig' %}

{% block title %}Crear Partida Preguntas - Gamificaci贸n - BISPOL{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .juego-container {
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn {
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .opcion-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid #e0e0e0;
        }

        .opcion-card:hover {
            border-color: var(--color-primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .opcion-card.selected {
            border-color: var(--color-primary);
            background-color: #e3f2fd;
        }
    </style>
{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 2rem auto; padding: 0 1rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <h1 style="color: var(--color-primary); margin-bottom: 0.5rem;">Crear Partida Preguntas</h1>
        <p style="color: #666;">Crea una partida multijugador y compite con otros jugadores en tiempo real</p>
    </div>

    <div class="juego-container">
        <div class="row" style="gap: 2rem;">
            <div class="col-md-6">
                <div class="card" style="height: 100%;">
                    <div class="card-body" style="padding: 2rem; text-align: center;">
                        <h3 style="color: var(--color-primary); margin-bottom: 1rem;">Crear Nueva Partida</h3>
                        <p style="color: #666; margin-bottom: 2rem;">Crea una partida con preguntas del temario general y comparte el c贸digo con otros jugadores</p>
                        <a href="{{ path('app_partida_preguntas_crear') }}" class="btn btn-primary btn-lg" style="width: 100%;">
                            Crear Partida
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card" style="height: 100%;">
                    <div class="card-body" style="padding: 2rem; text-align: center;">
                        <h3 style="color: var(--color-primary); margin-bottom: 1rem;">Unirse a Partida</h3>
                        <p style="color: #666; margin-bottom: 2rem;">Si tienes un enlace de partida, 煤nete para competir</p>
                        <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem;">
                            <p style="margin: 0; color: #666; font-size: 0.9rem;">
                                <strong> Nota:</strong> Para unirte a una partida, necesitas el enlace completo que te comparti贸 el creador de la partida.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('form-unirse').addEventListener('submit', function(e) {
        e.preventDefault();
        const codigo = document.getElementById('codigo-partida').value.trim().toUpperCase();
        if (codigo.length === 8) {
            window.location.href = '{{ path('app_partida_preguntas_unirse', {codigo: 'CODIGO'}) }}'.replace('CODIGO', codigo);
        } else {
            alert('El c贸digo debe tener 8 caracteres');
        }
    });
</script>
{% endblock %}

