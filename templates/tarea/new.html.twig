{% extends 'base.html.twig' %}

{% block title %}Nueva Tarea{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Nueva Tarea</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            {{ form_row(form.semanaAsignacion) }}
            {{ form_row(form.usuarios) }}
            {{ form_row(form.tema) }}
            {{ form_row(form.ley) }}
            {{ form_row(form.articulo) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Crear Tarea</button>
                <a href="{{ path('app_tarea_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

