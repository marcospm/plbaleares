{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Formulario responsive */
            .card-body > div[style*="display: grid"] {
                grid-template-columns: 1fr !important;
                gap: 1rem !important;
            }
            
            .card-body .form-group {
                width: 100%;
            }
            
            .card-body label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.95rem;
            }
            
            .card-body input[type="text"],
            .card-body input[type="date"] {
                font-size: 16px !important;
                min-height: 48px;
                width: 100%;
            }
            
            .card-body select {
                font-size: 16px !important;
                min-height: 48px;
                width: 100%;
            }
            
            .card-body > div > div:last-child {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .card-body > div > div:last-child .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .table {
                font-size: 0.85rem;
                min-width: 600px;
            }
            
            /* Ocultar columnas menos importantes en móvil */
            .table th:nth-child(1),
            .table td:nth-child(1) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table td > div[style*="display: flex"],
            .table td > div[style*="display: inline-block"] {
                display: flex !important;
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table td form {
                width: 100%;
            }
            
            .table td form button {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Tareas</h1>
    <a href="{{ path('app_tarea_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nueva Tarea</a>
</div>

<form method="get" action="{{ path('app_tarea_index') }}" style="margin-bottom: 2rem;">
    <div class="card">
        <div class="card-body">
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar...">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Semana:</label>
                    <input type="date" name="semana" value="{{ semana }}" class="form-control">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Estado:</label>
                    <select name="completadas" class="form-control">
                        <option value="">Todos</option>
                        <option value="true" {% if completadas == 'true' %}selected{% endif %}>Completadas</option>
                        <option value="false" {% if completadas == 'false' %}selected{% endif %}>Pendientes</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_tarea_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
        </div>
    </div>
</form>

{% if tareas|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Semana</th>
                    <th>Usuarios</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for tarea in tareas %}
                    <tr>
                        <td>{{ tarea.id }}</td>
                        <td><strong>{{ tarea.nombre }}</strong></td>
                        <td>{{ tarea.semanaAsignacion|date('d/m/Y') }}</td>
                        <td>
                            <span class="badge badge-info">{{ tarea.asignaciones|length }} usuario(s)</span>
                        </td>
                        <td>
                            {% set completadas = tarea.asignaciones|filter(a => a.completada)|length %}
                            <span class="badge {% if completadas == tarea.asignaciones|length %}badge-success{% else %}badge-warning{% endif %}">
                                {{ completadas }}/{{ tarea.asignaciones|length }} completadas
                            </span>
                        </td>
                        <td>
                            <a href="{{ path('app_tarea_show', {'id': tarea.id}) }}" class="btn btn-sm btn-info">Ver</a>
                            <a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}" class="btn btn-sm btn-secondary">Editar</a>
                            <form method="post" action="{{ path('app_tarea_delete', {'id': tarea.id}) }}" style="display: inline-block;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta tarea?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarea.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay tareas registradas.</p>
        </div>
    </div>
{% endif %}
{% endblock %}

