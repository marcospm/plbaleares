{% extends 'base.html.twig' %}

{% block title %}Asignar Franja Horaria{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Asignar Franja Horaria</h1>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <strong>Tarea:</strong> {{ tarea.nombre }}<br>
            <strong>Usuario:</strong> {{ tareaAsignada.usuario.username }}<br>
            <strong>Semana:</strong> {{ tarea.semanaAsignacion|date('d/m/Y') }}
        </div>

        {{ form_start(form) }}
            {{ form_row(form.franjaHoraria) }}
            
            <div class="alert alert-info">
                <strong>Nota:</strong> Solo se pueden asignar tareas a franjas de tipo "Estudio y Tareas". 
                La semana de la tarea debe coincidir con la semana de la franja.
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Asignar Franja</button>
                <a href="{{ path('app_tarea_show', {'id': tarea.id}) }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

