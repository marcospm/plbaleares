{% extends 'base.html.twig' %}

{% block title %}Gestión de Usuarios{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Estilos para paginación */
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 0.25rem;
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .page-item {
            margin: 0;
        }
        
        .page-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: var(--color-primary);
            text-decoration: none;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            transition: all 0.2s;
            min-width: 40px;
            text-align: center;
            font-weight: 500;
        }
        
        .page-link:hover:not(.disabled):not([aria-disabled="true"]) {
            background-color: #e9ecef;
            border-color: #dee2e6;
            color: var(--color-primary);
            transform: translateY(-1px);
        }
        
        .page-item.active .page-link {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
            color: #fff;
            font-weight: 600;
        }
        
        .page-item.disabled .page-link,
        .page-link[aria-disabled="true"] {
            color: #6c757d;
            pointer-events: none;
            cursor: not-allowed;
            background-color: #fff;
            border-color: #dee2e6;
            opacity: 0.6;
        }
        
        .page-link:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(0, 113, 181, 0.25);
        }
        
        @media (max-width: 768px) {
            .pagination {
                gap: 0.15rem;
            }
            
            .page-link {
                padding: 0.4rem 0.6rem;
                font-size: 0.875rem;
                min-width: 35px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4">
    <h1>Gestión de Usuarios</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">➕ Crear Usuario</a>
    {% endif %}
</div>

<form method="get" action="{{ path('app_user_index') }}" style="margin-bottom: 2rem;">
    <div class="card">
        <div class="card-body">
            <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar por nombre de usuario...">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Estado:</label>
                    <select name="activo" class="form-control">
                        <option value="">Todos</option>
                        <option value="1" {% if activoFiltro == '1' %}selected{% endif %}>Activos</option>
                        <option value="0" {% if activoFiltro == '0' %}selected{% endif %}>Inactivos</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
        </div>
    </div>
</form>

{% if users|length > 0 %}
    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre de Usuario</th>
                    <th>Roles</th>
                    <th>Estado</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Alumnos Asignados</th>
                    {% endif %}
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td><strong>{{ user.nombreDisplay }}</strong></td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge {% if role == 'ROLE_PROFESOR' %}badge-dificil{% else %}badge-facil{% endif %}">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        </td>
                        <td>
                            {% if user.isActivo %}
                                <span class="badge badge-success" style="background-color: var(--color-success);">Activo</span>
                            {% else %}
                                <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactivo</span>
                            {% endif %}
                        </td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td>
                                {% if 'ROLE_PROFESOR' in user.roles or 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge" style="background-color: var(--color-primary);">{{ user.alumnos|length }} alumno(s)</span>
                                {% elseif user.profesores|length > 0 %}
                                    {% for profesor in user.profesores %}
                                        <span class="badge" style="background-color: #007bff; margin-right: 0.25rem;">{{ profesor.nombreDisplay }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted">Sin asignar</span>
                                {% endif %}
                            </td>
                        {% endif %}
                        <td>
                            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-secondary">Ver</a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') and ('ROLE_PROFESOR' in user.roles or 'ROLE_ADMIN' in user.roles) %}
                                    <a href="{{ path('app_user_asignar_alumnos', {'id': user.id}) }}" class="btn btn-sm btn-info">Asignar Alumnos</a>
                                {% endif %}
                                <form method="post" action="{{ path('app_user_toggle_activo', {'id': user.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                    <button type="submit" class="btn btn-sm {% if user.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                        {% if user.isActivo %}Desactivar{% else %}Activar{% endif %}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Paginación #}
    {% if totalPages > 1 %}
        <nav aria-label="Paginación de usuarios" style="margin-top: 2rem;">
            <ul class="pagination justify-content-center">
                {# Botón Anterior #}
                <li class="page-item {% if page <= 1 %}disabled{% endif %}">
                    <a class="page-link" href="{% if page > 1 %}{{ path('app_user_index', {'page': page - 1, 'search': search, 'activo': activoFiltro}) }}{% else %}#{% endif %}">
                        Anterior
                    </a>
                </li>

                {# Números de página #}
                {% set startPage = max(1, page - 2) %}
                {% set endPage = min(totalPages, page + 2) %}

                {% if startPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_user_index', {'page': 1, 'search': search, 'activo': activoFiltro}) }}">1</a>
                    </li>
                    {% if startPage > 2 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endif %}

                {% for p in startPage..endPage %}
                    <li class="page-item {% if p == page %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_user_index', {'page': p, 'search': search, 'activo': activoFiltro}) }}">{{ p }}</a>
                    </li>
                {% endfor %}

                {% if endPage < totalPages %}
                    {% if endPage < totalPages - 1 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_user_index', {'page': totalPages, 'search': search, 'activo': activoFiltro}) }}">{{ totalPages }}</a>
                    </li>
                {% endif %}

                {# Botón Siguiente #}
                <li class="page-item {% if page >= totalPages %}disabled{% endif %}">
                    <a class="page-link" href="{% if page < totalPages %}{{ path('app_user_index', {'page': page + 1, 'search': search, 'activo': activoFiltro}) }}{% else %}#{% endif %}">
                        Siguiente
                    </a>
                </li>
            </ul>
        </nav>
        <div class="text-center mt-3" style="color: #666; font-size: 0.9rem; padding: 0.75rem; background-color: #f8f9fa; border-radius: 4px;">
            <strong>Mostrando {{ ((page - 1) * itemsPerPage) + 1 }} - {{ min(page * itemsPerPage, totalItems) }} de {{ totalItems }} usuario(s)</strong>
        </div>
    {% endif %}
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No se encontraron usuarios con los filtros seleccionados.</p>
        </div>
    </div>
{% endif %}
{% endblock %}

