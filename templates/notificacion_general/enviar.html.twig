{% extends 'base.html.twig' %}

{% block title %}Enviar Notificaci√≥n General{% endblock %}

{% block body %}
<script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>üì¢ Enviar Notificaci√≥n General</h1>
            <p class="text-muted">Esta notificaci√≥n ser√° enviada a todos los alumnos activos del sistema.</p>
            
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <div class="card mt-4">
                <div class="card-body">
                    <form method="post" action="{{ path('app_notificacion_general_enviar') }}" id="notificacion-form">
                        <div class="mb-3">
                            <label for="titulo" class="form-label">
                                <strong>T√≠tulo <span class="text-danger">*</span></strong>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="titulo" 
                                name="titulo" 
                                value="{{ titulo|default('') }}" 
                                required 
                                maxlength="255"
                                placeholder="Ej: Mantenimiento programado"
                            >
                            <small class="form-text text-muted">M√°ximo 255 caracteres</small>
                        </div>
                        
                        <div class="mb-3">
                            <label for="mensaje" class="form-label">
                                <strong>Mensaje <span class="text-danger">*</span></strong>
                            </label>
                            <textarea 
                                class="form-control tinymce-editor" 
                                id="mensaje" 
                                name="mensaje" 
                                rows="10" 
                                required
                                placeholder="Escribe aqu√≠ el mensaje que recibir√°n todos los alumnos..."
                            >{{ mensaje|default('')|raw }}</textarea>
                            <small class="form-text text-muted">Este mensaje ser√° visible para todos los alumnos activos. Puedes usar formato enriquecido (negrita, cursiva, listas, etc.)</small>
                        </div>
                        
                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Informaci√≥n:</strong> Esta notificaci√≥n se enviar√° a todos los alumnos activos del sistema. 
                            Los alumnos la ver√°n en su panel de notificaciones.
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                                ‚Üê Volver al Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary" onclick="return confirm('¬øEst√°s seguro de que deseas enviar esta notificaci√≥n a todos los alumnos?');">
                                üì§ Enviar Notificaci√≥n
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Inicializar editor para mensaje (CKEditor)
    const editorElement = document.querySelector('.tinymce-editor');
    if (editorElement && typeof ClassicEditor !== 'undefined') {
        ClassicEditor
            .create(editorElement, {
                toolbar: {
                    items: [
                        'heading', '|',
                        'bold', 'italic', 'underline', 'strikethrough', '|',
                        'fontSize', 'fontColor', 'fontBackgroundColor', '|',
                        'bulletedList', 'numberedList', '|',
                        'alignment', '|',
                        'link', 'blockQuote', 'insertTable', '|',
                        'undo', 'redo'
                    ],
                    shouldNotGroupWhenFull: true
                },
                heading: {
                    options: [
                        { model: 'paragraph', title: 'P√°rrafo', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h1', title: 'T√≠tulo 1', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h2', title: 'T√≠tulo 2', class: 'ck-heading_heading2' },
                        { model: 'heading3', view: 'h3', title: 'T√≠tulo 3', class: 'ck-heading_heading3' }
                    ]
                },
                fontSize: {
                    options: [9, 11, 13, 'default', 17, 19, 21]
                },
                language: 'es'
            })
            .then(editor => {
                console.log('CKEditor inicializado correctamente para notificaci√≥n general');
                
                // Asegurar que el contenido HTML se env√≠e en el formulario
                const form = document.getElementById('notificacion-form');
                if (form) {
                    form.addEventListener('submit', function(e) {
                        // Actualizar el textarea con el contenido HTML del editor antes de enviar
                        editor.updateSourceElement();
                    });
                }
            })
            .catch(error => {
                console.error('Error al inicializar CKEditor:', error);
            });
    }
</script>
{% endblock %}
