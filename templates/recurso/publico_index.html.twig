{% extends 'base.html.twig' %}

{% block title %}Recursos - Sistema de Oposiciones{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Recursos de Estudio</h1>
    </div>
    <div class="card-body">
        <p style="margin-bottom: 2rem; color: var(--color-text-light);">
            Accede al temario completo y descarga los ex치menes PDF disponibles para tu preparaci칩n.
        </p>

        {# Dise침o de dos columnas como el dashboard del alumno #}
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
            {# Columna izquierda: Temario #}
            <div>
                {# Temario General #}
                <div class="card" style="margin-bottom: 1.5rem;">
                    <div class="card-header">
                        <h2>Temario General (30 Temas)</h2>
                    </div>
                    <div class="card-body">
                        {% if temas|length > 0 %}
                            <div style="max-height: 400px; overflow-y: auto;">
                                <div style="display: grid; gap: 0.5rem;">
                                    {% for tema in temas %}
                                        <div style="padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; background-color: {% if tema.rutaPdf %}#e8f5e9{% else %}#fff{% endif %};">
                                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                                <div style="flex: 1;">
                                                    <strong style="color: var(--color-primary); font-size: 0.95rem;">
                                                        Tema {{ tema.id }}: {{ tema.nombre }}
                                                    </strong>
                                                    {% if tema.descripcion %}
                                                        <p style="margin: 0.25rem 0 0 0; font-size: 0.85rem; color: var(--color-text-light);">
                                                            {{ tema.descripcion|slice(0, 80) }}{% if tema.descripcion|length > 80 %}...{% endif %}
                                                        </p>
                                                    {% endif %}
                                                </div>
                                                {% if tema.rutaPdf %}
                                                    <div style="margin-left: 1rem;">
                                                        <a href="{{ tema.rutaPdf }}" target="_blank" class="btn btn-sm btn-success" rel="noopener noreferrer">
                                                            Ver PDF
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p style="text-align: center; color: #666; margin: 1rem 0;">No hay temas disponibles.</p>
                        {% endif %}
                    </div>
                </div>

                {# Temarios Municipales #}
                {% if temasPorMunicipio|length > 0 %}
                    {% for municipioId, datos in temasPorMunicipio %}
                        <div class="card" style="margin-bottom: 1.5rem;">
                            <div class="card-header" style="background-color: #e3f2fd;">
                                <h2>Temario {{ datos.municipio.nombre }}</h2>
                            </div>
                            <div class="card-body">
                                <div style="max-height: 400px; overflow-y: auto;">
                                    <div style="display: grid; gap: 0.5rem;">
                                        {% for tema in datos.temas %}
                                            <div style="padding: 0.75rem; border: 1px solid #2196F3; border-radius: 4px; background-color: {% if tema.rutaPdf %}#e3f2fd{% else %}#fff{% endif %};">
                                                <div style="display: flex; justify-content: space-between; align-items: center;">
                                                    <div style="flex: 1;">
                                                        <strong style="color: #1976D2; font-size: 0.95rem;">
                                                            {{ tema.nombre }}
                                                        </strong>
                                                    </div>
                                                    {% if tema.rutaPdf %}
                                                        <div style="margin-left: 1rem;">
                                                            <a href="{{ tema.rutaPdf }}" target="_blank" class="btn btn-sm btn-primary" rel="noopener noreferrer">
                                                                Ver PDF
                                                            </a>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            {# Columna derecha: Ex치menes PDF y Recursos Espec칤ficos (mitad cada uno) #}
            <div>
                {# Ex치menes PDF #}
                <div class="card" style="margin-bottom: 1.5rem;">
                    <div class="card-header">
                        <h2>Ex치menes PDF</h2>
                    </div>
                    <div class="card-body">
                        {% if examenes|length > 0 %}
                            <p style="margin-bottom: 1rem; color: var(--color-text-light); font-size: 0.9rem;">
                                Ex치menes originales en formato PDF organizados por tema. Se muestran ordenados por fecha de publicaci칩n.
                            </p>
                            <div style="max-height: 300px; overflow-y: auto;">
                                <div style="display: grid; gap: 1rem;">
                                    {% for examen in examenes %}
                                        <div style="padding: 1rem; border: 1px solid #ddd; border-radius: 4px; background-color: #fff;">
                                            <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 1rem;">
                                                <div style="flex: 1;">
                                                    <h3 style="color: var(--color-primary); margin-bottom: 0.5rem; font-size: 1rem;">
                                                        {{ examen.nombre }}
                                                    </h3>
                                                    {% if examen.tema %}
                                                        <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.85rem;">
                                                            <strong>Tema:</strong> {{ examen.tema.nombre }}
                                                        </p>
                                                    {% endif %}
                                                    {% if examen.descripcion %}
                                                        <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.85rem;">
                                                            {{ examen.descripcion|slice(0, 80) }}{% if examen.descripcion|length > 80 %}...{% endif %}
                                                        </p>
                                                    {% endif %}
                                                    <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.8rem;">
                                                        <strong>Publicado:</strong> {{ examen.fechaSubida|date('d/m/Y') }}
                                                    </p>
                                                </div>
                                                <div>
                                                    <a href="{{ examen.rutaArchivo }}" target="_blank" class="btn btn-sm btn-primary" rel="noopener noreferrer">
                                                        Ver PDF
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p style="text-align: center; color: #666; margin: 1rem 0;">No hay ex치menes PDF disponibles.</p>
                        {% endif %}
                    </div>
                </div>

                {# Recursos Espec칤ficos #}
                <div class="card">
                    <div class="card-header" style="background-color: #FF9800; color: white;">
                        <h2 style="margin: 0; color: white;">游늹 Recursos Espec칤ficos</h2>
                    </div>
                    <div class="card-body">
                        {% if recursosEspecificos|length > 0 %}
                            <p style="margin-bottom: 1rem; color: var(--color-text-light); font-size: 0.9rem;">
                                Recursos compartidos espec칤ficamente contigo por tu profesor. Se muestran ordenados por fecha de creaci칩n.
                            </p>
                            <div style="max-height: 300px; overflow-y: auto;">
                                <div style="display: grid; gap: 1rem;">
                                    {% for recurso in recursosEspecificos %}
                                        <div style="padding: 1rem; border: 1px solid #FF9800; border-radius: 4px; background-color: #fff3e0;">
                                            <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 1rem;">
                                                <div style="flex: 1;">
                                                    <h3 style="color: #FF9800; margin-bottom: 0.5rem; font-size: 1rem;">
                                                        {{ recurso.nombre }}
                                                    </h3>
                                                    {% if recurso.descripcion %}
                                                        <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.85rem;">
                                                            {{ recurso.descripcion|slice(0, 80) }}{% if recurso.descripcion|length > 80 %}...{% endif %}
                                                        </p>
                                                    {% endif %}
                                                    {% if recurso.nombreArchivoOriginal %}
                                                        <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.8rem;">
                                                            <strong>Archivo:</strong> {{ recurso.nombreArchivoOriginal }}
                                                        </p>
                                                    {% endif %}
                                                    <p style="margin: 0.25rem 0; color: var(--color-text-light); font-size: 0.8rem;">
                                                        <strong>Profesor:</strong> {{ recurso.profesor.username }} | <strong>Fecha:</strong> {{ recurso.fechaCreacion|date('d/m/Y') }}
                                                    </p>
                                                </div>
                                                <div>
                                                    {% if recurso.rutaArchivo %}
                                                        <a href="{{ recurso.rutaArchivo }}" target="_blank" class="btn btn-sm" style="background-color: #FF9800; color: white; border: none;" rel="noopener noreferrer">
                                                            Descargar
                                                        </a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p style="text-align: center; color: #666; margin: 1rem 0;">No tienes recursos espec칤ficos asignados por tu profesor.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

