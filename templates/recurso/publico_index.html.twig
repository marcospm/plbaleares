{# Modales para mostrar temas de cada examen #}
{% for examen in examenes %}
    {% if examen.temas|length > 0 %}
        <div id="modal-temas-{{ examen.id }}" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
            <div style="background-color: #fff; margin: 5% auto; padding: 0; border-radius: 8px; width: 90%; max-width: 500px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                <div style="background-color: var(--color-primary, #007bff); color: white; padding: 1rem; border-radius: 8px 8px 0 0; display: flex; justify-content: space-between; align-items: center;">
                    <h3 style="margin: 0; font-size: 1.2rem;">Temas del Examen: {{ examen.nombre }}</h3>
                    <button type="button" onclick="cerrarModalTemas({{ examen.id }})" style="background: none; border: none; color: white; font-size: 1.5rem; cursor: pointer; padding: 0; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">&times;</button>
                </div>
                <div style="padding: 1.5rem; max-height: 400px; overflow-y: auto;">
                    <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                        {% for tema in examen.temas %}
                            <div style="padding: 0.75rem; background-color: #f8f9fa; border-left: 3px solid var(--color-primary, #007bff); border-radius: 4px;">
                                <strong style="color: var(--color-primary, #007bff);">{{ tema.nombre }}</strong>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div style="padding: 1rem; border-top: 1px solid #ddd; text-align: right;">
                    <button type="button" onclick="cerrarModalTemas({{ examen.id }})" class="btn btn-secondary" style="padding: 0.5rem 1.5rem;">Cerrar</button>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}

<script>
function mostrarTemasExamen(examenId) {
    const modal = document.getElementById('modal-temas-' + examenId);
    if (modal) {
        modal.style.display = 'block';
    }
}

function cerrarModalTemas(examenId) {
    const modal = document.getElementById('modal-temas-' + examenId);
    if (modal) {
        modal.style.display = 'none';
    }
}

// Cerrar modal al hacer clic fuera de 칠l
window.onclick = function(event) {
    const modales = document.querySelectorAll('[id^="modal-temas-"]');
    modales.forEach(modal => {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });
}

// Ajustar estilos de modales en m칩vil
function ajustarModales() {
    if (window.innerWidth <= 768) {
        const modales = document.querySelectorAll('[id^="modal-temas-"]');
        modales.forEach(modal => {
            const content = modal.querySelector('div');
            if (content) {
                content.style.width = '95%';
                content.style.margin = '2% auto';
                content.style.maxHeight = '90vh';
            }
        });
    }
}

window.addEventListener('resize', ajustarModales);
window.addEventListener('DOMContentLoaded', ajustarModales);
</script>

{% endblock %}

