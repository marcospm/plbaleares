        }
        .actividad-item small {
            display: block;
            margin-top: 0.25rem;
            color: #6c757d;
            font-size: 0.8rem;
        }
        /* Mejorar espaciado de las filas */
        .row > div {
            margin-bottom: 0.75rem;
        }
        /* Estilos para el contenedor de actividades */
        #actividades-container {
            margin-bottom: 1rem;
        }
        #actividades-container:empty::before {
            content: "No hay actividades agregadas. Haz clic en '+ Agregar Actividad' para comenzar.";
            display: block;
            padding: 2rem;
            text-align: center;
            color: #6c757d;
            font-style: italic;
            background: #f8f9fa;
            border: 2px dashed #dee2e6;
            border-radius: 4px;
        }
        /* Estilos para select m煤ltiple */
        select[multiple] {
            min-height: 200px;
            padding: 0.75rem;
            border: 2px solid #ddd;
            border-radius: 6px;
            background-color: #fff;
            font-size: 0.95rem;
            line-height: 1.6;
            transition: border-color 0.2s, box-shadow 0.2s;
        }
