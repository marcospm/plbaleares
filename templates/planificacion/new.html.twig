    </style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Nueva Planificaci贸n</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_row(form.nombre) }}
            </div>
            
            <div class="form-group mb-3">
                {{ form_row(form.descripcion) }}
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.fechaInicio) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.fechaFin) }}
                </div>
            </div>
            
            <div class="form-group mb-3">
                <div style="background: #f8f9fa; border: 1px solid #dee2e6; border-radius: 6px; padding: 1rem;">
                    {{ form_label(form.usuarios, null, {'label_attr': {'style': 'font-size: 1.1rem; font-weight: 600; color: #333; margin-bottom: 0.75rem; display: block;'}}) }}
                    {{ form_widget(form.usuarios, {'attr': {'class': 'form-select', 'style': 'min-height: 200px; padding: 0.75rem; border: 2px solid #ddd; border-radius: 6px; background-color: #fff; font-size: 0.95rem;'}}) }}
                    {{ form_errors(form.usuarios) }}
                    <div style="margin-top: 0.75rem; padding: 0.75rem; background: #e7f3ff; border-left: 4px solid var(--color-primary, #007bff); border-radius: 4px;">
                        <small style="color: #004085; font-size: 0.9rem; display: block;">
                            <strong> Consejo:</strong> Mant茅n presionada la tecla <strong>Ctrl</strong> (Windows/Linux) o <strong>Cmd</strong> (Mac) mientras haces clic para seleccionar m煤ltiples alumnos. Tambi茅n puedes usar <strong>Shift + clic</strong> para seleccionar un rango.
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label class="form-label"><strong>Actividades por D铆a</strong></label>
                <div class="alert alert-info" style="font-size: 0.9rem; margin-bottom: 1rem; padding: 0.75rem;">
                    <strong> Importante:</strong> Cada actividad debe tener una <strong>fecha espec铆fica</strong> (d铆a concreto), no un d铆a de la semana. 
                    Por ejemplo: 15/01/2025, 16/01/2025, etc. Puedes agregar m煤ltiples actividades para el mismo d铆a con diferentes horarios.
                </div>
                <div id="actividades-container" data-prototype="{{ form_widget(form.franjasHorarias.vars.prototype)|e('html_attr') }}">
                    {% for actividad in form.franjasHorarias %}
                        <div class="actividad-item card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="mb-0">Actividad #<span class="actividad-numero">{{ loop.index }}</span></h5>
                                    <button type="button" class="btn btn-sm btn-danger remove-actividad">Eliminar</button>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_row(actividad.fechaEspecifica, {'label': ' Fecha (D铆a espec铆fico)'}) }}
                                        <small class="text-muted">Ej: 15/01/2025</small>
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(actividad.horaInicio) }}
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(actividad.horaFin) }}
                                    </div>
                                    <div class="col-md-2">
                                        {{ form_row(actividad.tipoActividad) }}
                                    </div>
                                    <div class="col-md-1">
                                        {{ form_row(actividad.orden) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{ form_row(actividad.descripcionRepaso) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(actividad.temas) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(actividad.recursos) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(actividad.enlaces) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(actividad.notas) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button type="button" id="add-actividad" class="btn btn-secondary mt-2">+ Agregar Actividad</button>
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Crear Planificaci贸n</button>
                <a href="{{ path('app_planificacion_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('actividades-container');
    const addButton = document.getElementById('add-actividad');
    
    if (!container || !addButton) {
        console.error('No se encontraron los elementos necesarios para agregar actividades');
        return;
    }
    
    // Obtener el prototipo
    const prototype = container.getAttribute('data-prototype');
    if (!prototype) {
        console.error('No se encontr贸 el prototipo de actividades');
        addButton.disabled = true;
        return;
    }
    
    // Funci贸n para obtener el siguiente 铆ndice
    function getNextIndex() {
        const existingItems = container.querySelectorAll('.actividad-item');
        let maxIndex = -1;
        existingItems.forEach(item => {
            const inputs = item.querySelectorAll('input[name*="[franjasHorarias]"], select[name*="[franjasHorarias]"], textarea[name*="[franjasHorarias]"]');
            if (inputs.length > 0) {
                const name = inputs[0].getAttribute('name');
                const match = name.match(/\[franjasHorarias\]\[(\d+)\]/);
                if (match) {
                    const index = parseInt(match[1]);
                    if (index > maxIndex) {
                        maxIndex = index;
                    }
                }
            }
        });
        return maxIndex + 1;
    }
    
    // Funci贸n para reemplazar el nombre en el prototipo
    function replacePrototypeName(prototypeHtml, index) {
        return prototypeHtml
            .replace(/__name__label__/g, index)
            .replace(/__name__/g, index);
    }
    
    // Funci贸n para agregar una nueva actividad
    function addActividad() {
        try {
            const index = getNextIndex();
            const newForm = replacePrototypeName(prototype, index);
            
            const div = document.createElement('div');
            div.className = 'actividad-item card mb-3';
            div.setAttribute('data-index', index);
            div.innerHTML = `
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Actividad #<span class="actividad-numero">${index + 1}</span></h5>
                        <button type="button" class="btn btn-sm btn-danger remove-actividad">Eliminar</button>
                    </div>
                    ${newForm}
                </div>
            `;
            
            container.appendChild(div);
            updateActividadNumbers();
            
            // Agregar evento al bot贸n eliminar
            const removeButton = div.querySelector('.remove-actividad');
            if (removeButton) {
                removeButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    div.remove();
                    updateActividadNumbers();
                });
            }
            
            // Scroll suave hacia la nueva actividad
            div.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        } catch (error) {
            console.error('Error al agregar actividad:', error);
            alert('Hubo un error al agregar la actividad. Por favor, recarga la p谩gina e intenta de nuevo.');
        }
    }
    
    // Agregar evento al bot贸n
    addButton.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        addActividad();
    });
    
    // Agregar eventos a los botones eliminar existentes
    function attachRemoveListeners() {
        container.querySelectorAll('.remove-actividad').forEach(button => {
            // Remover listeners anteriores para evitar duplicados
            const newButton = button.cloneNode(true);
            button.parentNode.replaceChild(newButton, button);
            
            newButton.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const actividadItem = this.closest('.actividad-item');
                if (actividadItem) {
                    actividadItem.remove();
                    updateActividadNumbers();
                }
            });
        });
    }
    
    // Inicializar listeners de eliminar
    attachRemoveListeners();
    
    // Funci贸n para actualizar los n煤meros de actividad
    function updateActividadNumbers() {
        const items = container.querySelectorAll('.actividad-item');
        items.forEach((item, index) => {
            const numeroElement = item.querySelector('.actividad-numero');
            if (numeroElement) {
                numeroElement.textContent = index + 1;
            }
        });
    }
});
</script>
{% endblock %}

