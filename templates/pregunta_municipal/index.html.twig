{% extends 'base.html.twig' %}

{% block title %}Preguntas Municipales{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Estilos para paginaci√≥n */
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 0.25rem;
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .page-item {
            margin: 0;
        }
        
        .page-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: var(--color-primary);
            text-decoration: none;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            transition: all 0.2s;
            min-width: 40px;
            text-align: center;
            font-weight: 500;
        }
        
        .page-link:hover:not(.disabled):not([aria-disabled="true"]) {
            background-color: #e9ecef;
            border-color: #dee2e6;
            color: var(--color-primary);
            transform: translateY(-1px);
        }
        
        .page-item.active .page-link {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
            color: #fff;
            font-weight: 600;
        }
        
        .page-item.disabled .page-link,
        .page-link[aria-disabled="true"] {
            color: #6c757d;
            pointer-events: none;
            cursor: not-allowed;
            background-color: #fff;
            border-color: #dee2e6;
            opacity: 0.6;
        }
        
        .page-link:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(0, 113, 181, 0.25);
        }
        
        @media (max-width: 768px) {
            .pagination {
                gap: 0.15rem;
            }
            
            .page-link {
                padding: 0.4rem 0.6rem;
                font-size: 0.875rem;
                min-width: 35px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4">
    <h1>Preguntas Municipales</h1>
    <a href="{{ path('app_pregunta_municipal_new') }}" class="btn btn-primary">Nueva Pregunta Municipal</a>
</div>

<form method="get" action="{{ path('app_pregunta_municipal_index') }}" style="margin-bottom: 2rem;">
    <div class="card">
        <div class="card-body">
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar en el texto...">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Municipio:</label>
                    <select name="municipio" class="form-control" id="municipio-select">
                        <option value="0">Todos los municipios</option>
                        {% for municipio in municipios %}
                            <option value="{{ municipio.id }}" {% if municipioSeleccionado == municipio.id %}selected{% endif %}>
                                {{ municipio.nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Tema:</label>
                    <select name="tema" class="form-control" id="tema-select">
                        <option value="0">Todos los temas</option>
                        {% for tema in temasMunicipales %}
                            <option value="{{ tema.id }}" {% if temaSeleccionado == tema.id %}selected{% endif %}>
                                {{ tema.nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Dificultad:</label>
                    <select name="dificultad" class="form-control">
                        <option value="">Todas</option>
                        <option value="facil" {% if dificultadSeleccionada == 'facil' %}selected{% endif %}>F√°cil</option>
                        <option value="moderada" {% if dificultadSeleccionada == 'moderada' %}selected{% endif %}>Moderada</option>
                        <option value="dificil" {% if dificultadSeleccionada == 'dificil' %}selected{% endif %}>Dif√≠cil</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_pregunta_municipal_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #dee2e6;">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="mostrar_descartadas" value="1" id="mostrarDescartadas" {% if mostrarDescartadas %}checked{% endif %}>
                    <label class="form-check-label" for="mostrarDescartadas">
                        Mostrar preguntas descartadas
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>

{% if totalItems > 0 %}
    <div class="card">
        <div class="card-header" style="background-color: #f8f9fa; border-bottom: 1px solid #dee2e6;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h3 style="margin: 0; color: #333; font-size: 1.1rem; font-weight: 600;">
                    üìö Preguntas encontradas: <strong style="color: var(--color-primary);">{{ totalItems }}</strong>
                    {% if totalPages > 1 %}
                        <span style="font-size: 0.9rem; color: #666; font-weight: normal;">
                            (P√°gina {{ currentPage }} de {{ totalPages }})
                        </span>
                    {% endif %}
                </h3>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Texto</th>
                        <th>Municipio</th>
                        <th>Tema</th>
                        <th>Dificultad</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pregunta in preguntas %}
                        <tr>
                            <td>{{ pregunta.id }}</td>
                            <td>{{ pregunta.texto|slice(0, 80) }}{% if pregunta.texto|length > 80 %}...{% endif %}</td>
                            <td>{{ pregunta.municipio.nombre }}</td>
                            <td>
                                {% if pregunta.temaMunicipal %}
                                    {{ pregunta.temaMunicipal.nombre }}
                                {% else %}
                                    <span style="color: var(--color-text-light);">Sin tema</span>
                                {% endif %}
                            </td>
                            <td>
                                {% set dificultadLower = pregunta.dificultad|lower %}
                                {% if dificultadLower == 'facil' %}
                                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-success); color: var(--color-white);">{{ pregunta.getDificultadLabel() }}</span>
                                {% elseif dificultadLower == 'moderada' %}
                                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-warning); color: var(--color-white);">{{ pregunta.getDificultadLabel() }}</span>
                                {% elseif dificultadLower == 'dificil' %}
                                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-danger); color: var(--color-white);">{{ pregunta.getDificultadLabel() }}</span>
                                {% else %}
                                    <span class="badge badge-{{ dificultadLower }}">{{ pregunta.getDificultadLabel() }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if pregunta.isActivo %}
                                    <span class="badge badge-success" style="background-color: var(--color-success);">Activa</span>
                                {% else %}
                                    <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactiva</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    {% set paramsFiltros = {
                                        'search': search,
                                        'municipio': municipioSeleccionado > 0 ? municipioSeleccionado : '',
                                        'tema': temaSeleccionado > 0 ? temaSeleccionado : '',
                                        'dificultad': dificultadSeleccionada
                                    } %}
                                    {% set paramsFiltros = paramsFiltros|filter(v => v != '' and v != 0) %}
                                    {% if currentPage > 1 %}
                                        {% set paramsFiltros = paramsFiltros|merge({'page': currentPage}) %}
                                    {% endif %}
                                    <a href="{{ path('app_pregunta_municipal_show', {'id': pregunta.id}|merge(paramsFiltros)) }}" class="btn btn-secondary btn-sm">Ver</a>
                                    <a href="{{ path('app_pregunta_municipal_edit', {'id': pregunta.id}|merge(paramsFiltros)) }}" class="btn btn-primary btn-sm">Editar</a>
                                    <form method="post" action="{{ path('app_pregunta_municipal_toggle_activo', {'id': pregunta.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ pregunta.id) }}">
                                        {% if search %}
                                            <input type="hidden" name="search" value="{{ search }}">
                                        {% endif %}
                                        {% if municipioSeleccionado > 0 %}
                                            <input type="hidden" name="municipio" value="{{ municipioSeleccionado }}">
                                        {% endif %}
                                        {% if temaSeleccionado > 0 %}
                                            <input type="hidden" name="tema" value="{{ temaSeleccionado }}">
                                        {% endif %}
                                        {% if dificultadSeleccionada %}
                                            <input type="hidden" name="dificultad" value="{{ dificultadSeleccionada }}">
                                        {% endif %}
                                        {% if currentPage > 1 %}
                                            <input type="hidden" name="page" value="{{ currentPage }}">
                                        {% endif %}
                                        <button type="submit" class="btn btn-sm {% if pregunta.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                            {% if pregunta.isActivo %}Desactivar{% else %}Activar{% endif %}
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Paginaci√≥n #}
        {% if totalPages > 1 %}
            <div class="card-footer" style="background-color: #f8f9fa; border-top: 1px solid #dee2e6; padding: 1rem;">
                <nav aria-label="Paginaci√≥n de preguntas municipales">
                    <ul class="pagination justify-content-center mb-0" style="flex-wrap: wrap;">
                        {% set paramsBase = {
                            'search': search,
                            'municipio': municipioSeleccionado > 0 ? municipioSeleccionado : '',
                            'tema': temaSeleccionado > 0 ? temaSeleccionado : '',
                            'dificultad': dificultadSeleccionada
                        } %}
                        {% set paramsBase = paramsBase|filter(v => v != '' and v != 0) %}
                        
                        {# Bot√≥n Anterior #}
                        <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                            {% if currentPage > 1 %}
                                {% set pageAnterior = currentPage - 1 %}
                                {% if pageAnterior > 1 %}
                                    {% set paramsAnterior = paramsBase|merge({'page': pageAnterior}) %}
                                {% else %}
                                    {% set paramsAnterior = paramsBase %}
                                {% endif %}
                                <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsAnterior) }}">
                            {% else %}
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            {% endif %}
                                ‚Üê Anterior
                            </a>
                        </li>
                        
                        {# N√∫meros de p√°gina #}
                        {% set startPage = max(1, currentPage - 2) %}
                        {% set endPage = min(totalPages, currentPage + 2) %}
                        
                        {% if startPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsBase) }}">1</a>
                            </li>
                            {% if startPage > 2 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endif %}
                        
                        {% for p in startPage..endPage %}
                            <li class="page-item {% if p == currentPage %}active{% endif %}">
                                {% if p > 1 %}
                                    <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsBase|merge({'page': p})) }}">{{ p }}</a>
                                {% else %}
                                    <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsBase) }}">{{ p }}</a>
                                {% endif %}
                            </li>
                        {% endfor %}
                        
                        {% if endPage < totalPages %}
                            {% if endPage < totalPages - 1 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsBase|merge({'page': totalPages})) }}">{{ totalPages }}</a>
                            </li>
                        {% endif %}
                        
                        {# Bot√≥n Siguiente #}
                        <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                            {% if currentPage < totalPages %}
                                <a class="page-link" href="{{ path('app_pregunta_municipal_index', paramsBase|merge({'page': currentPage + 1})) }}">
                            {% else %}
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            {% endif %}
                                Siguiente ‚Üí
                            </a>
                        </li>
                    </ul>
                </nav>
                <div style="text-align: center; margin-top: 0.5rem; color: #666; font-size: 0.9rem;">
                    Mostrando {{ ((currentPage - 1) * itemsPerPage) + 1 }} - {{ min(currentPage * itemsPerPage, totalItems) }} de {{ totalItems }} preguntas
                </div>
            </div>
        {% endif %}
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay preguntas municipales registradas a√∫n.</p>
            <a href="{{ path('app_pregunta_municipal_new') }}" class="btn btn-primary">Crear Primera Pregunta Municipal</a>
        </div>
    </div>
{% endif %}

<script>
// Actualizar temas cuando cambia el municipio
document.getElementById('municipio-select').addEventListener('change', function() {
    const municipioId = this.value;
    const temaSelect = document.getElementById('tema-select');
    
    // Si se selecciona un municipio, recargar la p√°gina para actualizar los temas
    if (municipioId > 0) {
        const form = this.closest('form');
        form.submit();
    } else {
        // Si se selecciona "Todos", limpiar el tema tambi√©n
        temaSelect.value = '0';
    }
});
</script>
{% endblock %}












