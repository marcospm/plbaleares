{% extends 'base.html.twig' %}

{% block title %}Pregunta Municipal #{{ pregunta_municipal.id }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Pregunta Municipal #{{ pregunta_municipal.id }}</h1>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="form-label"><strong>Texto de la Pregunta:</strong></label>
            <div style="background-color: #f5f5f5; padding: 1rem; border-radius: 4px; border-left: 4px solid var(--color-primary); font-size: 1.1rem;">
                {{ pregunta_municipal.texto|nl2br }}
            </div>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Opciones de Respuesta:</strong></label>
            {% set respuestaCorrectaNormalizada = pregunta_municipal.respuestaCorrecta ? (pregunta_municipal.respuestaCorrecta|trim|upper) : '' %}
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <div style="padding: 0.75rem; background: #f5f5f5; border-radius: 4px; {% if respuestaCorrectaNormalizada == 'A' %}border-left: 4px solid var(--color-success);{% endif %}">
                    <strong style="color: var(--color-primary);">A)</strong> {{ pregunta_municipal.opcionA }}
                    {% if respuestaCorrectaNormalizada == 'A' %}<span class="badge badge-facil" style="margin-left: 1rem; background-color: var(--color-success); color: white;">Correcta</span>{% endif %}
                </div>
                <div style="padding: 0.75rem; background: #f5f5f5; border-radius: 4px; {% if respuestaCorrectaNormalizada == 'B' %}border-left: 4px solid var(--color-success);{% endif %}">
                    <strong style="color: var(--color-primary);">B)</strong> {{ pregunta_municipal.opcionB }}
                    {% if respuestaCorrectaNormalizada == 'B' %}<span class="badge badge-facil" style="margin-left: 1rem; background-color: var(--color-success); color: white;">Correcta</span>{% endif %}
                </div>
                <div style="padding: 0.75rem; background: #f5f5f5; border-radius: 4px; {% if respuestaCorrectaNormalizada == 'C' %}border-left: 4px solid var(--color-success);{% endif %}">
                    <strong style="color: var(--color-primary);">C)</strong> {{ pregunta_municipal.opcionC }}
                    {% if respuestaCorrectaNormalizada == 'C' %}<span class="badge badge-facil" style="margin-left: 1rem; background-color: var(--color-success); color: white;">Correcta</span>{% endif %}
                </div>
                <div style="padding: 0.75rem; background: #f5f5f5; border-radius: 4px; {% if respuestaCorrectaNormalizada == 'D' %}border-left: 4px solid var(--color-success);{% endif %}">
                    <strong style="color: var(--color-primary);">D)</strong> {{ pregunta_municipal.opcionD }}
                    {% if respuestaCorrectaNormalizada == 'D' %}<span class="badge badge-facil" style="margin-left: 1rem; background-color: var(--color-success); color: white;">Correcta</span>{% endif %}
                </div>
            </div>
            {% if not respuestaCorrectaNormalizada %}
                <div style="margin-top: 0.5rem; padding: 0.5rem; background-color: #fff3e0; border-radius: 4px; font-size: 0.9rem; color: #ff9800; border-left: 4px solid #ff9800;">
                    <strong>⚠️ Advertencia:</strong> Esta pregunta no tiene una respuesta correcta definida.
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Dificultad:</strong></label>
            <p>
                {% set dificultadLower = pregunta_municipal.dificultad|lower %}
                {% if dificultadLower == 'facil' %}
                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-success); color: var(--color-white);">{{ pregunta_municipal.getDificultadLabel() }}</span>
                {% elseif dificultadLower == 'moderada' %}
                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-warning); color: var(--color-white);">{{ pregunta_municipal.getDificultadLabel() }}</span>
                {% elseif dificultadLower == 'dificil' %}
                    <span class="badge badge-{{ dificultadLower }}" style="background-color: var(--color-danger); color: var(--color-white);">{{ pregunta_municipal.getDificultadLabel() }}</span>
                {% else %}
                    <span class="badge badge-{{ dificultadLower }}">{{ pregunta_municipal.getDificultadLabel() }}</span>
                {% endif %}
            </p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Municipio:</strong></label>
            <p><a href="{{ path('app_municipio_show', {'id': pregunta_municipal.municipio.id}) }}">{{ pregunta_municipal.municipio.nombre }}</a></p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Tema Municipal:</strong></label>
            <p>{{ pregunta_municipal.temaMunicipal.nombre }}</p>
        </div>

        {% if pregunta_municipal.retroalimentacion %}
            <div class="form-group">
                <label class="form-label"><strong>Retroalimentación:</strong></label>
                <div style="background-color: #e3f2fd; padding: 1rem; border-radius: 4px; border-left: 4px solid var(--color-secondary); line-height: 1.6;">
                    {{ pregunta_municipal.retroalimentacion|markdown|raw }}
                </div>
            </div>
        {% endif %}

        <div class="form-group">
            <label class="form-label"><strong>Estado:</strong></label>
            <p>
                {% if pregunta_municipal.isActivo %}
                    <span class="badge badge-success" style="background-color: var(--color-success);">Activa</span>
                {% else %}
                    <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactiva</span>
                {% endif %}
            </p>
        </div>

        <div class="d-flex gap-2 mt-4">
            <a href="{{ path('app_pregunta_municipal_edit', {'id': pregunta_municipal.id}|merge(filtros|default({}))) }}" class="btn btn-primary">Editar</a>
            <a href="{{ path('app_pregunta_municipal_index', filtros|default({})) }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
{% endblock %}

