{% extends 'base.html.twig' %}

{% block title %}Nueva Pregunta Municipal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Nueva Pregunta Municipal</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.municipio) }}
            {{ form_row(form.temaMunicipal) }}
            {{ form_row(form.texto) }}
            {{ form_row(form.dificultad) }}
            {{ form_row(form.opcionA) }}
            {{ form_row(form.opcionB) }}
            {{ form_row(form.opcionC) }}
            {{ form_row(form.opcionD) }}
            {{ form_row(form.respuestaCorrecta) }}
            {{ form_row(form.retroalimentacion) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="{{ path('app_pregunta_municipal_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Inicializar editor para retroalimentación (CKEditor)
    const editorElement = document.querySelector('.tinymce-editor');
    if (editorElement && typeof ClassicEditor !== 'undefined') {
        ClassicEditor
            .create(editorElement, {
                toolbar: {
                    items: [
                        'heading', '|',
                        'bold', 'italic', 'underline', '|',
                        'bulletedList', 'numberedList', '|',
                        'alignment', '|',
                        'link', '|',
                        'undo', 'redo'
                    ]
                },
                language: 'es',
                heading: {
                    options: [
                        { model: 'paragraph', title: 'Párrafo', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h1', title: 'Título 1', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h2', title: 'Título 2', class: 'ck-heading_heading2' },
                        { model: 'heading3', view: 'h3', title: 'Título 3', class: 'ck-heading_heading3' }
                    ]
                }
            })
            .then(editor => {
                console.log('CKEditor inicializado correctamente para retroalimentación');
            })
            .catch(error => {
                console.error('Error al inicializar CKEditor:', error);
            });
    }
    
    // Manejo de municipio y tema con AJAX
    const municipioSelect = document.getElementById('pregunta_municipal_municipio');
    const temaSelect = document.getElementById('pregunta_municipal_temaMunicipal');
    
    if (municipioSelect && temaSelect) {
        municipioSelect.addEventListener('change', function() {
            const municipioId = this.value;
            
            // Limpiar el selector de temas
            temaSelect.innerHTML = '';
            temaSelect.disabled = true;
            
            if (municipioId) {
                // Mostrar indicador de carga
                const loadingOption = document.createElement('option');
                loadingOption.textContent = 'Cargando temas...';
                loadingOption.disabled = true;
                loadingOption.selected = true;
                temaSelect.appendChild(loadingOption);
                
                // Hacer petición AJAX para obtener los temas del municipio
                const apiUrl = '{{ path("app_pregunta_municipal_api_temas", {"municipioId": 0}) }}'.replace('/0', '/' + municipioId);
                fetch(apiUrl)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Error al cargar los temas');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Limpiar el selector
                        temaSelect.innerHTML = '';
                        
                        // Agregar placeholder
                        const placeholderOption = document.createElement('option');
                        placeholderOption.value = '';
                        placeholderOption.textContent = 'Selecciona un tema';
                        placeholderOption.disabled = true;
                        placeholderOption.selected = true;
                        temaSelect.appendChild(placeholderOption);
                        
                        // Agregar los temas
                        if (data.temas && data.temas.length > 0) {
                            data.temas.forEach(tema => {
                                const option = document.createElement('option');
                                option.value = tema.id;
                                option.textContent = tema.nombre;
                                temaSelect.appendChild(option);
                            });
                            temaSelect.disabled = false;
                        } else {
                            const noTemasOption = document.createElement('option');
                            noTemasOption.textContent = 'No hay temas disponibles';
                            noTemasOption.disabled = true;
                            noTemasOption.selected = true;
                            temaSelect.appendChild(noTemasOption);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        temaSelect.innerHTML = '';
                        const errorOption = document.createElement('option');
                        errorOption.textContent = 'Error al cargar los temas';
                        errorOption.disabled = true;
                        errorOption.selected = true;
                        temaSelect.appendChild(errorOption);
                    });
            } else {
                // Si no hay municipio seleccionado, mostrar mensaje
                const placeholderOption = document.createElement('option');
                placeholderOption.value = '';
                placeholderOption.textContent = 'Primero selecciona un municipio';
                placeholderOption.disabled = true;
                placeholderOption.selected = true;
                temaSelect.appendChild(placeholderOption);
            }
        });
    }
});
</script>
{% endblock %}






