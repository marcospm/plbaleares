<script>
(function() {
    // Verificar si ya se ha aceptado el consentimiento
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
        return null;
    }
    
    function setCookie(name, value, days) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        const expires = `expires=${date.toUTCString()}`;
        document.cookie = `${name}=${value}; ${expires}; path=/; SameSite=Strict`;
    }
    
    function acceptAllCookies() {
        setCookie('cookie_consent', 'all', 365);
        setCookie('cookie_necessary', 'true', 365);
        setCookie('cookie_functionality', 'true', 365);
        setCookie('cookie_analytics', 'true', 365);
        setCookie('cookie_marketing', 'true', 365);
        hideBanner();
    }
    
    function acceptNecessaryOnly() {
        setCookie('cookie_consent', 'necessary', 365);
        setCookie('cookie_necessary', 'true', 365);
        setCookie('cookie_functionality', 'false', 365);
        setCookie('cookie_analytics', 'false', 365);
        setCookie('cookie_marketing', 'false', 365);
        hideBanner();
    }
    
    function saveCookieSettings() {
        const necessary = document.getElementById('cookie-necessary').checked;
        const functionality = document.getElementById('cookie-functionality').checked;
        const analytics = document.getElementById('cookie-analytics').checked;
        const marketing = document.getElementById('cookie-marketing').checked;
        
        setCookie('cookie_consent', 'custom', 365);
        setCookie('cookie_necessary', necessary ? 'true' : 'false', 365);
        setCookie('cookie_functionality', functionality ? 'true' : 'false', 365);
        setCookie('cookie_analytics', analytics ? 'true' : 'false', 365);
        setCookie('cookie_marketing', marketing ? 'true' : 'false', 365);
        
        hideBanner();
        hideSettingsPanel();
    }
    
    function hideBanner() {
        const banner = document.getElementById('cookie-banner');
        if (banner) {
            banner.style.display = 'none';
        }
    }
    
    function showBanner() {
        const banner = document.getElementById('cookie-banner');
        if (banner) {
            banner.style.display = 'block';
        }
    }
    
    function showSettingsPanel() {
        const panel = document.getElementById('cookie-settings-panel');
        if (panel) {
            panel.style.display = 'flex';
            
            // Cargar preferencias guardadas
            const functionality = getCookie('cookie_functionality') === 'true';
            const analytics = getCookie('cookie_analytics') === 'true';
            const marketing = getCookie('cookie_marketing') === 'true';
            
            document.getElementById('cookie-functionality').checked = functionality;
            document.getElementById('cookie-analytics').checked = analytics;
            document.getElementById('cookie-marketing').checked = marketing;
        }
    }
    
    function hideSettingsPanel() {
        const panel = document.getElementById('cookie-settings-panel');
        if (panel) {
            panel.style.display = 'none';
        }
    }
    
    // Event listeners
    document.addEventListener('DOMContentLoaded', function() {
        // Solo mostrar el banner si no hay consentimiento
        if (!getCookie('cookie_consent')) {
            showBanner();
        }
        
        // Botones del banner
        const acceptAllBtn = document.getElementById('cookie-accept-all');
        const acceptNecessaryBtn = document.getElementById('cookie-accept-necessary');
        const settingsBtn = document.getElementById('cookie-settings');
        
        if (acceptAllBtn) {
            acceptAllBtn.addEventListener('click', acceptAllCookies);
        }
        
        if (acceptNecessaryBtn) {
            acceptNecessaryBtn.addEventListener('click', acceptNecessaryOnly);
        }
        
        if (settingsBtn) {
            settingsBtn.addEventListener('click', function() {
                hideBanner();
                showSettingsPanel();
            });
        }
        
        // Panel de configuraci贸n
        const settingsCloseBtn = document.getElementById('cookie-settings-close');
        const saveSettingsBtn = document.getElementById('cookie-save-settings');
        const acceptAllSettingsBtn = document.getElementById('cookie-accept-all-settings');
        
        if (settingsCloseBtn) {
            settingsCloseBtn.addEventListener('click', hideSettingsPanel);
        }
        
        if (saveSettingsBtn) {
            saveSettingsBtn.addEventListener('click', saveCookieSettings);
        }
        
        if (acceptAllSettingsBtn) {
            acceptAllSettingsBtn.addEventListener('click', function() {
                document.getElementById('cookie-functionality').checked = true;
                document.getElementById('cookie-analytics').checked = true;
                document.getElementById('cookie-marketing').checked = true;
                acceptAllCookies();
                hideSettingsPanel();
            });
        }
        
        // Cerrar panel al hacer clic fuera
        const settingsPanel = document.getElementById('cookie-settings-panel');
        if (settingsPanel) {
            settingsPanel.addEventListener('click', function(e) {
                if (e.target === settingsPanel) {
                    hideSettingsPanel();
                }
            });
        }
    });
})();
</script>

