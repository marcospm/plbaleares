{% extends 'base.html.twig' %}

{% block title %}Municipios{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .table {
                font-size: 0.85rem;
                min-width: 600px;
            }
            
            /* Ocultar columnas menos importantes en móvil */
            .table th:nth-child(1),
            .table td:nth-child(1) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table .d-flex.gap-2 {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table .d-flex.gap-2 .btn,
            .table .d-flex.gap-2 form {
                width: 100%;
            }
            
            .table .d-flex.gap-2 form button {
                width: 100%;
            }
            
            /* Alertas y mensajes */
            .card-body.text-center .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
                margin-top: 0.75rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Municipios</h1>
    <a href="{{ path('app_municipio_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nuevo Municipio</a>
</div>

{% if municipios|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Convocatorias</th>
                    <th>Temas</th>
                    <th>Preguntas</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for municipio in municipios %}
                    <tr>
                        <td>{{ municipio.id }}</td>
                        <td><strong>{{ municipio.nombre }}</strong></td>
                        <td>
                            {% set convocatorias = convocatoriasPorMunicipio[municipio.id] ?? [] %}
                            {% if convocatorias|length > 0 %}
                                <span class="badge badge-moderada" title="{% for convocatoria in convocatorias %}{{ convocatoria.nombre }}{% if not loop.last %}, {% endif %}{% endfor %}">
                                    {{ convocatorias|length }} convocatoria(s)
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">Sin convocatorias</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-success">{{ municipio.temasMunicipales|length }} tema(s)</span>
                        </td>
                        <td>
                            <span class="badge badge-primary">{{ municipio.preguntasMunicipales|length }} pregunta(s)</span>
                        </td>
                        <td>
                            {% if municipio.isActivo %}
                                <span class="badge badge-success" style="background-color: var(--color-success);">Activo</span>
                            {% else %}
                                <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactivo</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_municipio_show', {'id': municipio.id}) }}" class="btn btn-secondary btn-sm">Ver</a>
                                <a href="{{ path('app_municipio_edit', {'id': municipio.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                                <form method="post" action="{{ path('app_municipio_toggle_activo', {'id': municipio.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ municipio.id) }}">
                                    <button type="submit" class="btn btn-sm {% if municipio.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                        {% if municipio.isActivo %}Desactivar{% else %}Activar{% endif %}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay municipios registrados aún.</p>
            <a href="{{ path('app_municipio_new') }}" class="btn btn-primary">Crear Primer Municipio</a>
        </div>
    </div>
{% endif %}
{% endblock %}












