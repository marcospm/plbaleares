{% extends 'base.html.twig' %}

{% block title %}Editar Tema{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Tema: {{ tema.nombre }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            {{ form_row(form.pdfFile) }}
            
            {% if tema.rutaPdf %}
                <div class="alert alert-info mt-3">
                    <strong>PDF actual:</strong> 
                    <a href="{{ tema.rutaPdf }}" target="_blank" class="btn btn-sm btn-success">Ver PDF Actual</a>
                    <small class="d-block mt-2">Si subes un nuevo archivo, se reemplazar√° el actual.</small>
                </div>
            {% endif %}
            
            {{ form_row(form.leyes) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a href="{{ path('app_tema_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

