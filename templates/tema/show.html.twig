{% extends 'base.html.twig' %}

{% block title %}Tema: {{ tema.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>{{ tema.nombre }}</h1>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="form-label"><strong>Descripci√≥n:</strong></label>
            <p>{{ tema.descripcion|default('Sin descripci√≥n') }}</p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Leyes relacionadas:</strong></label>
            {% if tema.leyes|length > 0 %}
                <ul>
                    {% for ley in tema.leyes %}
                        <li><a href="{{ path('app_ley_show', {'id': ley.id}) }}">{{ ley.nombre }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p style="color: var(--color-text-light);">No hay leyes asociadas a este tema.</p>
            {% endif %}
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Preguntas:</strong></label>
            <p><span class="badge badge-facil">{{ tema.preguntas|length }} pregunta(s)</span></p>
        </div>

        <div class="form-group">
            <label class="form-label"><strong>PDF del Tema:</strong></label>
            {% if tema.rutaPdf %}
                <div style="padding: 1rem; background-color: #e8f5e9; border-radius: 4px; border: 1px solid #4caf50;">
                    <p style="margin: 0 0 0.75rem 0; color: #2e7d32;">
                        <strong>‚úì PDF disponible</strong>
                    </p>
                    <div class="d-flex gap-2" style="flex-wrap: wrap;">
                        <a href="{{ tema.rutaPdf }}" target="_blank" class="btn btn-success" rel="noopener noreferrer">
                            üìÑ Ver PDF
                        </a>
                        <a href="{{ tema.rutaPdf }}" download class="btn btn-primary">
                            ‚¨áÔ∏è Descargar PDF
                        </a>
                    </div>
                </div>
            {% else %}
                <div style="padding: 1rem; background-color: #fff3cd; border-radius: 4px; border: 1px solid #ffc107;">
                    <p style="margin: 0; color: #856404;">
                        <strong>‚ö† No hay PDF asociado a este tema.</strong> Puedes subir uno editando el tema.
                    </p>
                </div>
            {% endif %}
        </div>

        <div class="d-flex gap-2 mt-4">
            <a href="{{ path('app_tema_edit', {'id': tema.id}) }}" class="btn btn-primary">Editar</a>
            <a href="{{ path('app_tema_index') }}" class="btn btn-secondary">Volver</a>
            <form method="post" action="{{ path('app_tema_delete', {'id': tema.id}) }}" onsubmit="return confirm('¬øEst√°s seguro de eliminar este tema?');" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tema.id) }}">
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

