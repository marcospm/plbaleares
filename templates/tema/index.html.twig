{% extends 'base.html.twig' %}

{% block title %}Temas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Formulario responsive */
            .card-body > div[style*="display: grid"] {
                grid-template-columns: 1fr !important;
                gap: 1rem !important;
            }
            
            .card-body .form-group {
                width: 100%;
            }
            
            .card-body label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.95rem;
            }
            
            .card-body input[type="text"] {
                font-size: 16px !important;
                min-height: 48px;
                width: 100%;
            }
            
            .card-body > div > div:last-child {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .card-body > div > div:last-child .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .table {
                font-size: 0.85rem;
                min-width: 600px;
            }
            
            /* Ocultar columnas menos importantes en móvil */
            .table th:nth-child(2),
            .table td:nth-child(2) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table .d-flex.gap-2 {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table .d-flex.gap-2 .btn,
            .table .d-flex.gap-2 form {
                width: 100%;
            }
            
            .table .d-flex.gap-2 form button {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Temas</h1>
    <a href="{{ path('app_tema_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nuevo Tema</a>
</div>

<form method="get" action="{{ path('app_tema_index') }}" style="margin-bottom: 2rem;">
    <div class="card">
        <div class="card-body">
            <div style="display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar por nombre o descripción...">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_tema_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
        </div>
    </div>
</form>

{% if temas|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Leyes</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for tema in temas %}
                    <tr>
                        <td><strong>{{ tema.nombre }}</strong></td>
                        <td>{{ tema.descripcion|default('Sin descripción')|slice(0, 100) }}{% if tema.descripcion|length > 100 %}...{% endif %}</td>
                        <td>
                            {% if tema.leyes|length > 0 %}
                                <span class="badge badge-facil">{{ tema.leyes|length }} ley(es)</span>
                            {% else %}
                                <span style="color: var(--color-text-light);">Sin leyes</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if tema.isActivo %}
                                <span class="badge badge-success" style="background-color: var(--color-success);">Activo</span>
                            {% else %}
                                <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactivo</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_tema_show', {'id': tema.id}) }}" class="btn btn-secondary btn-sm">Ver</a>
                                <a href="{{ path('app_tema_edit', {'id': tema.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                                <form method="post" action="{{ path('app_tema_toggle_activo', {'id': tema.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ tema.id) }}">
                                    <button type="submit" class="btn btn-sm {% if tema.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                        {% if tema.isActivo %}Desactivar{% else %}Activar{% endif %}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay temas registrados aún.</p>
            <a href="{{ path('app_tema_new') }}" class="btn btn-primary">Crear Primer Tema</a>
        </div>
    </div>
{% endif %}
{% endblock %}

