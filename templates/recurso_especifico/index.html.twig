{% extends 'base.html.twig' %}

{% block title %}Recursos Específicos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .card-header > div {
                flex-direction: column !important;
                gap: 1rem;
                align-items: stretch !important;
            }
            
            .card-header h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
                text-align: center;
            }
            
            .card-header .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Descripción responsive */
            .card-body > p {
                font-size: 0.95rem;
                word-wrap: break-word;
                padding: 0.75rem;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                margin: 0 -15px;
                padding: 0 15px;
            }
            
            .table {
                font-size: 0.85rem;
                min-width: 700px;
            }
            
            /* Ocultar columnas menos importantes en móvil */
            .table th:nth-child(2),
            .table td:nth-child(2),
            .table th:nth-child(4),
            .table td:nth-child(4) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table td > div[style*="display: flex"] {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table td > div[style*="display: flex"] .btn,
            .table td > div[style*="display: flex"] form {
                width: 100%;
            }
            
            .table td > div[style*="display: flex"] form button {
                width: 100%;
            }
            
            /* Badges responsive */
            .table .badge {
                font-size: 0.8rem;
                padding: 0.4rem 0.6rem;
                word-wrap: break-word;
                display: inline-block;
                margin: 0.25rem 0;
            }
            
            /* Mensaje sin recursos */
            .text-center .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
                margin-top: 0.75rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <h1 style="flex: 1; min-width: 0;">Recursos Específicos</h1>
            <a href="{{ path('app_recurso_especifico_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nuevo Recurso</a>
        </div>
    </div>
    <div class="card-body">
        <p style="margin-bottom: 2rem; color: var(--color-text-light);">
            Gestiona los recursos específicos que compartes con tus alumnos asignados. Estos recursos aparecerán en la sección de recursos de cada alumno asignado.
        </p>

        {% if recursos|length > 0 %}
            <div class="table-responsive">
                <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Archivo</th>
                        <th>Alumnos Asignados</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recurso in recursos %}
                        <tr>
                            <td><strong>{{ recurso.nombre }}</strong></td>
                            <td>{{ recurso.descripcion|slice(0, 100) }}{% if recurso.descripcion|length > 100 %}...{% endif %}</td>
                            <td>
                                {% if recurso.nombreArchivoOriginal %}
                                    <span class="badge badge-facil">{{ recurso.nombreArchivoOriginal }}</span>
                                {% else %}
                                    <span class="text-muted">Sin archivo</span>
                                {% endif %}
                            </td>
                            <td>
                                {% for alumno in recurso.alumnos %}
                                    <span class="badge" style="background-color: var(--color-primary); margin-right: 0.25rem;color: white;">{{ alumno.nombreDisplay }}</span>
                                {% endfor %}
                            </td>
                            <td>{{ recurso.fechaCreacion|date('d/m/Y H:i') }}</td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <a href="{{ path('app_recurso_especifico_show', {'id': recurso.id}) }}" class="btn btn-sm btn-secondary">Ver</a>
                                    <a href="{{ path('app_recurso_especifico_edit', {'id': recurso.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                                    <form method="post" action="{{ path('app_recurso_especifico_delete', {'id': recurso.id}) }}" style="display: inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este recurso?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recurso.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        {% else %}
            <div class="text-center" style="padding: 2rem;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 1rem;">No has creado ningún recurso específico aún.</p>
                <a href="{{ path('app_recurso_especifico_new') }}" class="btn btn-primary">Crear Primer Recurso</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}











