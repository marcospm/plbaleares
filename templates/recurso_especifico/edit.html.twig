{% extends 'base.html.twig' %}

{% block title %}Editar Recurso Específico{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Recurso Específico</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="form-group">
                {{ form_label(form.descripcion) }}
                {{ form_widget(form.descripcion) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.alumnos) }}
                <div style="max-height: 300px; overflow-y: auto; border: 1px solid #ddd; padding: 1rem; border-radius: 4px; background-color: #fafafa;">
                    {{ form_widget(form.alumnos) }}
                </div>
                {{ form_errors(form.alumnos) }}
                <small class="form-text text-muted">Selecciona los alumnos a los que quieres asignar este recurso.</small>
            </div>

            <div class="form-group">
                {{ form_label(form.archivo) }}
                {% if recursoEspecifico.rutaArchivo %}
                    <div style="margin-bottom: 0.5rem; padding: 0.5rem; background-color: #e8f5e9; border-radius: 4px;">
                        <strong>Archivo actual:</strong> {{ recursoEspecifico.nombreArchivoOriginal ?? 'Archivo sin nombre' }}
                        <br>
                        <small>Deja este campo vacío si no deseas cambiar el archivo.</small>
                    </div>
                {% endif %}
                {{ form_widget(form.archivo) }}
                {{ form_help(form.archivo) }}
                {{ form_errors(form.archivo) }}
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('app_recurso_especifico_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}



