{% extends 'base.html.twig' %}

{% block title %}Editar Recurso Espec√≠fico{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Recurso Espec√≠fico</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="form-group">
                {{ form_label(form.descripcion) }}
                {{ form_widget(form.descripcion) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.grupo) }}
                {{ form_widget(form.grupo) }}
                {{ form_help(form.grupo) }}
                {{ form_errors(form.grupo) }}
            </div>

            <div class="form-group">
                {{ form_label(form.alumnos) }}
                <div id="alumnos-container" style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 1rem; border-radius: 4px; background-color: #fafafa;">
                    <div style="margin-bottom: 1rem; padding: 0.5rem; background-color: #e3f2fd; border-radius: 4px; border-left: 4px solid var(--color-primary);">
                        <strong>üí° Consejo:</strong> Puedes seleccionar un grupo arriba para asignar autom√°ticamente todos sus alumnos, o seleccionar alumnos individualmente.
                    </div>
                    <div id="alumnos-list">
                        {{ form_widget(form.alumnos) }}
                    </div>
                </div>
                {{ form_errors(form.alumnos) }}
                {{ form_help(form.alumnos) }}
            </div>
            
            <style>
                /* Estilos mejorados para los checkboxes de alumnos */
                #{{ form.alumnos.vars.id }} {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                    gap: 0.75rem;
                }
                
                #{{ form.alumnos.vars.id }} > div {
                    display: flex;
                    align-items: center;
                    padding: 0.5rem;
                    background-color: #fff;
                    border: 1px solid #e0e0e0;
                    border-radius: 4px;
                    transition: all 0.2s ease;
                }
                
                #{{ form.alumnos.vars.id }} > div:hover {
                    background-color: #f5f5f5;
                    border-color: var(--color-primary);
                    box-shadow: 0 2px 4px rgba(0, 113, 181, 0.1);
                }
                
                #{{ form.alumnos.vars.id }} > div input[type="checkbox"]:checked ~ label {
                    color: var(--color-primary);
                    font-weight: 600;
                }
                
                #{{ form.alumnos.vars.id }} > div input[type="checkbox"]:checked {
                    accent-color: var(--color-primary);
                }
                
                #{{ form.alumnos.vars.id }} label {
                    display: inline-block;
                    margin-left: 0.5rem;
                    margin-bottom: 0;
                    font-weight: normal;
                    cursor: pointer;
                    flex: 1;
                    user-select: none;
                }
                
                #{{ form.alumnos.vars.id }} input[type="checkbox"] {
                    margin-right: 0;
                    vertical-align: middle;
                    cursor: pointer;
                    width: 18px;
                    height: 18px;
                }
                
                @media (max-width: 768px) {
                    #{{ form.alumnos.vars.id }} {
                        grid-template-columns: 1fr;
                    }
                }
            </style>

            <div class="form-group">
                {{ form_label(form.archivo) }}
                {% if recursoEspecifico.rutaArchivo %}
                    <div style="margin-bottom: 0.5rem; padding: 0.5rem; background-color: #e8f5e9; border-radius: 4px;">
                        <strong>Archivo actual:</strong> {{ recursoEspecifico.nombreArchivoOriginal ?? 'Archivo sin nombre' }}
                        <br>
                        <small>Deja este campo vac√≠o si no deseas cambiar el archivo.</small>
                    </div>
                {% endif %}
                {{ form_widget(form.archivo) }}
                {{ form_help(form.archivo) }}
                {{ form_errors(form.archivo) }}
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('app_recurso_especifico_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}








