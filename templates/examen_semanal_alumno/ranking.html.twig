{% extends 'base.html.twig' %}

{% block title %}Ranking - {{ examenSemanal.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Ranking - {{ examenSemanal.nombre }}</h1>
    </div>
    <div class="card-body">
        {% if posicion %}
            <div class="alert alert-info" style="margin-bottom: 2rem;">
                <strong>Tu posici칩n:</strong> {{ posicion }} de {{ examenes|length }}
                {% if miExamen %}
                    <br><strong>Tu nota:</strong> {{ miExamen.nota|number_format(2, ',', '.') }}
                {% endif %}
            </div>
        {% else %}
            <div class="alert alert-warning" style="margin-bottom: 2rem;">
                No has realizado este examen a칰n.
            </div>
        {% endif %}

        {% if examenes|length > 0 %}
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Posici칩n</th>
                            <th>Alumno</th>
                            <th>Nota</th>
                            <th>Aciertos</th>
                            <th>Errores</th>
                            <th>En blanco</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for examen in examenes %}
                            <tr style="{% if examen.usuario.id == app.user.id %}background-color: #e3f2fd; font-weight: bold;{% endif %}">
                                <td>
                                    {% if loop.index == 1 %}
                                        游볞
                                    {% elseif loop.index == 2 %}
                                        游볟
                                    {% elseif loop.index == 3 %}
                                        游볠
                                    {% else %}
                                        {{ loop.index }}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if examen.usuario.id == app.user.id %}
                                        {{ examen.usuario.nombreDisplay }}
                                        <span class="badge" style="background-color: #2196F3;">T칰</span>
                                    {% else %}
                                        {{ ofuscar_nombre(examen.usuario.id) }}
                                    {% endif %}
                                </td>
                                <td>
                                    <strong style="font-size: 1.2rem; color: {% if examen.nota >= 10 %}var(--color-success){% else %}var(--color-danger){% endif %};">{{ examen.nota|number_format(2, ',', '.') }}</strong>
                                </td>
                                <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                                <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                <td style="color: #999;"><strong>{{ examen.enBlanco }}</strong></td>
                                <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" style="text-align: center; padding: 2rem;">
                <p style="font-size: 1.1rem; margin: 0;">A칰n no hay ex치menes realizados.</p>
            </div>
        {% endif %}

        <div style="margin-top: 2rem;">
            <a href="{{ path('app_examen_semanal_alumno_index') }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>

<style>
/* Estilos responsivos para m칩viles (iPhone) */
@media (max-width: 768px) {
    /* Card principal */
    .card {
        margin: 0.5rem !important;
    }
    
    .card-header h1 {
        font-size: 1.3rem !important;
    }
    
    .card-body {
        padding: 1rem !important;
    }
    
    /* Alertas */
    .alert {
        padding: 1rem !important;
        font-size: 0.95rem !important;
        margin-bottom: 1.5rem !important;
    }
    
    /* Tabla de ranking */
    .table {
        font-size: 0.85rem !important;
    }
    
    .table th,
    .table td {
        padding: 0.5rem !important;
    }
    
    /* Ocultar columnas menos importantes en m칩vil */
    .table th:nth-child(5),
    .table td:nth-child(5),
    .table th:nth-child(6),
    .table td:nth-child(6) {
        display: none !important;
    }
    
    /* Ajustar tama침o de fuente en celdas */
    .table td strong {
        font-size: 1rem !important;
    }
    
    /* Bot칩n volver */
    .card-body > div[style*="margin-top: 2rem"] {
        margin-top: 1.5rem !important;
    }
    
    .card-body > div[style*="margin-top: 2rem"] .btn {
        width: 100% !important;
        padding: 0.75rem 1rem !important;
        font-size: 1rem !important;
        min-height: 48px !important;
    }
    
    /* Asegurar que el texto no se desborde */
    * {
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
    }
    
    /* Botones m치s grandes para facilitar el toque */
    button, .btn, a.btn {
        min-height: 48px !important;
        touch-action: manipulation !important;
    }
}

/* Estilos espec칤ficos para iPhone (pantallas muy peque침as) */
@media (max-width: 480px) {
    .card-header h1 {
        font-size: 1.2rem !important;
    }
    
    .table {
        font-size: 0.8rem !important;
    }
    
    .table th,
    .table td {
        padding: 0.4rem !important;
    }
    
    /* Ocultar m치s columnas en pantallas muy peque침as */
    .table th:nth-child(4),
    .table td:nth-child(4),
    .table th:nth-child(7),
    .table td:nth-child(7) {
        display: none !important;
    }
    
    .table td strong {
        font-size: 0.95rem !important;
    }
}
</style>
{% endblock %}









