{% extends 'base.html.twig' %}

{% block title %}Ranking - {{ examenSemanal.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Ranking - {{ examenSemanal.nombre }}</h1>
    </div>
    <div class="card-body">
        {% if posicion %}
            <div class="alert alert-info" style="margin-bottom: 2rem;">
                <strong>Tu posici√≥n:</strong> {{ posicion }} de {{ examenes|length }}
                {% if miExamen %}
                    <br><strong>Tu nota:</strong> {{ miExamen.nota|number_format(2, ',', '.') }}
                {% endif %}
            </div>
        {% else %}
            <div class="alert alert-warning" style="margin-bottom: 2rem;">
                No has realizado este examen a√∫n.
            </div>
        {% endif %}

        {% if examenes|length > 0 %}
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Posici√≥n</th>
                            <th>Alumno</th>
                            <th>Nota</th>
                            <th>Aciertos</th>
                            <th>Errores</th>
                            <th>En blanco</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for examen in examenes %}
                            <tr style="{% if examen.usuario.id == app.user.id %}background-color: #e3f2fd; font-weight: bold;{% endif %}">
                                <td>
                                    {% if loop.index == 1 %}
                                        ü•á
                                    {% elseif loop.index == 2 %}
                                        ü•à
                                    {% elseif loop.index == 3 %}
                                        ü•â
                                    {% else %}
                                        {{ loop.index }}
                                    {% endif %}
                                </td>
                                <td>
                                    {{ examen.usuario.username }}
                                    {% if examen.usuario.id == app.user.id %}
                                        <span class="badge" style="background-color: #2196F3;">T√∫</span>
                                    {% endif %}
                                </td>
                                <td><strong style="font-size: 1.2rem; color: {% if examen.nota >= 10 %}var(--color-success){% else %}var(--color-danger){% endif %};">{{ examen.nota|number_format(2, ',', '.') }}</strong></td>
                                <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                                <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                <td style="color: #999;"><strong>{{ examen.enBlanco }}</strong></td>
                                <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" style="text-align: center; padding: 2rem;">
                <p style="font-size: 1.1rem; margin: 0;">A√∫n no hay ex√°menes realizados.</p>
            </div>
        {% endif %}

        <div style="margin-top: 2rem;">
            <a href="{{ path('app_examen_semanal_alumno_index') }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
{% endblock %}



