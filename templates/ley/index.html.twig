{% extends 'base.html.twig' %}

{% block title %}Leyes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Formulario responsive */
            .card-body > div[style*="display: grid"] {
                grid-template-columns: 1fr !important;
                gap: 1rem !important;
            }
            
            .card-body .form-group {
                width: 100%;
            }
            
            .card-body label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.95rem;
            }
            
            .card-body input[type="text"] {
                font-size: 16px !important;
                min-height: 48px;
                width: 100%;
            }
            
            .card-body > div > div:last-child {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .card-body > div > div:last-child .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .table {
                font-size: 0.8rem;
                min-width: 800px;
            }
            
            /* Ocultar columnas menos importantes en m贸vil */
            .table th:nth-child(1),
            .table td:nth-child(1),
            .table th:nth-child(3),
            .table td:nth-child(3),
            .table th:nth-child(6),
            .table td:nth-child(6),
            .table th:nth-child(7),
            .table td:nth-child(7) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table .d-flex.gap-2 {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table .d-flex.gap-2 .btn,
            .table .d-flex.gap-2 form {
                width: 100%;
            }
            
            .table .d-flex.gap-2 form button {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Leyes</h1>
    <a href="{{ path('app_ley_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nueva Ley</a>
</div>

<form method="get" action="{{ path('app_ley_index') }}" style="margin-bottom: 2rem;">
    <div class="card">
        <div class="card-body">
            <div style="display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Buscar:</label>
                    <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Buscar por nombre o descripci贸n...">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="{{ path('app_ley_index') }}" class="btn btn-secondary">Limpiar</a>
                </div>
            </div>
        </div>
    </div>
</form>

{% if leyesConBoe|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripci贸n</th>
                    <th>Temas</th>
                    <th>Art铆culos</th>
                    <th>ltima Actualizaci贸n BOE</th>
                    <th>Art铆culos Afectados</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for item in leyesConBoe %}
                    {% set ley = item.ley %}
                    <tr>
                        <td>{{ ley.id }}</td>
                        <td><strong>{{ ley.nombre }}</strong></td>
                        <td>{{ ley.descripcion|default('Sin descripci贸n')|slice(0, 100) }}{% if ley.descripcion|length > 100 %}...{% endif %}</td>
                        <td>
                            {% if ley.temas|length > 0 %}
                                <span class="badge badge-facil">{{ ley.temas|length }} tema(s)</span>
                            {% else %}
                                <span style="color: var(--color-text-light);">Sin temas</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-moderada">{{ ley.articulos|length }} art铆culo(s)</span>
                        </td>
                        <td>
                            {% if item.ultima_actualizacion %}
                                <span style="color: #28a745; font-weight: 500;">
                                    {{ item.ultima_actualizacion|date('d/m/Y') }}
                                </span>
                            {% elseif item.tiene_link %}
                                <span style="color: #6c757d; font-style: italic; font-size: 0.9rem;">
                                    Sin actualizaciones, mire manualmente.
                                </span>
                            {% else %}
                                <span style="color: #6c757d; font-style: italic; font-size: 0.9rem;">
                                    Sin link BOE
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            {% set totalAfectados = item.articulos_afectados|length + (item.otros_afectados|default([])|length) %}
                            {% if totalAfectados > 0 %}
                                <span class="badge badge-warning" style="background-color: #ffc107; color: #000;">
                                    {{ totalAfectados }} afectado(s)
                                </span>
                                {% set articulosEnTemario = item.articulos_afectados|filter(a => a.articulo.ley.temas|length > 0) %}
                                {% if articulosEnTemario|length > 0 %}
                                    <span class="badge" style="background-color: #28a745; color: white; margin-top: 0.25rem; display: inline-block;">
                                         {{ articulosEnTemario|length }} en temario
                                    </span>
                                {% endif %}
                                <br>
                                <small style="color: #666;">
                                    {% for itemArt in item.articulos_afectados|slice(0, 3) %}
                                        Art. {{ itemArt.articulo.getNumeroCompleto }}{% if itemArt.articulo.ley.temas|length > 0 %} <span style="color: #28a745;"></span>{% endif %}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                    {% if item.otros_afectados|default([])|length > 0 %}
                                        {% if item.articulos_afectados|length > 0 %}, {% endif %}
                                        {% for otro in item.otros_afectados|slice(0, 1) %}
                                            {{ otro.titulo }}<span style="color: #6c757d; font-size: 0.85em;"> ({{ otro.tipo }})</span>
                                        {% endfor %}
                                    {% endif %}
                                    {% if totalAfectados > 3 %}...{% endif %}
                                </small>
                            {% else %}
                                <span style="color: #6c757d; font-style: italic; font-size: 0.9rem;">Ninguno</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if ley.isActivo %}
                                <span class="badge badge-success" style="background-color: var(--color-success);">Activa</span>
                            {% else %}
                                <span class="badge badge-danger" style="background-color: var(--color-danger);">Inactiva</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_ley_show', {'id': ley.id}) }}" class="btn btn-secondary btn-sm">Ver</a>
                                <a href="{{ path('app_ley_edit', {'id': ley.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                                <form method="post" action="{{ path('app_ley_toggle_activo', {'id': ley.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ ley.id) }}">
                                    <button type="submit" class="btn btn-sm {% if ley.isActivo %}btn-warning{% else %}btn-success{% endif %}">
                                        {% if ley.isActivo %}Desactivar{% else %}Activar{% endif %}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center">
            <p>No hay leyes registradas a煤n.</p>
            <a href="{{ path('app_ley_new') }}" class="btn btn-primary">Crear Primera Ley</a>
        </div>
    </div>
{% endif %}
{% endblock %}

