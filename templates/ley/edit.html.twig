{% extends 'base.html.twig' %}

{% block title %}Editar Ley{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Ley: {{ ley.nombre }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            {{ form_row(form.temas) }}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a href="{{ path('app_ley_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

