{% extends 'base.html.twig' %}

{% block title %}Ley: {{ ley.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>{{ ley.nombre }}</h1>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="form-label"><strong>Descripci칩n:</strong></label>
            <p>{{ ley.descripcion|default('Sin descripci칩n') }}</p>
        </div>

        {% if ley.boeLink %}
        <div class="form-group">
            <label class="form-label"><strong>Link del BOE:</strong></label>
            {% set boeUrlVisualizacion = ley.boeLink|boe_url_visualizacion %}
            <p><a href="{{ boeUrlVisualizacion }}" target="_blank" rel="noopener noreferrer">{{ boeUrlVisualizacion }}</a></p>
        </div>
        {% endif %}

        <div class="form-group">
            <label class="form-label"><strong>Temas relacionados:</strong></label>
            {% if ley.temas|length > 0 %}
                <ul>
                    {% for tema in ley.temas %}
                        <li><a href="{{ path('app_tema_show', {'id': tema.id}) }}">{{ tema.nombre }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p style="color: var(--color-text-light);">No hay temas asociados a esta ley.</p>
            {% endif %}
        </div>

        <div class="form-group">
            <label class="form-label"><strong>Art칤culos:</strong></label>
            {% if ley.articulos|length > 0 %}
                <ul>
                    {% for articulo in ley.articulos %}
                        <li>
                            <a href="{{ path('app_articulo_show', {'id': articulo.id}) }}">Art. {{ articulo.getNumeroCompleto() }}</a>
                            {% if articulos_afectados|length > 0 and articulo in articulos_afectados %}
                                <span class="badge badge-warning" style="background-color: #ffc107; color: #000; margin-left: 0.5rem;">Afectado</span>
                                {% if ley.temas|length > 0 %}
                                    <span class="badge" style="background-color: #28a745; color: white; margin-left: 0.5rem;">游닄 En temario</span>
                                {% endif %}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p style="color: var(--color-text-light);">No hay art칤culos registrados para esta ley.</p>
            {% endif %}
        </div>

        {% if articulos_afectados|length > 0 %}
        <div class="form-group">
            <label class="form-label"><strong>Art칤culos Afectados por 칔ltima Actualizaci칩n:</strong></label>
            <div class="alert alert-warning" style="background-color: #fff3cd; border-color: #ffc107; color: #856404;">
                <p><strong>{{ articulos_afectados|length }}</strong> art칤culo(s) han sido afectados por la 칰ltima actualizaci칩n del BOE ({{ ultima_actualizacion|date('d/m/Y') }}):</p>
                <ul style="margin-bottom: 0;">
                    {% for articulo in articulos_afectados %}
                        <li>
                            <a href="{{ path('app_articulo_show', {'id': articulo.id}) }}">Art. {{ articulo.getNumeroCompleto() }}</a>
                            {% if articulo.ley.temas|length > 0 %}
                                <span class="badge" style="background-color: #28a745; color: white; margin-left: 0.5rem;">游닄 En temario</span>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}

        <div class="form-group">
            <label class="form-label"><strong>Preguntas:</strong></label>
            <p><span class="badge badge-facil">{{ ley.preguntas|length }} pregunta(s)</span></p>
        </div>

        <div class="d-flex gap-2 mt-4">
            <a href="{{ path('app_ley_edit', {'id': ley.id}) }}" class="btn btn-primary">Editar</a>
            <a href="{{ path('app_ley_index') }}" class="btn btn-secondary">Volver</a>
            <form method="post" action="{{ path('app_ley_delete', {'id': ley.id}) }}" onsubmit="return confirm('쮼st치s seguro de eliminar esta ley?');" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ley.id) }}">
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

