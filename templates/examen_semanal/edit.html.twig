{% extends 'base.html.twig' %}

{% block title %}Editar Examen Semanal{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Examen Semanal</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.fechaApertura) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.fechaCierre) }}
                </div>
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('app_examen_semanal_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

