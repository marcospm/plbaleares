{% extends 'base.html.twig' %}

{% block title %}Editar Examen Semanal{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Editar Examen Semanal</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.descripcion) }}
            {{ form_row(form.fechaApertura) }}
            {{ form_row(form.fechaCierre) }}
            {{ form_row(form.dificultad) }}
            
            {% if examenSemanal.municipio %}
                <div class="card" style="background-color: #e3f2fd; margin-bottom: 1.5rem;">
                    <div class="card-body">
                        <h4 style="margin-top: 0; color: #2196F3;">üèõÔ∏è Examen Municipal</h4>
                        {{ form_row(form.municipio) }}
                        {{ form_row(form.temasMunicipales) }}
                    </div>
                </div>
            {% else %}
                <div class="card" style="background-color: #f8f9fa; margin-bottom: 1.5rem;">
                    <div class="card-body">
                        <h4 style="margin-top: 0; color: #4CAF50;">üìö Examen del Temario General</h4>
                        {{ form_row(form.temas) }}
                    </div>
                </div>
            {% endif %}
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('app_examen_semanal_index') }}" class="btn btn-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

