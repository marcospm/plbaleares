        <script>
        // Funci√≥n para toggle de secciones
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            const icon = document.getElementById(sectionId + 'Icon');
            
            if (section.style.display === 'none') {
                section.style.display = 'block';
                if (icon) icon.textContent = '‚ñ≤';
            } else {
                section.style.display = 'none';
                if (icon) icon.textContent = '‚ñº';
            }
        }
        
        // Usar funci√≥n inmediata para asegurar que se ejecute tan pronto como sea posible
        (function() {
            function initializeMunicipioTemas() {
                const municipioSelect = document.getElementById('examen_semanal_municipio');
                const temasMunicipalesSelect = document.getElementById('examen_semanal_temasMunicipales');
                
                if (!municipioSelect || !temasMunicipalesSelect) {
                    // Si los elementos no est√°n disponibles, intentar de nuevo en el siguiente ciclo
                    setTimeout(initializeMunicipioTemas, 50);
                    return;
                }
                
                // Funci√≥n para cargar temas municipales
                function cargarTemasMunicipales(municipioId) {
                    // Limpiar selecci√≥n actual
                    temasMunicipalesSelect.innerHTML = '<option value="">Cargando temas...</option>';
                    temasMunicipalesSelect.disabled = true;
                    temasMunicipalesSelect.style.opacity = '0.6';
                    
                    if (!municipioId || municipioId === '') {
                        temasMunicipalesSelect.innerHTML = '<option value="">Selecciona un municipio primero</option>';
                        temasMunicipalesSelect.disabled = true;
                        temasMunicipalesSelect.style.opacity = '0.6';
                        return;
                    }
                    
                    // Obtener temas municipales del municipio seleccionado
                    fetch('{{ path('app_examen_semanal_temas_municipales', {'municipioId': '__MUNICIPIO_ID__'}) }}'.replace('__MUNICIPIO_ID__', municipioId))
                        .then(response => response.json())
                        .then(data => {
                            temasMunicipalesSelect.innerHTML = '';
                            
                            if (data.length === 0) {
                                const option = document.createElement('option');
                                option.value = '';
                                option.textContent = 'No hay temas disponibles para este municipio';
                                temasMunicipalesSelect.appendChild(option);
                                temasMunicipalesSelect.disabled = true;
                                temasMunicipalesSelect.style.opacity = '0.6';
                            } else {
                                // Agregar placeholder
                                const placeholderOption = document.createElement('option');
                                placeholderOption.value = '';
                                placeholderOption.textContent = '-- Selecciona los temas municipales --';
                                temasMunicipalesSelect.appendChild(placeholderOption);
                                
                                // Agregar opciones de temas
                                data.forEach(tema => {
                                    const option = document.createElement('option');
                                    option.value = tema.id;
                                    option.textContent = tema.nombre;
                                    temasMunicipalesSelect.appendChild(option);
                                });
                                
                                temasMunicipalesSelect.disabled = false;
                                temasMunicipalesSelect.style.opacity = '1';
                            }
                        })
                        .catch(error => {
                            console.error('Error al cargar temas municipales:', error);
                            temasMunicipalesSelect.innerHTML = '<option value="">Error al cargar temas</option>';
                            temasMunicipalesSelect.disabled = true;
                            temasMunicipalesSelect.style.opacity = '0.6';
                        });
                }
                
                // Event listener para cambios en el municipio
                municipioSelect.addEventListener('change', function() {
                    cargarTemasMunicipales(this.value);
                });
                
                // Inicializar estado inmediatamente: si no hay municipio seleccionado, deshabilitar temas
                if (!municipioSelect.value || municipioSelect.value === '') {
                    // Limpiar cualquier contenido previo y establecer estado inicial
                    temasMunicipalesSelect.innerHTML = '<option value="">Selecciona un municipio primero</option>';
                    temasMunicipalesSelect.disabled = true;
                    temasMunicipalesSelect.style.opacity = '0.6';
                } else {
                    // Si ya hay un municipio seleccionado, cargar sus temas
                    cargarTemasMunicipales(municipioSelect.value);
                }
            }
            
            // Intentar inicializar inmediatamente
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initializeMunicipioTemas);
            } else {
                // DOM ya est√° listo, ejecutar inmediatamente
                initializeMunicipioTemas();
            }
        })();
        </script>
    </div>
