{% extends 'base.html.twig' %}

{% block title %}{{ examenSemanal.nombre }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h1>{{ examenSemanal.nombre }}</h1>
            <div>
                <a href="{{ path('app_examen_semanal_edit', {'id': examenSemanal.id}) }}" class="btn btn-primary">Editar</a>
                <a href="{{ path('app_examen_semanal_index') }}" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {% if examenSemanal.descripcion %}
            <div class="mb-3">
                <strong>DescripciÃ³n:</strong>
                <p>{{ examenSemanal.descripcion }}</p>
            </div>
        {% endif %}

        <div class="mb-3">
            <strong>Dificultad:</strong> 
            <span class="badge badge-{{ examenSemanal.dificultad }}">{{ examenSemanal.getDificultadLabel() }}</span>
        </div>

        {% if examenSemanal.numeroPreguntas %}
            <div class="mb-3">
                <strong>NÃºmero de Preguntas:</strong> 
                <span class="badge" style="background-color: #2196F3; padding: 0.5rem 1rem; font-size: 1rem;">{{ examenSemanal.numeroPreguntas }} preguntas</span>
            </div>
        {% else %}
            <div class="mb-3">
                <strong>NÃºmero de Preguntas:</strong> 
                <span class="badge" style="background-color: #6c757d; padding: 0.5rem 1rem; font-size: 1rem;">Todas las disponibles</span>
            </div>
        {% endif %}

        <div class="mb-3">
            <strong>Fecha de Apertura:</strong> {{ examenSemanal.fechaApertura|date('d/m/Y H:i') }}
        </div>

        <div class="mb-3">
            <strong>Fecha de Cierre:</strong> {{ examenSemanal.fechaCierre|date('d/m/Y H:i') }}
        </div>

        <div class="mb-3">
            <strong>Estado:</strong>
            {% if examenSemanal.estaDisponible() %}
                <span class="badge" style="background-color: #28a745;">Disponible</span>
            {% elseif examenSemanal.estaCerrado() %}
                <span class="badge" style="background-color: #6c757d;">Cerrado</span>
            {% elseif examenSemanal.estaPendiente() %}
                <span class="badge" style="background-color: #ffc107;">Pendiente</span>
            {% else %}
                <span class="badge" style="background-color: #dc3545;">Inactivo</span>
            {% endif %}
        </div>

        {% if examenSemanal.municipio %}
            <div class="mb-3">
                <strong>Municipio:</strong> 
                <span class="badge" style="background-color: #2196F3;">{{ examenSemanal.municipio.nombre }}</span>
            </div>
            <div class="mb-3">
                <strong>Temas Municipales:</strong>
                {% for temaMunicipal in examenSemanal.temasMunicipales %}
                    <span class="badge badge-facil">{{ temaMunicipal.nombre }}</span>
                {% endfor %}
            </div>
        {% else %}
            <div class="mb-3">
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
                    <div>
                        <strong>Temas:</strong>
                        {% for tema in examenSemanal.temas %}
                            <span class="badge badge-facil">{{ tema.nombre }}</span>
                        {% endfor %}
                    </div>
                    {% if porcentajesPorTema|length > 0 %}
                        <button type="button" class="btn btn-info btn-sm" id="btnVerPorcentajes" style="font-size: 0.85rem; padding: 0.4rem 1rem;">
                            ðŸ“Š Ver % por Tema
                        </button>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <div class="mb-3">
            <strong>Creado por:</strong> {{ examenSemanal.creadoPor.username }}
        </div>

        <div class="mb-3">
            <strong>Fecha de creaciÃ³n:</strong> {{ examenSemanal.fechaCreacion|date('d/m/Y H:i') }}
        </div>

        <h3 style="margin-top: 2rem;">ExÃ¡menes Realizados: {{ examenSemanal.examenes|length }}</h3>
        {% if examenSemanal.examenes|length > 0 %}
            <div class="card mt-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Alumno</th>
                            <th>Fecha</th>
                            <th>Nota</th>
                            <th>Aciertos</th>
                            <th>Errores</th>
                            <th>En blanco</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for examen in examenSemanal.examenes %}
                            <tr>
                                <td>{{ examen.usuario.username }}</td>
                                <td>{{ examen.fecha|date('d/m/Y H:i') }}</td>
                                <td><strong style="font-size: 1.2rem; color: {% if examen.nota >= 10 %}var(--color-success){% else %}var(--color-danger){% endif %};">{{ examen.nota|number_format(2, ',', '.') }}</strong></td>
                                <td style="color: var(--color-success);"><strong>{{ examen.aciertos }}</strong></td>
                                <td style="color: var(--color-danger);"><strong>{{ examen.errores }}</strong></td>
                                <td style="color: #999;"><strong>{{ examen.enBlanco }}</strong></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>

<!-- Modal para mostrar porcentajes por tema -->
{% if porcentajesPorTema|length > 0 %}
<div id="modalPorcentajes" style="display: none; position: fixed; z-index: 99999; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); overflow-y: auto;">
    <div style="background-color: #fefefe; margin: 5% auto; padding: 0; border: 1px solid #888; border-radius: 8px; width: 90%; max-width: 500px; box-shadow: 0 4px 6px rgba(0,0,0,0.3); position: relative;">
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid #ddd;">
            <h3 style="margin: 0; color: var(--color-primary); font-size: 1.2rem;">ðŸ“Š DistribuciÃ³n de Preguntas por Tema</h3>
            <span id="cerrarModalPorcentajes" style="color: #aaa; font-size: 28px; font-weight: bold; cursor: pointer; line-height: 1; user-select: none;" onclick="cerrarModalPorcentajes()">&times;</span>
        </div>
        <div style="padding: 1.5rem;">
            <div style="display: grid; gap: 0.75rem;">
                {% for temaId, datos in porcentajesPorTema %}
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: #f8f9fa; border-radius: 4px; border-left: 4px solid var(--color-primary);">
                        <div>
                            <strong style="color: #333;">{{ datos.nombre }}</strong>
                            <div style="font-size: 0.85rem; color: #666; margin-top: 0.25rem;">{{ datos.cantidad }} pregunta{{ datos.cantidad != 1 ? 's' : '' }}</div>
                        </div>
                        <div style="font-size: 1.2rem; font-weight: bold; color: var(--color-primary);">
                            {{ datos.porcentaje }}%
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div style="padding: 1rem; border-top: 1px solid #ddd; text-align: right;">
            <button onclick="cerrarModalPorcentajes()" class="btn btn-secondary btn-sm">Cerrar</button>
        </div>
    </div>
</div>

<script>
function abrirModalPorcentajes() {
    const modal = document.getElementById('modalPorcentajes');
    if (modal) {
        modal.style.display = 'block';
    }
}

function cerrarModalPorcentajes() {
    const modal = document.getElementById('modalPorcentajes');
    if (modal) {
        modal.style.display = 'none';
    }
}

// Cerrar modal al hacer clic fuera de Ã©l
window.addEventListener('click', function(event) {
    const modal = document.getElementById('modalPorcentajes');
    if (modal && event.target == modal) {
        cerrarModalPorcentajes();
    }
});

document.addEventListener('DOMContentLoaded', function() {
    const btnVerPorcentajes = document.getElementById('btnVerPorcentajes');
    if (btnVerPorcentajes) {
        btnVerPorcentajes.addEventListener('click', function(e) {
            e.preventDefault();
            abrirModalPorcentajes();
        });
    }
});
</script>
{% endif %}
{% endblock %}



