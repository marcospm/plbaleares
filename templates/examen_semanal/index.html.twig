{% extends 'base.html.twig' %}

{% block title %}Ex√°menes Semanales{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Estilos para paginaci√≥n */
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 0.25rem;
            flex-wrap: wrap;
        }
        
        .page-item {
            margin: 0;
        }
        
        .page-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: var(--color-primary);
            background-color: #fff;
            border: 1px solid #dee2e6;
            text-decoration: none;
            border-radius: 4px;
            transition: all 0.2s ease;
            min-width: 38px;
            text-align: center;
        }
        
        .page-link:hover {
            background-color: #e9ecef;
            border-color: #dee2e6;
            color: var(--color-primary);
        }
        
        .page-item.active .page-link {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
            color: white;
            font-weight: bold;
        }
        
        .page-item.disabled .page-link {
            color: #6c757d;
            pointer-events: none;
            background-color: #fff;
            border-color: #dee2e6;
            cursor: not-allowed;
        }

        @media (max-width: 768px) {
            /* Header responsive */
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between h1 {
                font-size: 1.5rem;
                word-wrap: break-word;
            }
            
            .d-flex.justify-content-between .btn {
                width: 100%;
                min-height: 48px;
                font-size: 16px;
            }

            /* Formulario de filtros responsive */
            #filtrosForm {
                grid-template-columns: 1fr !important;
                gap: 1rem !important;
            }
            
            #filtrosForm > div {
                width: 100%;
            }
            
            #filtrosForm label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.95rem;
            }
            
            #filtrosForm input,
            #filtrosForm select {
                font-size: 16px !important;
                min-height: 48px;
                width: 100%;
            }
            
            #filtrosForm > div:last-child {
                display: flex;
                flex-direction: row;
                gap: 0.75rem;
                width: 100%;
            }
            
            #filtrosForm > div:last-child .btn {
                flex: 1;
                min-height: 48px;
            }
            
            /* Tabla responsive */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .table {
                font-size: 0.8rem;
                min-width: 800px;
            }
            
            /* Ocultar columnas menos importantes en m√≥vil */
            .table th:nth-child(5),
            .table td:nth-child(5),
            .table th:nth-child(7),
            .table td:nth-child(7) {
                display: none !important;
            }
            
            /* Botones en tablas */
            .table .btn {
                min-height: 40px;
                font-size: 14px;
                padding: 0.5rem 0.75rem;
                white-space: nowrap;
            }
            
            .table td > div[style*="display: flex"] {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .table td > div[style*="display: flex"] .btn,
            .table td > div[style*="display: flex"] form {
                width: 100%;
            }
            
            .table td > div[style*="display: flex"] form button {
                width: 100%;
            }
            
            /* Modal responsive */
            #modalPorcentajes {
                padding: 0.5rem;
            }
            
            #modalPorcentajes > div {
                width: 95% !important;
                max-width: 95% !important;
                margin: 2% auto !important;
                padding: 0 !important;
                max-height: 95vh;
                overflow-y: auto;
            }
            
            #modalPorcentajes h3 {
                font-size: 1.1rem !important;
                word-wrap: break-word;
            }
            
            #cerrarModalPorcentajes {
                font-size: 2.5rem !important;
                min-width: 44px;
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            #modalPorcentajes > div > div {
                padding: 1rem !important;
            }
            
            #contenidoPorcentajes {
                gap: 0.75rem !important;
            }
            
            #contenidoPorcentajes > div {
                flex-direction: column !important;
                gap: 0.5rem !important;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4" style="flex-wrap: wrap; gap: 1rem;">
    <h1 style="flex: 1; min-width: 0;">Ex√°menes Semanales</h1>
    <a href="{{ path('app_examen_semanal_new') }}" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap; align-self: flex-start;">Nuevo Examen Semanal</a>
</div>

{# Formulario de b√∫squeda y filtros #}
<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="{{ path('app_examen_semanal_index') }}" id="filtrosForm" style="display: grid; grid-template-columns: 2fr 1fr 1fr auto; gap: 1rem; align-items: end;">
            <div>
                <label for="search" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #333;">Buscar por nombre:</label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ search }}" 
                       placeholder="Buscar ex√°menes..."
                       class="form-control"
                       style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;">
            </div>
            <div>
                <label for="dificultad" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #333;">Dificultad:</label>
                <select id="dificultad" name="dificultad" class="form-control" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;">
                    <option value="">Todas</option>
                    <option value="facil" {% if dificultad == 'facil' %}selected{% endif %}>F√°cil</option>
                    <option value="moderada" {% if dificultad == 'moderada' %}selected{% endif %}>Moderada</option>
                    <option value="dificil" {% if dificultad == 'dificil' %}selected{% endif %}>Dif√≠cil</option>
                </select>
            </div>
            <div>
                <label for="estado" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #333;">Estado:</label>
                <select id="estado" name="estado" class="form-control" style="width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;">
                    <option value="">Todos</option>
                    <option value="disponible" {% if estado == 'disponible' %}selected{% endif %}>Disponible</option>
                    <option value="pendiente" {% if estado == 'pendiente' %}selected{% endif %}>Pendiente</option>
                    <option value="cerrado" {% if estado == 'cerrado' %}selected{% endif %}>Cerrado</option>
                    <option value="inactivo" {% if estado == 'inactivo' %}selected{% endif %}>Inactivo</option>
                </select>
            </div>
            <div style="display: flex; gap: 0.5rem; flex-direction: column;">
                <button type="submit" class="btn btn-primary" style="min-height: 48px; font-size: 16px; white-space: nowrap;">Buscar</button>
                {% if search or dificultad or estado %}
                    <a href="{{ path('app_examen_semanal_index') }}" class="btn btn-secondary" style="min-height: 48px; font-size: 16px; white-space: nowrap;">Limpiar</a>
                {% endif %}
            </div>
        </form>
    </div>
</div>

{# Informaci√≥n de resultados #}
{% if totalItems > 0 %}
    <div class="mb-3" style="color: #666; font-size: 0.9rem;">
        Mostrando {{ ((currentPage - 1) * itemsPerPage) + 1 }} - {{ min(currentPage * itemsPerPage, totalItems) }} de {{ totalItems }} examen{{ totalItems != 1 ? 'es' : '' }}
    </div>
{% endif %}

{% if examenes|length > 0 %}
    <div class="card">
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dificultad</th>
                    <th>Preguntas</th>
                    <th>Apertura</th>
                    <th>Cierre</th>
                    <th>Estado</th>
                    <th>Realizaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for examen in examenes %}
                    <tr>
                        <td><strong>{{ examen.nombre }}</strong></td>
                        <td><span class="badge badge-{{ examen.dificultad }}">{{ examen.getDificultadLabel() }}</span></td>
                        <td>
                            {% if examen.numeroPreguntas %}
                                <span class="badge" style="background-color: #2196F3;">{{ examen.numeroPreguntas }}</span>
                            {% else %}
                                <span class="badge" style="background-color: #6c757d;">Todas</span>
                            {% endif %}
                        </td>
                        <td>{{ examen.fechaApertura|date('d/m/Y H:i') }}</td>
                        <td>{{ examen.fechaCierre|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if examen.estaDisponible() %}
                                <span class="badge" style="background-color: #28a745;">Disponible</span>
                            {% elseif examen.estaCerrado() %}
                                <span class="badge" style="background-color: #6c757d;">Cerrado</span>
                            {% elseif examen.estaPendiente() %}
                                <span class="badge" style="background-color: #ffc107;">Pendiente</span>
                            {% else %}
                                <span class="badge" style="background-color: #dc3545;">Inactivo</span>
                            {% endif %}
                        </td>
                        <td>{{ examen.examenes|length }}</td>
                        <td style="white-space: nowrap;">
                            <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                                <a href="{{ path('app_examen_semanal_show', {'id': examen.id}) }}" class="btn btn-secondary btn-sm">Ver</a>
                                <a href="{{ path('app_examen_semanal_edit', {'id': examen.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                                {% if porcentajesPorExamen[examen.id] is defined and porcentajesPorExamen[examen.id]|length > 0 %}
                                    <button type="button" class="btn btn-info btn-sm btnVerPorcentajes" data-examen-id="{{ examen.id }}" data-porcentajes="{{ porcentajesPorExamen[examen.id]|json_encode|e('html_attr') }}" title="Ver % por Tema" onclick="event.stopPropagation(); return false;">
                                        üìä %
                                    </button>
                                {% endif %}
                                <a href="{{ path('app_examen_semanal_pdf', {'id': examen.id}) }}" class="btn btn-success btn-sm" target="_blank" title="Generar PDF del examen para imprimir">
                                    üìÑ PDF
                                </a>
                                <a href="{{ path('app_examen_semanal_pdf_respuestas', {'id': examen.id}) }}" class="btn btn-info btn-sm" target="_blank" title="Generar PDF con plantilla de respuestas">
                                    ‚úÖ Respuestas
                                </a>
                                <form method="post" action="{{ path('app_examen_semanal_delete', {'id': examen.id}) }}" style="display: inline;" onsubmit="return confirm('¬øEst√°s seguro de eliminar este examen semanal?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ examen.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>

    {# Paginaci√≥n #}
    {% if totalPages > 1 %}
        <nav aria-label="Paginaci√≥n de ex√°menes semanales" class="mt-4">
            <ul class="pagination justify-content-center">
                {# Bot√≥n Anterior #}
                <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{% if currentPage > 1 %}{{ path('app_examen_semanal_index', {'page': currentPage - 1, 'search': search, 'dificultad': dificultad, 'estado': estado}) }}{% else %}#{% endif %}" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                {# P√°ginas #}
                {% set startPage = max(1, currentPage - 2) %}
                {% set endPage = min(totalPages, currentPage + 2) %}

                {% if startPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_examen_semanal_index', {'page': 1, 'search': search, 'dificultad': dificultad, 'estado': estado}) }}">1</a>
                    </li>
                    {% if startPage > 2 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endif %}

                {% for i in startPage..endPage %}
                    <li class="page-item {% if i == currentPage %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_examen_semanal_index', {'page': i, 'search': search, 'dificultad': dificultad, 'estado': estado}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                {% if endPage < totalPages %}
                    {% if endPage < totalPages - 1 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_examen_semanal_index', {'page': totalPages, 'search': search, 'dificultad': dificultad, 'estado': estado}) }}">{{ totalPages }}</a>
                    </li>
                {% endif %}

                {# Bot√≥n Siguiente #}
                <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                    <a class="page-link" href="{% if currentPage < totalPages %}{{ path('app_examen_semanal_index', {'page': currentPage + 1, 'search': search, 'dificultad': dificultad, 'estado': estado}) }}{% else %}#{% endif %}" aria-label="Siguiente">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    {% endif %}
{% else %}
    <div class="card">
        <div class="card-body text-center" style="padding: 3rem;">
            <p style="color: #666; font-size: 1.1rem;">No hay ex√°menes semanales creados.</p>
            <a href="{{ path('app_examen_semanal_new') }}" class="btn btn-primary mt-3">Crear Primer Examen Semanal</a>
        </div>
    </div>
{% endif %}

<!-- Modal para mostrar porcentajes por tema -->
<div id="modalPorcentajes" style="display: none; position: fixed; z-index: 99999; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); overflow-y: auto;">
    <div style="background-color: #fefefe; margin: 5% auto; padding: 0; border: 1px solid #888; border-radius: 8px; width: 90%; max-width: 500px; box-shadow: 0 4px 6px rgba(0,0,0,0.3); position: relative;">
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid #ddd;">
            <h3 style="margin: 0; color: var(--color-primary); font-size: 1.2rem;">üìä Distribuci√≥n de Preguntas por Tema</h3>
            <span id="cerrarModalPorcentajes" style="color: #aaa; font-size: 28px; font-weight: bold; cursor: pointer; line-height: 1; user-select: none;" onclick="cerrarModalPorcentajes()">&times;</span>
        </div>
        <div style="padding: 1.5rem;">
            <div id="contenidoPorcentajes" style="display: grid; gap: 0.75rem;">
                <!-- Contenido din√°mico -->
            </div>
        </div>
        <div style="padding: 1rem; border-top: 1px solid #ddd; text-align: right;">
            <button onclick="cerrarModalPorcentajes()" class="btn btn-secondary btn-sm">Cerrar</button>
        </div>
    </div>
</div>

<script>
function abrirModalPorcentajes(porcentajes) {
    const modal = document.getElementById('modalPorcentajes');
    const contenido = document.getElementById('contenidoPorcentajes');
    
    if (!modal) {
        console.error('No se encontr√≥ el modal modalPorcentajes');
        return;
    }
    
    if (!contenido) {
        console.error('No se encontr√≥ el contenido contenidoPorcentajes');
        return;
    }
    
    // Limpiar contenido anterior
    contenido.innerHTML = '';
    
    // Generar contenido con los porcentajes
    if (porcentajes && typeof porcentajes === 'object') {
        for (const temaId in porcentajes) {
            if (porcentajes.hasOwnProperty(temaId)) {
                const datos = porcentajes[temaId];
                const div = document.createElement('div');
                div.style.cssText = 'display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: #f8f9fa; border-radius: 4px; border-left: 4px solid var(--color-primary);';
                div.innerHTML = `
                    <div>
                        <strong style="color: #333;">${datos.nombre || 'Sin nombre'}</strong>
                        <div style="font-size: 0.85rem; color: #666; margin-top: 0.25rem;">${datos.cantidad || 0} pregunta${datos.cantidad != 1 ? 's' : ''}</div>
                    </div>
                    <div style="font-size: 1.2rem; font-weight: bold; color: var(--color-primary);">
                        ${datos.porcentaje || 0}%
                    </div>
                `;
                contenido.appendChild(div);
            }
        }
    }
    
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
}

function cerrarModalPorcentajes() {
    const modal = document.getElementById('modalPorcentajes');
    if (modal) {
        modal.style.display = 'none';
        document.body.style.overflow = '';
    }
}

// Cerrar modal al hacer clic fuera de √©l
document.addEventListener('click', function(event) {
    const modal = document.getElementById('modalPorcentajes');
    if (modal && event.target === modal) {
        cerrarModalPorcentajes();
    }
});

// Cerrar modal con ESC
document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        const modal = document.getElementById('modalPorcentajes');
        if (modal && modal.style.display === 'block') {
            cerrarModalPorcentajes();
        }
    }
});

// Inicializar cuando el DOM est√© listo
document.addEventListener('DOMContentLoaded', function() {
    const botones = document.querySelectorAll('.btnVerPorcentajes');
    console.log('Botones encontrados:', botones.length);
    
    botones.forEach(function(boton) {
        boton.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            
            const porcentajesJson = this.getAttribute('data-porcentajes');
            console.log('Porcentajes JSON:', porcentajesJson);
            
            if (porcentajesJson) {
                try {
                    const porcentajes = JSON.parse(porcentajesJson);
                    console.log('Porcentajes parseados:', porcentajes);
                    abrirModalPorcentajes(porcentajes);
                } catch (error) {
                    console.error('Error al parsear porcentajes:', error);
                    alert('Error al cargar los porcentajes. Por favor, int√©ntalo de nuevo.');
                }
            } else {
                console.error('No se encontraron porcentajes en el atributo data-porcentajes');
            }
            
            return false;
        });
    });
    
    // Tambi√©n asignar la funci√≥n global para el onclick del span de cerrar
    window.cerrarModalPorcentajes = cerrarModalPorcentajes;
});
</script>
{% endblock %}




