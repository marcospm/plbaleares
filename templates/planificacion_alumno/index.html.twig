{% extends 'base.html.twig' %}

{% block title %}Mi Planificaci√≥n Semanal{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1>{% if sinPlanificacion is defined and sinPlanificacion %}Mi Planificaci√≥n Semanal{% else %}Mi Planificaci√≥n Semanal - Semana del {{ lunesSemana|date('d/m/Y') }}{% endif %}</h1>
        {% if sinPlanificacion is not defined or not sinPlanificacion %}
        <div class="d-flex gap-2 align-items-center">
            {% if semanaAnterior %}
                <a href="{{ path('app_planificacion_alumno_index', {'semana': semanaAnterior|date('Y-m-d')}) }}" class="btn btn-sm btn-secondary">‚Üê Semana Anterior</a>
            {% else %}
                <button class="btn btn-sm btn-secondary" disabled>‚Üê Semana Anterior</button>
            {% endif %}
            {% if esSemanaActual %}
                <span class="badge badge-info" style="padding: 0.5rem 1rem;">Semana Actual</span>
            {% endif %}
            <a href="{{ path('app_planificacion_alumno_index', {'semana': semanaSiguiente|date('Y-m-d')}) }}" class="btn btn-sm btn-secondary">Semana Siguiente ‚Üí</a>
            <a href="{{ path('app_planificacion_alumno_index') }}" class="btn btn-sm btn-primary">Hoy</a>
        </div>
        {% endif %}
    </div>
    <div class="card-body">
        {% if sinPlanificacion is defined and sinPlanificacion %}
            <div class="alert alert-warning text-center" style="padding: 2rem; margin: 2rem 0;">
                <h4 style="margin-bottom: 1rem;">üìÖ No tienes planificaciones asignadas</h4>
                <p style="font-size: 1.1rem; margin-bottom: 1.5rem;">
                    Para empezar con una planificaci√≥n, contacta con tu profesor.
                </p>
                <a href="{{ path('app_contacto') }}" class="btn btn-primary">Contactar con el Profesor</a>
            </div>
        {% elseif planificaciones|length > 1 %}
            <div class="alert alert-info mb-3">
                <strong>Planificaciones activas:</strong> Tienes {{ planificaciones|length }} planificaciones asignadas. Las franjas horarias se muestran agrupadas por d√≠a.
            </div>
        {% endif %}
        
        {% if sinPlanificacion is not defined or not sinPlanificacion %}
        <div class="mb-4">
            <h3>Resumen de la Semana</h3>
            <div class="d-flex gap-3">
                <div class="badge badge-info">Total: {{ resumen.total }}</div>
                <div class="badge badge-success">Completadas: {{ resumen.completadas }}</div>
                <div class="badge badge-warning">Pendientes: {{ resumen.pendientes }}</div>
                {% if resumen.vencidas > 0 %}
                    <div class="badge badge-danger">Vencidas: {{ resumen.vencidas }}</div>
                {% endif %}
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" style="min-width: 800px;">
                <thead>
                    <tr>
                        <th style="width: 120px;">Hora</th>
                        {% for dia in 1..7 %}
                            <th>
                                {% set fechaDia = lunesSemana|date_modify('+' ~ (dia-1) ~ ' days') %}
                                <div>{{ fechaDia|date('l')|trans }}</div>
                                <div style="font-size: 0.85rem; color: #666;">{{ fechaDia|date('d/m') }}</div>
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% set horas = [] %}
                    {% for dia in 1..7 %}
                        {% for franja in franjasPorDia[dia] %}
                            {% set horaInicio = franja.horaInicio|date('H:i') %}
                            {% if horaInicio not in horas %}
                                {% set horas = horas|merge([horaInicio]) %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    {% set horas = horas|sort %}

                    {% for hora in horas %}
                        <tr>
                            <td><strong>{{ hora }}</strong></td>
                            {% for dia in 1..7 %}
                                <td>
                                    {% set fechaDia = lunesSemana|date_modify('+' ~ (dia-1) ~ ' days') %}
                                    {% set franjasDelDiaYHora = franjasPorDia[dia]|filter(f => f.horaInicio|date('H:i') == hora) %}
                                    {% for franja in franjasDelDiaYHora %}
                                        {% set tareasFranja = [] %}
                                        {% for tareaAsignada in franja.tareasAsignadas %}
                                            {% if tareaAsignada.tarea.semanaAsignacion|date('Y-m-d') == lunesSemana|date('Y-m-d') %}
                                                {% set tareasFranja = tareasFranja|merge([tareaAsignada]) %}
                                            {% endif %}
                                        {% endfor %}
                                        
                                        {% set tieneInfoAdicional = (franja.temas|default('') is not empty) or (franja.recursos|default('') is not empty) or (franja.enlaces|default('') is not empty) or (franja.notas|default('') is not empty) %}
                                        <div class="franja-horaria 
                                            {% if franja.tipoActividad == 'repaso_basico' %}franja-repaso{% elseif franja.tipoActividad == 'realizar_examenes' %}franja-examenes{% else %}franja-estudio{% endif %}
                                            {% if tareasFranja|length > 0 %}franja-con-tareas{% endif %}"
                                            style="padding: 0.5rem; margin-bottom: 0.5rem; border-radius: 4px; cursor: pointer; position: relative;"
                                            onclick="toggleFranja(this)"
                                            {% if tieneInfoAdicional %}
                                                data-franja-id="{{ franja.id }}"
                                                data-has-info="true"
                                                onmouseover="this.style.backgroundColor='rgba(0,0,0,0.05)'"
                                                onmouseout="this.style.backgroundColor=''"
                                            {% endif %}>
                                            <div style="font-weight: bold; font-size: 0.9rem; display: flex; align-items: center; justify-content: space-between;">
                                                <span>{{ franja.horaInicio|date('H:i') }}-{{ franja.horaFin|date('H:i') }}</span>
                                                {% if tieneInfoAdicional %}
                                                    <span class="info-icon" 
                                                          style="cursor: pointer; font-size: 1.2rem; margin-left: 0.5rem;"
                                                          data-franja-data="{{ {
                                                              'id': franja.id,
                                                              'horaInicio': franja.horaInicio|date('H:i'),
                                                              'horaFin': franja.horaFin|date('H:i'),
                                                              'tipoActividad': franja.tipoActividad,
                                                              'descripcionRepaso': franja.descripcionRepaso|default(''),
                                                              'temas': franja.temas|default(''),
                                                              'recursos': franja.recursos|default(''),
                                                              'enlaces': franja.enlaces|default(''),
                                                              'notas': franja.notas|default('')
                                                          }|json_encode|e('html_attr') }}"
                                                          data-tareas-data="{{ tareasFranja|map(t => {'id': t.id, 'nombre': t.tarea.nombre, 'descripcion': t.tarea.descripcion, 'completada': t.completada})|json_encode|e('html_attr') }}"
                                                          onclick="event.stopPropagation(); mostrarInfoFranjaDesdeData(this);"
                                                          title="Ver m√°s informaci√≥n">
                                                        ‚ÑπÔ∏è
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <div style="font-size: 0.85rem;">
                                                {% if franja.tipoActividad == 'repaso_basico' %}
                                                    <span class="badge badge-info">Repaso</span>
                                                    <div>{{ franja.descripcionRepaso }}</div>
                                                {% elseif franja.tipoActividad == 'realizar_examenes' %}
                                                    <span class="badge" style="background-color: #FF9800; color: white;">üìù Realizar Ex√°menes</span>
                                                    {% if franja.descripcionRepaso %}
                                                        <div>{{ franja.descripcionRepaso }}</div>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge badge-success">Estudio</span>
                                                    {% if franja.descripcionRepaso %}
                                                        <div>{{ franja.descripcionRepaso }}</div>
                                                    {% endif %}
                                                    {% if tareasFranja|length > 0 %}
                                                        <div class="mt-1">
                                                            <strong>{{ tareasFranja|length }} tarea(s)</strong>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                            
                                            {% if tareasFranja|length > 0 %}
                                                <div class="tareas-container" style="display: none; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid #ddd;">
                                                    {% for tareaAsignada in tareasFranja %}
                                                        <div class="tarea-item" style="margin-bottom: 0.5rem;">
                                                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                                                <input type="checkbox" 
                                                                       class="tarea-checkbox" 
                                                                       data-tarea-id="{{ tareaAsignada.id }}"
                                                                       data-token-completada="{{ csrf_token('marcar_completada' ~ tareaAsignada.id) }}"
                                                                       data-token-pendiente="{{ csrf_token('marcar_pendiente' ~ tareaAsignada.id) }}"
                                                                       {% if tareaAsignada.completada %}checked{% endif %}
                                                                       onchange="marcarTarea(this, {{ tareaAsignada.id }})">
                                                                <span {% if tareaAsignada.completada %}style="text-decoration: line-through; color: #999;"{% endif %}>
                                                                    {{ tareaAsignada.tarea.nombre }}
                                                                </span>
                                                            </div>
                                                            <div style="font-size: 0.75rem; color: #666; margin-left: 1.5rem;">
                                                                {{ tareaAsignada.tarea.descripcion|slice(0, 50) }}{% if tareaAsignada.tarea.descripcion|length > 50 %}...{% endif %}
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        {% if sinPlanificacion is not defined or not sinPlanificacion %}
        {% if tareasPendientesPorSemana|length > 0 %}
            <div class="card mt-4">
                <div class="card-header">
                    <h3>Tareas Pendientes</h3>
                </div>
                <div class="card-body">
                    <p style="margin-bottom: 1rem; color: var(--color-text-light);">
                        Todas tus tareas pendientes, organizadas por semana de asignaci√≥n. Las tareas solo aparecen en su semana correspondiente.
                    </p>
                    
                    {% for semanaKey, tareasSemana in tareasPendientesPorSemana %}
                        {% set lunesTarea = tareasSemana[0].tarea.semanaAsignacion %}
                        {% if lunesTarea.format('N') != '1' %}
                            {% set lunesTarea = lunesTarea|date_modify('monday this week') %}
                        {% endif %}
                        {# Solo mostrar tareas de la semana seleccionada #}
                        {% if lunesTarea|date('Y-m-d') == lunesSemana|date('Y-m-d') %}
                            <div class="mb-4" style="border-bottom: 2px solid #ddd; padding-bottom: 1rem;">
                                <h4 style="color: var(--color-primary); margin-bottom: 1rem;">
                                    Semana del {{ lunesTarea|date('d/m/Y') }}
                                    <span class="badge bg-info">Semana Seleccionada</span>
                                </h4>
                                {% for tareaAsignada in tareasSemana %}
                                <div class="tarea-item mb-2" style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px;">
                                    <input type="checkbox" 
                                           class="tarea-checkbox" 
                                           data-tarea-id="{{ tareaAsignada.id }}"
                                           data-token-completada="{{ csrf_token('marcar_completada' ~ tareaAsignada.id) }}"
                                           data-token-pendiente="{{ csrf_token('marcar_pendiente' ~ tareaAsignada.id) }}"
                                           {% if tareaAsignada.completada %}checked{% endif %}
                                           onchange="marcarTarea(this, {{ tareaAsignada.id }})">
                                    <div style="flex: 1;">
                                        <div style="display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                                            <strong {% if tareaAsignada.completada %}style="text-decoration: line-through; color: #999;"{% endif %}>
                                                {{ tareaAsignada.tarea.nombre }}
                                            </strong>
                                            {% if not tareaAsignada.franjaHoraria %}
                                                <span class="badge" style="background-color: #ff9800; color: white; font-size: 0.75rem; padding: 0.25rem 0.5rem;">
                                                    Sin franja horaria
                                                </span>
                                            {% else %}
                                                <span class="badge" style="background-color: #4caf50; color: white; font-size: 0.75rem; padding: 0.25rem 0.5rem;">
                                                    {{ tareaAsignada.franjaHoraria.nombreDia }} {{ tareaAsignada.franjaHoraria.horaInicio|date('H:i') }}-{{ tareaAsignada.franjaHoraria.horaFin|date('H:i') }}
                                                </span>
                                            {% endif %}
                                        </div>
                                        <div style="font-size: 0.85rem; color: #666; margin-top: 0.25rem;">
                                            {{ tareaAsignada.tarea.descripcion }}
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="card mt-4">
                <div class="card-body text-center">
                    <p class="text-muted">No tienes tareas pendientes. ¬°Excelente trabajo! üéâ</p>
                </div>
            </div>
        {% endif %}
        {% endif %}
    </div>
</div>

<!-- Modal para mostrar informaci√≥n completa de la franja -->
<div id="modalInfoFranja" class="modal" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.5);">
    <div class="modal-content" style="background-color: #fefefe; margin: 5% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 600px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; border-bottom: 2px solid #ddd; padding-bottom: 10px;">
            <h2 style="margin: 0;">Informaci√≥n de la Actividad</h2>
            <span class="close-modal" onclick="cerrarModalInfoFranja()" style="color: #aaa; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
        </div>
        <div id="modalInfoFranjaContent" style="max-height: 70vh; overflow-y: auto;">
            <!-- El contenido se llenar√° din√°micamente -->
        </div>
    </div>
</div>

<script>
function toggleFranja(element) {
    const tareasContainer = element.querySelector('.tareas-container');
    if (tareasContainer) {
        tareasContainer.style.display = tareasContainer.style.display === 'none' ? 'block' : 'none';
    }
}

function marcarTarea(checkbox, tareaId) {
    const completada = checkbox.checked;
    const token = completada 
        ? checkbox.getAttribute('data-token-completada')
        : checkbox.getAttribute('data-token-pendiente');
    const url = completada 
        ? '{{ path('app_planificacion_alumno_marcar_completada', {'id': '__ID__'}) }}'.replace('__ID__', tareaId)
        : '{{ path('app_planificacion_alumno_marcar_pendiente', {'id': '__ID__'}) }}'.replace('__ID__', tareaId);
    
    fetch(url, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            _token: token
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const tareaItem = checkbox.closest('.tarea-item');
            const textElement = tareaItem.querySelector('span, strong');
            if (completada) {
                textElement.style.textDecoration = 'line-through';
                textElement.style.color = '#999';
            } else {
                textElement.style.textDecoration = 'none';
                textElement.style.color = '';
            }
        } else {
            checkbox.checked = !completada;
            alert(data.message || 'Error al actualizar la tarea');
        }
    })
    .catch(error => {
        checkbox.checked = !completada;
        alert('Error al actualizar la tarea');
    });
}

function mostrarInfoFranjaDesdeData(element) {
    const franjaData = element.getAttribute('data-franja-data');
    const tareasData = element.getAttribute('data-tareas-data');
    
    try {
        const franja = JSON.parse(franjaData);
        const tareas = tareasData ? JSON.parse(tareasData) : [];
        mostrarInfoFranja(franja, tareas);
    } catch (e) {
        console.error('Error al parsear datos:', e);
        alert('Error al cargar la informaci√≥n');
    }
}

function mostrarInfoFranja(franja, tareas) {
    const modal = document.getElementById('modalInfoFranja');
    const content = document.getElementById('modalInfoFranjaContent');
    
    let html = '<div style="line-height: 1.6;">';
    
    // Informaci√≥n b√°sica
    html += '<div style="margin-bottom: 1.5rem;">';
    html += '<h3 style="margin-bottom: 0.5rem; color: #333;">';
    html += escapeHtml(franja.horaInicio) + ' - ' + escapeHtml(franja.horaFin);
    let colorBadge = '#4CAF50'; // Por defecto Estudio
    let textoBadge = 'Estudio';
    if (franja.tipoActividad === 'repaso_basico') {
        colorBadge = '#2196F3';
        textoBadge = 'Repaso';
    } else if (franja.tipoActividad === 'realizar_examenes') {
        colorBadge = '#FF9800';
        textoBadge = 'üìù Realizar Ex√°menes';
    }
    html += ' <span class="badge" style="background-color: ' + colorBadge + '; color: white; padding: 0.25rem 0.5rem; border-radius: 4px;">' + textoBadge + '</span>';
    html += franja.tipoActividad === 'repaso_basico' ? 'Repaso' : 'Estudio';
    html += '</span></h3>';
    if (franja.descripcionRepaso) {
        html += '<p style="margin: 0.5rem 0;"><strong>Descripci√≥n:</strong> ' + escapeHtml(franja.descripcionRepaso) + '</p>';
    }
    html += '</div>';
    
    // Temas
    if (franja.temas) {
        html += '<div style="margin: 1rem 0; padding: 1rem; background-color: #e3f2fd; border-radius: 4px; border-left: 4px solid #2196F3;">';
        html += '<strong>üìö Temas:</strong>';
        html += '<p style="white-space: pre-line; margin: 0.5rem 0;">' + escapeHtml(franja.temas) + '</p>';
        html += '</div>';
    }
    
    // Recursos
    if (franja.recursos) {
        html += '<div style="margin: 1rem 0; padding: 1rem; background-color: #f3e5f5; border-radius: 4px; border-left: 4px solid #9c27b0;">';
        html += '<strong>üì• Recursos:</strong>';
        html += '<p style="white-space: pre-line; margin: 0.5rem 0;">' + escapeHtml(franja.recursos) + '</p>';
        html += '</div>';
    }
    
    // Enlaces
    if (franja.enlaces) {
        html += '<div style="margin: 1rem 0; padding: 1rem; background-color: #e8f5e9; border-radius: 4px; border-left: 4px solid #4caf50;">';
        html += '<strong>üîó Enlaces:</strong>';
        html += '<div style="margin: 0.5rem 0;">';
        const enlaces = franja.enlaces.split('\n').filter(e => e.trim());
        enlaces.forEach(function(enlace) {
            const enlaceTrim = enlace.trim();
            if (enlaceTrim) {
                html += '<a href="' + escapeHtml(enlaceTrim) + '" target="_blank" rel="noopener noreferrer" style="display: block; margin: 0.25rem 0; color: #1976d2; text-decoration: underline;">' + escapeHtml(enlaceTrim) + '</a>';
            }
        });
        html += '</div>';
        html += '</div>';
    }
    
    // Notas
    if (franja.notas) {
        html += '<div style="margin: 1rem 0; padding: 1rem; background-color: #fff3cd; border-radius: 4px; border-left: 4px solid #ffc107;">';
        html += '<strong>üìù Notas del Profesor:</strong>';
        html += '<p style="white-space: pre-line; margin: 0.5rem 0;">' + escapeHtml(franja.notas) + '</p>';
        html += '</div>';
    }
    
    // Tareas
    if (tareas && tareas.length > 0) {
        html += '<div style="margin: 1rem 0; padding: 1rem; background-color: #fff9e6; border-radius: 4px; border-left: 4px solid #ff9800;">';
        html += '<strong>üìã Tareas Asignadas (' + tareas.length + '):</strong>';
        html += '<div style="margin-top: 0.75rem;">';
        tareas.forEach(function(tarea) {
            html += '<div style="padding: 0.75rem; margin: 0.5rem 0; border: 1px solid #ddd; border-radius: 4px; background-color: white;">';
            html += '<div style="display: flex; align-items: center; gap: 0.5rem;">';
            html += '<input type="checkbox" disabled ' + (tarea.completada ? 'checked' : '') + '>';
            html += '<strong style="' + (tarea.completada ? 'text-decoration: line-through; color: #999;' : '') + '">' + escapeHtml(tarea.nombre) + '</strong>';
            html += '</div>';
            if (tarea.descripcion) {
                html += '<div style="font-size: 0.9rem; color: #666; margin-top: 0.5rem; margin-left: 1.5rem;">' + escapeHtml(tarea.descripcion) + '</div>';
            }
            html += '</div>';
        });
        html += '</div>';
        html += '</div>';
    }
    
    html += '</div>';
    
    content.innerHTML = html;
    modal.style.display = 'block';
}

function cerrarModalInfoFranja() {
    const modal = document.getElementById('modalInfoFranja');
    modal.style.display = 'none';
}

function escapeHtml(text) {
    if (!text) return '';
    const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
    };
    return text.replace(/[&<>"']/g, function(m) { return map[m]; });
}

// Cerrar modal al hacer clic fuera de √©l
window.onclick = function(event) {
    const modal = document.getElementById('modalInfoFranja');
    if (event.target == modal) {
        cerrarModalInfoFranja();
    }
}

</script>

<style>
.franja-repaso {
    background-color: #e3f2fd;
    border-left: 4px solid #2196f3;
}

.franja-estudio {
    background-color: #e8f5e9;
    border-left: 4px solid #4caf50;
}

.franja-examenes {
    background-color: #fff3e0;
    border-left: 4px solid #ff9800;
}

.franja-con-tareas {
    border: 2px solid #ff9800;
    font-weight: bold;
}
</style>
{% endblock %}

