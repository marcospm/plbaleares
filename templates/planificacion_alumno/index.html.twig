                                        {% if tareaAsignada.tarea.tema or tareaAsignada.tarea.ley or tareaAsignada.tarea.articulo %}
                                            <div style="margin-top: 0.5rem; display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                                {% if tareaAsignada.tarea.tema %}
                                                    <span class="badge" style="background-color: #2196F3; color: white; font-size: 0.75rem; padding: 0.3rem 0.5rem;">üìö {{ tareaAsignada.tarea.tema.nombre }}</span>
                                                {% endif %}
                                                {% if tareaAsignada.tarea.ley %}
                                                    <span class="badge" style="background-color: #4CAF50; color: white; font-size: 0.75rem; padding: 0.3rem 0.5rem;">üìñ {{ tareaAsignada.tarea.ley.nombre }}</span>
                                                {% endif %}
                                                {% if tareaAsignada.tarea.articulo %}
                                                    <span class="badge" style="background-color: #FF9800; color: white; font-size: 0.75rem; padding: 0.3rem 0.5rem;">üìÑ Art. {{ tareaAsignada.tarea.articulo.numeroCompleto|default(tareaAsignada.tarea.articulo.numero) }}</span>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="card mt-4">
                <div class="card-body text-center">
                    <p class="text-muted">No tienes tareas pendientes. ¬°Excelente trabajo! üéâ</p>
                </div>
            </div>
        {% endif %}
        {% endif %}
    </div>
</div>

