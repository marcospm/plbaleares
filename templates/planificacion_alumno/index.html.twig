                                            style="padding: 0.5rem; margin-bottom: 0.5rem; border-radius: 4px; cursor: pointer; position: relative;"
                                            onclick="toggleFranja(this)"
                                            {% if tieneInfoAdicional %}
                                                data-franja-id="{{ franja.id }}"
                                                data-has-info="true"
                                                onmouseover="this.style.backgroundColor='rgba(0,0,0,0.05)'"
                                                onmouseout="this.style.backgroundColor=''"
                                            {% endif %}>
                                            <div style="font-weight: bold; font-size: 0.9rem; display: flex; align-items: center; justify-content: space-between;">
                                                <span>{{ franja.horaInicio|date('H:i') }}-{{ franja.horaFin|date('H:i') }}</span>
                                                {% if tieneInfoAdicional %}
                                                    <span class="info-icon" 
                                                          style="cursor: pointer; font-size: 1.2rem; margin-left: 0.5rem;"
                                                          data-franja-data="{{ {
                                                              'id': franja.id,
                                                              'horaInicio': franja.horaInicio|date('H:i'),
                                                              'horaFin': franja.horaFin|date('H:i'),
                                                              'tipoActividad': franja.tipoActividad,
                                                              'descripcionRepaso': franja.descripcionRepaso|default(''),
                                                              'temas': franja.temas|default(''),
                                                              'recursos': franja.recursos|default(''),
                                                              'enlaces': franja.enlaces|default(''),
                                                              'notas': franja.notas|default('')
                                                          }|json_encode|e('html_attr') }}"
                                                          data-tareas-data="{{ tareasFranja|map(t => {'id': t.id, 'nombre': t.tarea.nombre, 'descripcion': t.tarea.descripcion, 'completada': t.completada, 'tema': t.tarea.tema ? {'nombre': t.tarea.tema.nombre} : null, 'ley': t.tarea.ley ? {'nombre': t.tarea.ley.nombre} : null, 'articulo': t.tarea.articulo ? {'numero': t.tarea.articulo.numeroCompleto|default(t.tarea.articulo.numero)} : null})|json_encode|e('html_attr') }}"
                                                          onclick="event.stopPropagation(); mostrarInfoFranjaDesdeData(this);"
                                                          title="Ver m√°s informaci√≥n">
                                                        ‚ÑπÔ∏è
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <div style="font-size: 0.85rem;">
                                                {% if franja.tipoActividad == 'repaso_basico' %}
                                                    <span class="badge badge-info">Repaso</span>
                                                    <div>{{ franja.descripcionRepaso }}</div>
                                                {% elseif franja.tipoActividad == 'realizar_examenes' %}
                                                    <span class="badge" style="background-color: #FF9800; color: white;">üìù Realizar Ex√°menes</span>
                                                    {% if franja.descripcionRepaso %}
                                                        <div>{{ franja.descripcionRepaso }}</div>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge badge-success">Estudio</span>
                                                    {% if franja.descripcionRepaso %}
                                                        <div>{{ franja.descripcionRepaso }}</div>
                                                    {% endif %}
                                                    {% if tareasFranja|length > 0 %}
                                                        <div class="mt-1">
                                                            <strong>{{ tareasFranja|length }} tarea(s)</strong>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                            
                                            {% if tareasFranja|length > 0 %}
                                                <div class="tareas-container" style="display: none; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid #ddd;">
                                                    {% for tareaAsignada in tareasFranja %}
                                                        <div class="tarea-item" style="margin-bottom: 0.5rem;">
                                                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                                                <input type="checkbox" 
                                                                       class="tarea-checkbox" 
                                                                       data-tarea-id="{{ tareaAsignada.id }}"
                                                                       data-token-completada="{{ csrf_token('marcar_completada' ~ tareaAsignada.id) }}"
                                                                       data-token-pendiente="{{ csrf_token('marcar_pendiente' ~ tareaAsignada.id) }}"
                                                                       {% if tareaAsignada.completada %}checked{% endif %}
                                                                       onchange="marcarTarea(this, {{ tareaAsignada.id }})">
                                                                <span {% if tareaAsignada.completada %}style="text-decoration: line-through; color: #999;"{% endif %}>
                                                                    {{ tareaAsignada.tarea.nombre }}
                                                                </span>
                                                            </div>
                                                            <div style="font-size: 0.75rem; color: #666; margin-left: 1.5rem;">
                                                                {{ tareaAsignada.tarea.descripcion|slice(0, 50) }}{% if tareaAsignada.tarea.descripcion|length > 50 %}...{% endif %}
                                                                {% if tareaAsignada.tarea.tema or tareaAsignada.tarea.ley or tareaAsignada.tarea.articulo %}
                                                                    <div style="margin-top: 0.25rem; display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                                                        {% if tareaAsignada.tarea.tema %}
                                                                            <span class="badge" style="background-color: #2196F3; color: white; font-size: 0.7rem; padding: 0.2rem 0.4rem;">üìö {{ tareaAsignada.tarea.tema.nombre }}</span>
                                                                        {% endif %}
                                                                        {% if tareaAsignada.tarea.ley %}
                                                                            <span class="badge" style="background-color: #4CAF50; color: white; font-size: 0.7rem; padding: 0.2rem 0.4rem;">üìñ {{ tareaAsignada.tarea.ley.nombre }}</span>
                                                                        {% endif %}
                                                                        {% if tareaAsignada.tarea.articulo %}
                                                                            <span class="badge" style="background-color: #FF9800; color: white; font-size: 0.7rem; padding: 0.2rem 0.4rem;">üìÑ Art. {{ tareaAsignada.tarea.articulo.numeroCompleto|default(tareaAsignada.tarea.articulo.numero) }}</span>
                                                                        {% endif %}
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

