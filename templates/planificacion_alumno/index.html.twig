{% extends 'base.html.twig' %}

{% block title %}Mi Planificaci√≥n Semanal{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <h1 class="mb-0">{% if sinPlanificacion is defined and sinPlanificacion %}Mi Planificaci√≥n Semanal{% else %}Mi Planificaci√≥n Semanal{% endif %}</h1>
            {% if sinPlanificacion is not defined or not sinPlanificacion %}
            <div class="week-navigation-wrapper">
                {# Bot√≥n Semana Anterior #}
                {% if semanaAnterior %}
                    <a href="{{ path('app_planificacion_alumno_index', {'semana': semanaAnterior|date('Y-m-d')}) }}" 
                       class="week-nav-btn week-nav-btn-prev" 
                       title="Semana anterior">
                        <span class="week-nav-icon">‚Äπ</span>
                    </a>
                {% else %}
                    <button type="button" class="week-nav-btn week-nav-btn-prev" disabled title="No hay semana anterior">
                        <span class="week-nav-icon">‚Äπ</span>
                    </button>
                {% endif %}
                
                {# Informaci√≥n de la semana #}
                <div class="week-info">
                    {% set domingoSemana = lunesSemana|date_modify('+6 days') %}
                    <div class="week-date-range">
                        {{ lunesSemana|date('d/m') }} - {{ domingoSemana|date('d/m/Y') }}
                    </div>
                    <div class="week-label">
                        {% if esSemanaActual %}
                            <span class="week-badge week-badge-current">üìÖ Semana Actual</span>
                        {% else %}
                            <span class="week-badge">Semana del {{ lunesSemana|date('d') }} al {{ domingoSemana|date('d') }}</span>
                        {% endif %}
                    </div>
                </div>
                
                {# Bot√≥n Semana Siguiente #}
                <a href="{{ path('app_planificacion_alumno_index', {'semana': semanaSiguiente|date('Y-m-d')}) }}" 
                   class="week-nav-btn week-nav-btn-next" 
                   title="Semana siguiente">
                    <span class="week-nav-icon">‚Ä∫</span>
                </a>
                
                {# Bot√≥n Hoy #}
                {% if not esSemanaActual %}
                    <a href="{{ path('app_planificacion_alumno_index') }}" 
                       class="week-nav-btn-today" 
                       title="Ir a la semana actual">
                        Hoy
                    </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
        {% if sinPlanificacion is not defined or not sinPlanificacion %}
        <div style="margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid #dee2e6;">
            <form id="pdf-form" method="get" action="{{ path('app_planificacion_alumno_pdf_mensual') }}" style="display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;">
                <label class="form-label" style="font-weight: 500; font-size: 0.9rem; margin-bottom: 0;">üìÑ PDF:</label>
                <select name="mes" id="pdf-mes" class="form-control form-control-sm" style="width: auto; min-width: 120px; font-size: 0.85rem; padding: 0.25rem 0.5rem;" required>
                    <option value="">Mes</option>
                    {% set meses = {1: 'Enero', 2: 'Febrero', 3: 'Marzo', 4: 'Abril', 5: 'Mayo', 6: 'Junio', 7: 'Julio', 8: 'Agosto', 9: 'Septiembre', 10: 'Octubre', 11: 'Noviembre', 12: 'Diciembre'} %}
                    {% for i in 1..12 %}
                        <option value="{{ i }}" {% if 'now'|date('n') == i %}selected{% endif %}>
                            {{ meses[i] }}
                        </option>
                    {% endfor %}
                </select>
                <select name="anio" id="pdf-anio" class="form-control form-control-sm" style="width: auto; min-width: 80px; font-size: 0.85rem; padding: 0.25rem 0.5rem;" required>
                    {% set anioActual = 'now'|date('Y') %}
                    {% for i in (anioActual - 1)..(anioActual + 1) %}
                        <option value="{{ i }}" {% if anioActual == i %}selected{% endif %}>{{ i }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-primary btn-sm" style="font-size: 0.85rem; padding: 0.25rem 0.75rem;">
                    üì• Generar
                </button>
            </form>
        </div>
        <script>
            (function() {
                function initPdfForm() {
                    const form = document.getElementById('pdf-form');
                    if (form) {
                        // Remover listeners anteriores si existen
                        const newForm = form.cloneNode(true);
                        form.parentNode.replaceChild(newForm, form);
                        
                        newForm.addEventListener('submit', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            const mes = document.getElementById('pdf-mes').value;
                            const anio = document.getElementById('pdf-anio').value;
                            if (mes && anio) {
                                const url = newForm.action + '?mes=' + encodeURIComponent(mes) + '&anio=' + encodeURIComponent(anio);
                                window.open(url, '_blank');
                            } else {
                                alert('Por favor, selecciona mes y a√±o');
                            }
                            return false;
                        });
                    }
                }
                
                // Inicializar en DOMContentLoaded
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', initPdfForm);
                } else {
                    initPdfForm();
                }
                
                // Inicializar tambi√©n en eventos de Turbo
                document.addEventListener('turbo:load', initPdfForm);
                document.addEventListener('turbo:frame-load', initPdfForm);
            })();
        </script>
        {% endif %}
    </div>
    <div class="card-body">
        {% if sinPlanificacion is defined and sinPlanificacion %}
            <div class="alert alert-warning text-center" style="padding: 2rem; margin: 2rem 0;">
                <h4 style="margin-bottom: 1rem;">üìÖ No tienes planificaciones asignadas</h4>
                <p style="font-size: 1.1rem; margin-bottom: 1.5rem;">
                    Para empezar con una planificaci√≥n, contacta con tu profesor.
                </p>
                <a href="{{ path('app_contacto') }}" class="btn btn-primary">Contactar con el Profesor</a>
            </div>
        {% elseif planificaciones|length > 1 %}
            <div class="alert alert-info mb-3">
                <strong>Planificaciones activas:</strong> Tienes {{ planificaciones|length }} planificaciones asignadas. Las franjas horarias se muestran agrupadas por d√≠a.
            </div>
        {% endif %}
        
        {% if sinPlanificacion is not defined or not sinPlanificacion %}
        <div class="mb-4">
            <h3>Resumen de la Semana</h3>
            <div class="d-flex gap-3">
                <div class="badge badge-info">Total: {{ resumen.total }}</div>
                <div class="badge badge-success">Completadas: {{ resumen.completadas }}</div>
                <div class="badge badge-warning">Pendientes: {{ resumen.pendientes }}</div>
                {% if resumen.vencidas > 0 %}
                    <div class="badge badge-danger">Vencidas: {{ resumen.vencidas }}</div>
                {% endif %}
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" style="min-width: 800px;">
                <thead>
                    <tr>
                        <th style="width: 120px;">Hora</th>
                        {% for dia in 1..7 %}
                            <th>
                                {% set fechaDia = lunesSemana|date_modify('+' ~ (dia-1) ~ ' days') %}
                                <div>{{ fechaDia|date('l')|trans }}</div>
                                <div style="font-size: 0.85rem; color: #666;">{{ fechaDia|date('d/m') }}</div>
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% set horas = [] %}
                    {% for dia in 1..7 %}
                        {% for franja in franjasPorDia[dia] %}
                            {% set horaInicio = franja.horaInicio|date('H:i') %}
                            {% if horaInicio not in horas %}
                                {% set horas = horas|merge([horaInicio]) %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    {% set horas = horas|sort %}

                    {% for hora in horas %}
                        <tr>
                            <td><strong>{{ hora }}</strong></td>
                            {% for dia in 1..7 %}
                                <td>
                                    {% set fechaDia = lunesSemana|date_modify('+' ~ (dia-1) ~ ' days') %}
                                    {% set franjasDelDiaYHora = franjasPorDia[dia]|filter(f => f.horaInicio|date('H:i') == hora) %}
